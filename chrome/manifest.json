{
  "name": "Keep It",
  "version": "1.0",
  "manifest_version": 1,
  "description": "Keep it, Find it!",
  "options_page": "options.html",
  "page_action": {
    "default_icon": "keepit.png", // optional
    "default_title": "Kifi"//,    // optional; shown in tooltip
    //"default_popup": "keep.html"    // optional
  },  
  "background_page" : "keep.html",
  "content_scripts" : [
    {
      "matches" : [
        "http://www.google.com/*",
        "https://www.google.com/*",
        "http://www.google.co.il/*",
        "https://www.google.co.il/*"
      ],
      "js" : ["jquery-1.7.2.min.js", "google_inject.js"],
      "css": ["keepit.css"],
      "run_at" : "document_end",//document_start
      "all_frames" : false
    },
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["jquery-1.7.2.min.js", "contentscript.js", "mustache.js", "hover.js"],
      "css": ["keepit.css", "hover.css", "social_window.css"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
  "permissions": [
    "tabs",
    "cookies",
    "bookmarks",
    "http://*/",
    "https://*/",
    "https://www.netwallet.com/",
    "http://www.netwallet.com/",
    "unlimitedStorage"
  ],
  "icons" : {
    "256" : "kifi.png"
  }
}
