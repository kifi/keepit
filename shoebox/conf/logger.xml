<configuration>
  <!-- always a good activate OnConsoleStatusListener -->
  <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />  

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	   <encoder>
	     <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
	   </encoder>
  </appender>

  <logger name="ru.circumflex" level="ERROR"/>
  <logger name="com.mysql" level="ERROR"/>
  <logger name="com.ning.http" level="INFO"/>
  <logger name="com.keepit" level="DEBUG"/>
  <logger name="com.keepit.common.social" level="INFO"/>
  <logger name="com.keepit.scraper" level="WARN"/>
  <logger name="com.keepit.search" level="WARN"/>
  <logger name="securesocial.core" level="WARN"/>
                 
  <root level="INFO">          
    <appender-ref ref="STDOUT" />
  </root>  
</configuration>