keepBorderRadius = 3px

.kf-keep
.kf-keep-selection-tools
  box-sizing: border-box
  box-shadow: defaultBoxShadow
  border: defaultBorder
  background-color: white
  border-radius: keepBorderRadius
  margin-top: 10px

.kf-keep-selection-tools-body
  padding: 0 0 7px 27px

.kf-keep-selection-tags
  overflow: hidden

.kf-keep-selection-tags-list
  overflow: hidden

.kf-keep-selection-tags-done
  float: right

.kf-edit-keeps-label
.kf-keep-selection-tags-done
  color: linkColor
  cursor: pointer
  user-select: none

.kf-keep-selection-tags-done
  vertical-align: middle
  font-size: 13px
  font-smoothing: antialiased
  line-height: 33px

.kf-keep-selection-tools
  margin-left: 3px
  margin-right: 25px

.kf-keep-selected-count
  text-align: center
  font-size: 14px
  padding: 10px 0 5px

.kf-keep-selected-count-number
  font-size: 28px
  font-family: "Georgia", Arial, sans-serif
  font-weight: bold

.kf-keep-selection-options
  position: relative
  background-color: #eee
  color: linkColor
  font-size: 13px
  font-smoothing: antialiased
  text-align: center
  user-select: none
  padding: 12px 20px
  margin: 7px 20px

.kf-keep-selection-options-mask
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  display: none

.kf-keep-selection-options.disabled
  background-color: #f5f5f5

  .kf-keep-selection-option
    color: textLightGrey

  .kf-keep-selection-options-mask
    display: block

.kf-keep-selection-tags
  margin: 0px 20px

.kf-keep-selection-option
  display: inline-block

  span
    cursor: pointer

.kf-keep-selection-option + .kf-keep-selection-option::before
  content: "|"
  padding: 5px

.kf-keep
  position: relative

  &.detailed
    background-color: #eff2f7

  &.selected.detailed
    background-color: #F7F7F5

  &.toggling
    overflow: hidden
    transition: height .3s ease-in-out

  &.ng-hide-add
  &.ng-hide-remove
    transition: max-height 0.3s linear
    display: block !important

  &.ng-hide-add.ng-hide-add-active
  &.ng-hide-remove
    max-height: 0

  &.ng-hide-add
  &.ng-hide-remove.ng-hide-remove-active
    max-height: 200px

  &.editing
    border-radius: 0 3px 3px

    .kf-keep-edit-tools
      display: block

.kf-keep-body
  padding: 0 20px 5px

.kf-keep-contents
  padding: 25px 0 10px

.kf-keep-who
  padding: 3px 35px 5px 0

.kf-keep-tag
  margin-top: 3px

.kf-keep-footer
  background-color: #f9f9f9
  font-size: 12px
  font-weight: 200
  color: #5983bd
  padding: 0 20px
  line-height: 37px

  a:active
    color: #92add3

.kf-keep-tags
  padding: 7px 0

.kf-keep-footer-link a
  cursor: pointer

  &:hover
    text-decoration: underline

  &:active
    text-decoration: underline

.kf-keep-footer-link + .kf-keep-footer-link:before
    content: "Â·"
    color: textGreyColor
    padding: 0 6px 0 5px

.kf-keep-time
  font-size: 13px
  color: #99a3b3
  font-family: "Georgia", Arial, sans-serif
  margin-left: 10px

.kf-keep-edit-tools
  display: none
  position: absolute
  top: -1px
  bottom: 0
  left: -28px
  width: 28px
  height: 110px
  background-color: #fff
  border: defaultBorder
  border-right: none
  border-radius: keepBorderRadius 0 0 keepBorderRadius
  box-sizing: border-box

.kf-keep-checkbox-icon
  float: left
  margin: 15px 0 0 5px

.kf-keep-handle
  cursor: move
  margin-left: 9px
  margin-top: 18px

.kf-keep-big-image-container
  width: 100%

.kf-keep-content-line
  padding: 0
  width: 100%
  display: table
  padding-top: 14px

.kf-keep-big-image
  margin: 4px 0 11px

.kf-keep-big-image
  display: block
  max-width: 100%
  max-height: 400px
  margin-left: auto
  margin-right: auto

.kf-keep-small-image
  display:table-cell
  width: 150px
  vertical-align: top
  padding-top: 5px
  min-width: 90px

  @media screen and (min-width: 1150px) and (max-width: 1250px)
    width: 150px

  @media screen and (min-width: 1024px) and (max-width: 1149px)
    width: 100px

  @media screen and (min-width: 800px) and (max-width: 950px)
    width: 150px

  @media screen and (max-width: 800px)
    display: none

.kf-keep-image
  width: 100%

.kf-keep-small-image + .kf-keep-info
  padding-left: 20px

.kf-keep-info
  vertical-align: top
  display: table-cell

.kf-keep-title
  max-width: 100%
  font-size: 20px
  font-weight: 500
  line-height: 24px
  font-smoothing: antialiased
  word-break: break-word

  a[href]
    color: textBlackColor

.kf-keep-loading
  padding-right: 5px

.kf-keep-subtitle
  line-height: 17px

.kf-keep-description
  font-size: 16px
  line-height: 23px
  margin-top: 5px
  font-family: "Georgia", Arial, sans-serif
  font-smoothing: antialiased
  color: textBlackColor
  word-wrap: break-word
  word-break: break-word

.kf-dyn-positioned
  position: absolute
  overflow: hidden
  margin-right: 50px

.kf-keep-description-sizer
  position: absolute
  visibility: hidden
  z-index: -1
  top: -999px
  left: -999px

.kf-keep-url
  display: inline-block
  font-size: 13px
  color: #99a3b3
  vertical-align: middle
  font-smoothing: antialiased
  font-weight: 500
  long-text()

  .kf-keep.example &
    color: #c6cbd3

// tag
.kf-keep-tags

  &:empty
    border-bottom-width: 0

@-moz-document url-prefix()
  .kf-keep-tags
    background-position: 0 1px


.kf-keep-tag
input.kf-keep-tag-input
  border: 1px solid blueColor
  border-radius: 3px
  margin-right: 4px
  vertical-align: middle

.kf-keep-tag
input.kf-keep-tag-input
.kf-keep-tag-opt
.kf-keep-tag-hidden
  max-width: 150px
  font-size: 12px
  font-smoothing: antialiased
  color: linkColor

.kf-keep-tag
input.kf-keep-tag-input
  padding: 2px 6px 1px
  margin-bottom: 3px

.kf-keep-tag-opt
  padding: 3px 6px 3px

input.kf-keep-tag-input
.kf-keep-tag-opt
  long-text()

input.kf-keep-tag-input
  width: 100%
  min-width: 141px

.kf-keep-tag
  display: inline-block
  position: relative
  overflow: hidden
  white-space: nowrap

  &.removed
    width: 0 !important
    transition: width .12s ease-in-out

.kf-keep-tag-link
  padding: 0 11px 0 0
  font-smoothing: antialiased
  long-text()

  &:active
    color: clearBlueColor

.kf-keep-tag-x
  position: absolute
  right: 5px
  top: 1px
  cursor: pointer

.kf-keep-tag-opts-container
  position: absolute

.kf-keep-tag-opts
  position: relative
  top: -4px
  border: 1px solid blueColor
  border-radius: 3px
  background-color: #fff
  z-index: 1
  min-width: 153px

.kf-keep-tag-opt
  cursor: pointer

.kf-keep-tag-opt.current
  background-color: #eee

.kf-keep-tag-opt-new
  padding: 2px 3px 1px 6px

.kf-keep-tag-opt-new-text
  long-text()

.kf-keep-tag-opt-new-label
  float: right
  font-size: 9px
  padding: 2px 3px 1px 3px
  margin-left: 5px
  background-color: blueColor
  color: #fff

.kf-keep-tag-hidden
  position: absolute
  white-space: nowrap
  visibility: hidden

.kf-keep-private
  float: right
  margin: 0 2px

  .kf-keep-private-label
    padding-right: 6px
    color: textDarkGrey
    font-size: 13px
    font-weight: 200
    font-smoothing: antialiased
    font-style: italic
    vertical-align: middle

// preview button
.kf-keep-hover-button-wrapper
  display: none
  position: absolute
  right: 0
  top: 0
  width: 1px
  height: 100%

  .kf-keep:hover &
    display: block

.kf-keep-hover-button-table
  display: table
  width: 100%
  height: 100%

.kf-keep-hover-button-cell
  display: table-cell
  vertical-align: middle

.kf-keep-hover-button
  position: absolute
  right: 16px
  padding: 7px 12px
  border: 1px solid transparent
  border-radius: 9px
  font-size: 11px
  color: #fff
  background: #67829c
  cursor: pointer
  user-select: none

  .kf-keep.detailed &
    background: #67829c

.kf-keep-button-close
  display: none

  .kf-keep.detailed &
    display: block

.kf-keep.detailed .kf-keep-button-preview
  display: none

.kf-tag-list>li
  display: inline-block

.kf-keep-add-tag-button
  cursor: pointer

.kf-keep-loader
  position: relative
  top: 2px
  width: 16px
  height: 16px
  border-radius: 50%
  display: inline-block
  vertical-align: middle
  background-color: #6fa6ef
  margin: 0 8px 5px 0

.kf-keep-loader
.kf-keep-loader:before
.kf-keep-loader:after
    animation: 1s infinite linear

.kf-keep-loader:before
.kf-keep-loader:after
    width: 100%
    height: 100%
    border-radius: 50%
    position: absolute
    top: 0
    left: 0

.kf-keep-loader
  animation-name: kf-keep-loader

@keyframes kf-keep-loader {
  from {
    transform: scale(0)
    opacity: 1
  }
  to {
    transform: scale(1)
    opacity: 0
  }
}
