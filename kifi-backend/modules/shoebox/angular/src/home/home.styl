.kf-home
  display: flex
  margin: 0 auto
  justify-content: center
  align-items: center
  flex-direction: column
  flex-flow: column-wrap

  @media (min-width: appMinWidth)
    align-items: initial
    flex-direction: row
    flex-flow: row wrap

.kf-home-items
  max-width: 600px
  width: 100%
  margin-top: 20px

  @media (min-width: appMinWidth)
    width: 75%

  .kf-feed-items
    width: auto

  .kf-keep
    max-width: none

.kf-home-sidebar
  width: 250px
  margin-top: 20px

  @media (min-width: appMinWidth)
    align-self: flex-start

  > * + *
    margin-top: 10px
