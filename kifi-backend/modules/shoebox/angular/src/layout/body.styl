.kf-body-container
  display: flex
  flex-direction: row-reverse

  .kf-body-container-content
    flex-grow: 1
    display: flex
    flex-direction: column
    height: 'calc(100vh - %s)' % appHeaderHeightWithNav
    margin-top: appHeaderHeightWithNav
    overflow: auto

  .kf-body-container-content.kf-user-logged-out
    margin-top: appHeaderHeight2

    @media (max-height: appHeaderHeight1MaxDim) and (max-width: appHeaderHeight1MaxDim)
      margin-top: appHeaderHeight1

  .kf-body-container-content-main
    width: 100%
    position: relative
