.kf-header
  position: fixed
  top: 0
  width: 100%
  height: 62px
  background-color: #333
  z-index: 500
  user-select: none

.kf-header-inner
  height: 100%
  max-width: appMaxWidth
  margin: 0 auto
  transition: padding 0.5s
  box-sizing: border-box

.kf-header-left
  float: left
  height: 100%
  margin-left: 30px
  line-height: 62px
  box-sizing: border-box
  text-align: center

.kf-header-toggle-menu
.kf-header-left-separator
.kf-header-profile-picture
.kf-header-logo
  vertical-align: middle

.kf-header-toggle-menu
.kf-header-left-separator
  display: none

.kf-header-profile-picture
.kf-header-logo
  display: inline-block

.kf-header-toggle-menu
  cursor: pointer
  margin: 0 13px

.kf-header-left-separator
  height: 35px
  border: 1px solid #7d7d7d

.kf-header-profile-picture
  width: 32px
  height: 32px
  margin: 0 6px 0 14px
  border-radius: 100%
  background-size: 100%

.kf-header-logo
  height: 19px

@media (max-width: 1024px)
  .kf-header-toggle-menu
  .kf-header-left-separator
    display: inline-block

  .kf-header-left
    margin-left: 20px

  .kf-header-toggle-menu
    &.open
      display: none
    &.closed
      display: inline-block

  .kf-sidebar-active
    .kf-header-toggle-menu
      &.open
        display: inline-block
      &.closed
        display: none

a.kf-header-callout
  position: relative
  top: 12px
  width: 60px
  font-size: 10px
  line-height: 10px
  font-weight: 300
  font-style: italic
  font-smoothing: antialiased
  color: #fff
  text-decoration: none

a.kf-header-callout:hover
  text-decoration: underline

.kf-header-right
  overflow: hidden
  height: 100%
  margin-right: 60px
  line-height: 62px
  text-align: right
  font-size: 14px
  box-sizing: border-box

  .kf-dropdown-menu
    display: none

    /*.active
      background-color: #f8f8f8*/ // maybe find something better
    :hover
      background-color: #eee
    :active
      background-color: #ccc

    .kf-dropdown-menu-item
      cursor: pointer

  .sprite
    cursor: pointer
    margin: 0 5px

  @media screen and (max-width: 1280px)
    margin-right: 30px

  .sprite-add-link
    &:hover
      sprite2x($add-link-active)

.kf-header-icon-hover-container
  display: inline-block

  &:hover
    .kf-dropdown-menu
      display: block
      margin-top: -10px
      margin-left: -128px
    .on-icon
      display: none

.kf-header-icon-friends
  position: relative

.kf-friend-invite-badge
  width: 12px
  height: 12px
  border-radius: 50%
  background-color: redColor
  animation: badge-zoom 1s infinite linear alternate

.kf-friend-invite-badge.on-icon
  position: absolute
  top: -2px
  left: 21px
.kf-friend-invite-badge.on-item
  float: left
  margin-left: 16px
  margin-top: 9px

@keyframes badge-zoom {
  from {
    transform: scale(0.8)
  }
  to {
    transform: scale(1)
  }
}
