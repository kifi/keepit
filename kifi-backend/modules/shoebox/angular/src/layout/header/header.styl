.kf-header
  position: fixed
  top: 0
  width: 100%
  height: 62px
  background-color: #333
  z-index: 1000000

.kf-header-inner
  height: 100%

.kf-header-left
  float: left
  height: 100%
  margin-left: 110px
  line-height: 62px
  box-sizing: border-box
  text-align: center

.kf-header-logo
  position: relative
  top: 9px
  display: inline-block
  width: 51px
  height: 29px
  background: url(/img/kifi-logo.png) 0/100%

a.kf-header-callout
  position: relative
  top: 12px
  width: 60px
  font-size: 10px
  line-height: 10px
  font-weight: 300
  font-style: italic
  font-smoothing: antialiased
  color: #fff
  text-decoration: none

a.kf-header-callout:hover
  text-decoration: underline

.kf-header-right
  overflow: hidden
  height: 100%px
  margin-right: 20px
  line-height: 62px
  text-align: right
  font-size: 14px
  box-sizing: border-box

  a[href]
    padding: 10px 15px
    color: white
    vertical-align: middle

    &:hover
      color: #ccc

    &:active
      color: white
