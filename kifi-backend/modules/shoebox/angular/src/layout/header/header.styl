.kf-header
  position: fixed
  top: 0
  width: 100%
  height: 62px
  background-color: #333
  z-index: 500
  user-select: none

.kf-header-inner
  height: 100%
  max-width: userAppMaxWidth
  margin: 0 auto
  transition: padding 0.5s
  box-sizing: border-box

.kf-header-left
  float: left
  height: 100%
  width: 240px
  margin-left: 30px
  line-height: 62px
  box-sizing: border-box

.kf-header-toggle-menu
.kf-header-left-separator
.kf-header-profile-picture
.kf-header-logo
  vertical-align: middle

.kf-header-toggle-menu
.kf-header-left-separator
  display: none

.kf-header-profile-picture
.kf-header-logo
  display: inline-block

.kf-header-toggle-menu
  cursor: pointer
  margin: 0 13px

.kf-header-left-separator
  height: 35px
  border: 1px solid #7d7d7d

.kf-header-profile-picture
  width: 32px
  height: 32px
  margin: 0 6px 0 14px
  border-radius: 100%
  background-size: 100%

.kf-header-logo
  height: 19px

@media (max-width: 1024px)
  .kf-header-toggle-menu
  .kf-header-left-separator
    display: inline-block

  .kf-header-left
    margin-left: 20px

  .kf-header-toggle-menu
    &.open
      display: none
    &.closed
      display: inline-block

  .kf-sidebar-active
    .kf-header-toggle-menu
      &.open
        display: inline-block
      &.closed
        display: none

a.kf-header-callout
  position: relative
  top: 12px
  width: 60px
  font-size: 10px
  line-height: 10px
  font-weight: 300
  font-style: italic
  font-smoothing: antialiased
  color: #fff
  text-decoration: none

a.kf-header-callout:hover
  text-decoration: underline



.kf-header-search-bar
  box-sizing: border-box
  padding-top: 8px
  max-width: 820px
  width: calc(100% - 270px - 270px)
  float: left

.kf-query-lib-container
  position: relative
  white-space: nowrap
  z-index: 1
  width: 90%
  margin-left: 30px
  margin-top: 5px
  border: defaultBorder
  border-radius: 3px
  box-sizing: border-box
  background-color: #fff
  padding-bottom: 5px
  padding-top: 5px

.kf-query-lib
  display: inline-block
  width: calc(70% - 100px)
  position: relative
  margin-left: 5px

  input
    width: 100%
    color: textDarkGray

.kf-query-lib:focus + .kf-query-lib-icon
  sprite2x($search-icon-active)

.kf-query-lib-icon
  display: inline-block
  sprite2x($search-icon-default)
  margin-left: 5px
  vertical-align: bottom

  &.focused
    sprite2x($search-icon-active)

.kf-header-search-bar-lib-chip
  display: inline-block
  border: none
  box-sizing: border-box
  border-radius: 8px
  padding: 2px 7px 2px 14px
  position: relative
  top 1px
  max-width: 35%

  &.secret
    background-color: #f06463

  &.discoverable
    background-color: #333

  &.published
    background-color: #73c785

.kf-search-bar-lib-owner-img
  width: 23px
  height: 23px
  position: relative
  left: 14px
  z-index: 1
  border-radius: 100%

.kf-search-bar-lib-name
  display: inline-block
  font-size: 13px
  font-weight: 100
  color: #fff
  max-width: calc(100% - 18px)
  padding-left: 5px
  overflow: hidden
  text-overflow: ellipsis
  position: relative
  top: 2px

.kf-search-bar-lib-name-clear
  display: inline-block
  margin-left: 5px
  color: #fff
  cursor: pointer
  position: relative
  top: -1px

.kf-search-bar-clear
  margin-top: 6px
  margin-right: 5px
  float: right
  cursor: pointer

.kf-header-right
  overflow: hidden
  height: 100%
  margin-right: 60px
  line-height: 62px
  text-align: right
  font-size: 14px
  box-sizing: border-box

  .kf-dropdown-menu
    display: none

    /*.active
      background-color: #f8f8f8*/ // maybe find something better
    :hover
      background-color: #eee
    :active
      background-color: #ccc

    .kf-dropdown-menu-item
      cursor: pointer

  .sprite
    cursor: pointer
    margin: 0 5px

  @media screen and (max-width: 1280px)
    margin-right: 30px

  .sprite-add-link
    &:hover
      sprite2x($add-link-active)

.kf-header-manage-tags
  height: 32px
  width: 32px

.kf-header-icon-hover-container
  display: inline-block

  &:hover
    .kf-dropdown-menu
      display: block
      margin-top: -10px
      margin-left: -128px
    .on-icon
      display: none

.kf-header-icon-friends
  position: relative

.kf-friend-invite-badge
  width: 12px
  height: 12px
  border-radius: 50%
  background-color: redColor
  animation: badge-zoom 1s infinite linear alternate

.kf-friend-invite-badge.on-icon
  position: absolute
  top: -2px
  left: 21px
.kf-friend-invite-badge.on-item
  float: left
  margin-left: 16px
  margin-top: 9px

@keyframes badge-zoom {
  from {
    transform: scale(0.8)
  }
  to {
    transform: scale(1)
  }
}
