.kf-scrollable-pane
  width: calc(100% - 270px)
  min-height: 100%
  padding-left: 270px
  background-color: appBackgroundColor

@media only screen and (max-width: 1070px)
  .kf-scrollable-pane
    width: 100%
    padding-left: 0
    -webkit-transition: padding-left sidebarTransitionDuration;
    transition: padding-left sidebarTransitionDuration;

  .kf-sidebar-active .kf-scrollable-pane
      padding-left: 270px
