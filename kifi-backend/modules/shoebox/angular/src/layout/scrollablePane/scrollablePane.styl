.kf-scrollable-pane
  width: calc(100% - 270px)
  padding-left: 270px

@media only screen and (max-width: 900px)
  .kf-scrollable-pane
    width: 100%
    padding-left: 0
    -webkit-transition: padding-left 0.3s;
    transition: padding-left 0.3s;

  .kf-sidebar-active .kf-scrollable-pane
      padding-left: 270px
