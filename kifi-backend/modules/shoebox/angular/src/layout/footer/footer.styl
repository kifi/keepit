.kf-footer
  font-size: 13px
  font-smoothing: antialiased
  padding: 0 40px 0 20px

.kf-help-rank-help
  font-weight: 300
  font-size: 115%

  .kf-emph
    font-weight: 400

  .kf-block
    margin: 10px 0px

.kf-footer-header
  margin: 12px 0 10px
  font-size: 20px
  font-weight: 400
  line-height: 36px

.kf-footer-help-rank-header
  display: inline

.kf-footer-help-rank-icon
  width: 26px
  margin-right: 7px

.kf-footer-help-rank-item
  cursor: pointer
  width: 100%
  margin-bottom: 10px
  
.kf-footer-help-rank-number
  font-size: 28px
  margin-right: 14px
  font-family: "Georgia", Arial, sans-serif
  font-weight: bold

.kf-footer-help-rank-description
  white-space: pre-wrap
  line-height: 18px

.kf-footer-essentials-list
  line-height: 40px

.kf-footer-more-list
  line-height: 32px

.kf-footer-item-link

  &:hover
    background-color: #f7fafe

  &:active
    background-color: #eff2f7

.kf-footer-item-icon
  display: inline-block
  font-size: 0
  width: 30px
  margin-right: 16px
  background-repeat: no-repeat
  vertical-align: middle

.kf-footer-item-icon-tutorial
  background-image: url(../img/viewtutorial.png)
  background-size: 24px 23px
  height: 23px
  background-position: 4px 0px

.kf-footer-item-icon-install
  background-image: url(../img/splash.png)
  background-position: 0 -246px
  background-size: 30px auto
  height: 30px

.kf-footer-item-icon-file-import
  background-image: url(../img/splash.png)
  background-position: 0 -217px
  background-size: 30px auto
  height: 30px

.kf-footer-item-icon-friends
  background-image: url(../img/splash.png)
  background-position: 0 -48px
  background-size: 30px auto
  height: 24px

.kf-footer-item-icon-support
  background-image: url(../img/supporticon.png)
  background-size: 24px 24px
  height: 24px

.kf-footer-item-icon-contact
  background-image: url(../img/contacticon.png)
  background-size: 23px 18px
  height: 18px

.kf-footer-item-icon-blog
  background-image: url(../img/blogicon.png)
  background-size: 25px 19px
  height: 19px

html[data-kifi-ext] .install-kifi
  display: none

.import-bookmarks
  display: none

html[data-kifi-ext] .import-bookmarks
  display: block

.kf-footer-separator
  width: 100%
  padding: 15px 0 0
  border-bottom: 1px solid borderColor
