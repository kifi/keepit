.kf-library-menu-help
  position: fixed
  top: 58px
  border-radius: 10px
  background: #71c885
  z-index: 501
  opacity: 1
  transition: opacity 1s, top 0.6s

  &::before
    position: absolute
    top: -30px
    left: 13px
    border: 15px solid transparent
    border-bottom: 15px solid #71c885
    width: 0
    height: 0
    content: ''

  &.ng-hide
    opacity: 0
    top: 68px
    transition: opacity 0s, top 0s

.kf-lmh-content
  position: relative
  padding: 20px 20px 50px 20px
  width: 188px

.kf-lmh-text
  margin-bottom: 10px
  color: #fff

.kf-lmh-button
  display: block
  float: right
