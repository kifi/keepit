.kf-nav-dropdown
  position: fixed
  left: 30px  // TODO(yiping): this should align to the menu toggle icon
  border: 1px solid #e6e6e6
  padding: 0 15px
  width: 270px
  background: #fff
  box-shadow: 0 0 7px rgba(0, 40, 90, 0.2)
  z-index: 1

.kf-nav-item
  font-size: 13px
  user-select: none
  margin-top: 10px

.kf-nav-link-box
  display: inline-block
  cursor: pointer

.kf-nav-name
.kf-nav-count
  line-height: 26px
  vertical-align: top

.pre-libraries-style
  text-transform: uppercase

.kf-nav-name
  display: inline-block
  padding: 0 5px
  color: textDarkColor
  font-weight: 400
  font-smoothing: antialiased

  .active &
    font-weight: bold

.kf-nav-count
  font-size: 12px
  font-weight: 200
  padding: 2px 0
  color: countGreyColor
  float: right

  &.empty
    display: none

.kf-nav-group
  padding-top: 10px

.kf-nav-group-name
  margin: 0 40px 0 20px
  font-size: 14px
  line-height: 36px
  color: textDarkColor
  font-weight: 400
  font-smoothing: antialiased
