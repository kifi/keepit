.kf-nav-item
  padding: 0 0 5px 0
  font-size: 13px
  user-select: none

.kf-nav-name
.kf-nav-count
  line-height: 26px
  vertical-align: top

.kf-nav-name
  color: textDarkColor
  font-weight: 400
  font-smoothing: antialiased
  padding: 0 5px
  display: inline-block

  .kf-nav-keeps &
    padding-top: 2px

.allcaps
  text-transform: uppercase


.kf-nav-count
  font-size: 12px
  font-weight: 200
  padding: 2px 0
  color: countGreyColor
  float: right

  &.empty
    display: none

.kf-nav-keeps:hover
.kf-nav-keeps.active
  .sprite-cards-small
    sprite2x($cards-small-active)

.kf-nav-recos:hover
.kf-nav-recos.active
  .sprite-clover-small
    sprite2x($clover-small-active)

.kf-nav-group
  padding: 20px 0

.kf-nav-group-name
  margin: 0 40px 0 20px
  font-size: 14px
  line-height: 36px
  color: textDarkColor
  font-weight: 400
  font-smoothing: antialiased
