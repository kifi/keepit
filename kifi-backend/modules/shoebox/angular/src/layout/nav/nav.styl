.kf-nav-item
  font-size: 13px
  user-select: none
  margin-top: 10px

.kf-nav-link
  display: inline-block

.kf-nav-name
.kf-nav-count
  line-height: 26px
  vertical-align: top

.pre-libraries-style
  text-transform: uppercase

.kf-nav-name
  display: inline-block
  padding: 0 5px
  color: textDarkColor
  font-weight: 400
  font-smoothing: antialiased

  .kf-nav-keeps &
    padding-top: 2px

.kf-nav-count
  font-size: 12px
  font-weight: 200
  padding: 2px 0
  color: countGreyColor
  float: right

  &.empty
    display: none

.kf-nav-keeps:hover
.kf-nav-keeps.active
  .sprite-cards-small
    sprite2x($cards-small-active)

.kf-nav-recos:hover
.kf-nav-recos.active
  .sprite-clover-small
    sprite2x($clover-small-active)

.kf-nav-group
  padding-top: 10px

.kf-nav-group-name
  margin: 0 40px 0 20px
  font-size: 14px
  line-height: 36px
  color: textDarkColor
  font-weight: 400
  font-smoothing: antialiased
