.kf-nav-item
  font-size: 13px
  user-select: none
  margin-top: 10px

.kf-nav-link-box
  display: inline-block

.kf-nav-link
  display: inline-block
  cursor: pointer

.kf-nav-name
.kf-nav-count
  line-height: 26px
  vertical-align: top

.pre-libraries-style
  text-transform: uppercase

.kf-nav-name
  display: inline-block
  padding: 0 5px
  color: textDarkColor
  font-weight: 400
  font-smoothing: antialiased

  .active &
    font-weight: bold

.kf-nav-count
  font-size: 12px
  font-weight: 200
  padding: 2px 0
  color: countGreyColor
  float: right

  &.empty
    display: none

.kf-nav-group
  padding-top: 10px

.kf-nav-group-name
  margin: 0 40px 0 20px
  font-size: 14px
  line-height: 36px
  color: textDarkColor
  font-weight: 400
  font-smoothing: antialiased
