.kf-nav-lib-recos
  border-bottom: 1px solid separatorColor
  padding-bottom: 8px
  font-size: 13px

.kf-nav-lib-system
  border-bottom: 1px solid separatorColor
  padding: 8px 0 8px 0

.kf-nav-lib-item
  height: 45px
  padding: 12px 0 0 0
  user-select: none
  font-size: 12px



////////////////////////////
////// Library Icons ///////
////////////////////////////

.kf-nav-lib-info
  display: inline-block

.kf-nav-lib-name
  padding: 0 0 0 9px
  vertical-align: 5px
  font-size: 12px
  font-weight: 400
  color: textDarkColor

  .active &
    font-weight: bold

.kf-nav-lib-text
  padding: 0 0 0 9px
  font-size: 11px
  font-weight: 200
  color: countGreyColor

.library-icon-holder
  width: 27px
  height: 35px
  display: inline-block
  vertical-align: top
  padding-right: 8px

.library-icon
  width: 27px
  height: 35px
  display: inline-block
  vertical-align: top
  background-repeat: no-repeat

.reco-icon
  width: 26px
  height: 26px
  display: inline-block

.library-icon-owner-img
  width: 23px
  height: 23px
  position: relative
  vertical-align: middle
  left: 13px
  top: -15px
  z-index: 1
  border-radius: 100%



//////////////////////////////////////
////// Scrollable Library Pane ///////
//////////////////////////////////////

.kf-scrollable-libs
  width: calc(100% + 40px)
  position: relative

  // This is a hack to hide the scrollbar
  // (cf. comments in scrollbar.js)
  overflow: hidden
  .antiscroll-inner
    .kf-nav-lib-users
      width: calc(100%)



////////////////////////////////////
////// Library Filtering Box ///////
////////////////////////////////////

.kf-lib-search
  width: calc(100% + 40px)

.kf-lib-input-box
  height: 25px
  width: calc(100% - 42px)
  float: left
  margin-bottom: 8px
  box-sizing: border-box
  border: 1px solid #e6e6e6
  border-top-left-radius: 4px
  border-bottom-left-radius: 4px
  background: #eeeeee
  font-weight: 200
  cursor: text
  transition: all .16s

  &.focused
    background: #fff
    border-color: blueColor

  input
    width: calc(100% - 20px)
    margin: 0
    border: 0
    padding: 3px 10px
    box-sizing: border-box
    background-color: transparent
    color: textDarkGray
    white-space: nowrap
    font-size: 13px
    font-weight: 200
    font-smoothing: antialiased
    line-height: 18px

.kf-lib-input-clear
  position: relative
  top: 2px
  float: right
  width: 20px
  box-sizing: border-box
  font-size: 17px
  line-height: 20px
  cursor: pointer



////////////////////////////////////////////
////// Sorting Library Dropdown Menu ///////
////////////////////////////////////////////

.kf-sort-img
  position: relative
  left: 6px
  top: 2px

.kf-sort-libs
  position: relative

.kf-sort-libs-button
  user-select: none
  width: 24px
  height: 25px
  float: right
  margin-right: 14px
  box-sizing: border-box
  border-radius: 0 4px 4px 0
  cursor: pointer
  position: relative
  background-color: #eeeeee
  border: 1px solid #e6e6e6

  &.on
    background-color: #ffffff
    border: 1px solid blueColor

.dropdown-menu-content
  position: absolute
  top: 30px
  left: 130px
  width: 115px
  z-index: 1

.dropdown-menu-content > li:first-child
  border-radius: 8px 8px 0 0

.dropdown-menu-content > li:last-child
  border-radius: 0 0 8px 8px

.dropdown-option
  position: relative
  height: 36px
  width: 100%
  padding-top: 11px
  box-sizing: border-box
  border: 1px solid #e6e6e6
  background-color: #fff
  text-align: center
  font-size: 11px
  font-weight: 200
  color: countGreyColor
  cursor: pointer

.dropdown-option:hover
  box-sizing: border-box
  border: 1px solid blueColor
  background-color: #fff

.dropdown-option:active
  color: #fff
  background-color: blueColor

.dropdown-option-check
  position: absolute
  left: 5px
  top: 10px

