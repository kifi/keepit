.kf-nav-lib-recos
  border-bottom: 1px solid separatorColor
  padding: 10px 0 8px 0
  font-size: 13px

.kf-nav-lib-system
  border-bottom: 1px solid separatorColor
  padding: 8px 0 8px 0

.kf-nav-lib-item
  height: 42px
  padding: 12px 0 0 0
  user-select: none
  font-size: 12px

.kf-nav-lib-info
  display: inline-block

.kf-nav-lib-name
  padding: 0 0 0 9px
  vertical-align: 5px
  font-size: 12px
  font-weight: 400
  color: textDarkColor
  
.kf-nav-lib-text
  padding: 0 0 0 9px
  font-size: 11px
  font-weight: 200
  color: countGreyColor

.kf-nav-lib-bar
  border-bottom: 1px solid separatorColor
  padding: 8px 0 8px 0

.library-card
  width: 27px
  height: 35px
  display: inline-block
  vertical-align: top
  background-repeat: no-repeat

.kf-scrollable-libs
  height: 350px
  overflow: auto

.kf-lib-input-box
  cursor: text
  border-radius: 12px
  border-style: none
  background: #eeeeee
  transition: all .16s
  height: 24px
  font-weight: 200
  box-sizing: border-box
  border: 1px solid #e6e6e6

  &.focused
    background: #fff
    border-color: blueColor

  input
    width: calc(100% - 20px)
    white-space: nowrap
    margin: 0
    border: 0
    padding: 3px 10px
    background-color: transparent
    color: textDarkGrey
    font-size: 13px
    font-weight: 200
    font-smoothing: antialiased
    line-height: 18px
    box-sizing: border-box

.kf-lib-input-clear
  float: right
  width: 20px
  font-size: 17px
  line-height: 20px
  cursor: pointer
  box-sizing: border-box
