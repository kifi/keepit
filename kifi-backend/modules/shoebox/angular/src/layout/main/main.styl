    padding: 0 25px

  .file-import-well
    background-color: #eff2f7
    border-radius: 10px
    padding: 10px 20px 15px 20px
    margin: 20px 10px 30px

  .file-import-inner
    padding: 20px 20px 0
    color: #333
    font-size: 14px

