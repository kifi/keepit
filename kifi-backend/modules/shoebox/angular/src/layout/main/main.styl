  .sprite-import-bookmarks-icon
  .sprite-import-from-other-services-icon
    margin-right: 12px

  .sprite-install-extension-icon
    margin-right:16px
    position: relative
    left: 3px

  a
    display: inline-block

    &:hover
      text-decoration: underline

.install-extension-error
  .dialog-body-wrap
    .dialog-body
      padding-top: 50px
