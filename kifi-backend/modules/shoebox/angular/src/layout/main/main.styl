  .kf-feed-text
    text-align: left

    label
      font-weight: bold

.import-file-safari-logo
  width: 60px
  height: 60px
  margin-right: -8px

.import-file-safari-demo
  display: block
  width: 160px
  margin: 0 auto 10px
  transition: transform .5s, box-shadow .5s

  box-shadow: 0 0 4px rgba(0, 0, 0, .5)
  cursor: pointer

  &:hover
    transform: scale(1.75)
    box-shadow: 0 0 8px rgba(0, 0, 0, .5)

  &:hover:active
    transform: scale(1.743)
    transition-duration: .05s
    box-shadow: 0 0 6px rgba(0, 0, 0, .5)
