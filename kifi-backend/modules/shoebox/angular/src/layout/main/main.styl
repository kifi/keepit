    font-weight: 800
    margin: 10px 0

  .import-file-progress
    color: #333
    font-size: 14px
    padding: 0 20px

  h3.pitch
    font-size: 14px
    font-weight: 800
    margin-bottom: 10px

  li.import-benefit
    list-style-type: disc
    margin-left: 15px

  .import-inset input
    opacity: 0
    visibility: hidden
