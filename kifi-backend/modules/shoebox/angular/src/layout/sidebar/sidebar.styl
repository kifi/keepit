.kf-sidebar
  position: fixed
  width: 270px

@media only screen and (max-width: 900px)
  .kf-sidebar
    left: -135px
    z-index: -1
    -webkit-transition: left sidebarTransitionDuration, z-index sidebarTransitionDuration 0
    transition: left sidebarTransitionDuration, z-index sidebarTransitionDuration 0
  
  .kf-sidebar-active .kf-sidebar
    left: 0
    z-index: 0
