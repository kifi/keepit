.kf-col-left
  width: 18%
  min-width: 240px
  background: #eff2f7

  .kf-col-inner
    display: table

.kf-header-left
  position: relative
  height: 70px
  padding-top: 18px
  background-color: #67829c
  box-sizing: border-box
  text-align: center
  z-index: 2

.kf-header-logo
  position: relative
  display: inline-block
  width: 51px
  height: 29px
  background: url(/img/kifi-logo.png) 0/100%

  &::after
    position: absolute
    content: "beta"
    left: 56px
    bottom: 0
    font-size: 10px
    line-height: 10px
    font-weight: 300
    font-style: italic
    font-smoothing: antialiased
    color: #fff
