.kf-org-profile-libraries
  margin: 15px

  .kf-opl-move-card-title
    font-size: 14px
    text-transform: uppercase

.kf-upl-card.kf-opl-move-libraries
  position: relative
  background-color: #e7e7e7
  border: 2px dashed #979797
  line-height: 23px
  box-sizing: border-box

  .kf-opl-move-libraries-wrapper
    display: flex
    width: 100%
    height: 100%
    justify-content: center
    align-items: center

  .kf-opl-move-libraries-description
    font-size: 0.80rem;
    padding: 0 10px;

.kf-opl-move-libraries-box
  display: block
  width: 60px
  height: 60px
  margin: 0 auto

.kf-opl-move-libraries-more-info
  height: 30px
  padding: 0 20px
  border: 0
  border-radius: 15px
  background: rgba(0, 0, 0, .5)
  color: #fff
  font-weight: 500
  font-size: 11px
  line-height: 30px
  text-transform: uppercase
  text-shadow: 0 0 1px rgba(0,0,0,.4)
  letter-spacing: .4px
  text-align: center

  &:hover
    background: rgba(0, 0, 0, 0.3)

.kf-opl-empty
  padding: 30px
  font-size: 16px
  color: #777

  @media (max-height: uphSmallMaxDim) and (max-width: uphSmallMaxDim)
    font-size: 12px

.kf-opl-nonmember
  margin-top: 30px

.kf-opl-loading-spinner
  width: 160px

.kf-upl-card.kf-opl-create-card
  box-sizing: border-box
  display: inline-flex
  justify-content: center
  align-items: center
  flex-direction: column
  border: 2px #979797 dashed
  background: #e7e7e7
  cursor: pointer

.kf-opl-create-card-add-icon
  width: 50px
  height: 50px
  margin: auto auto 0
  border: 1px solid #fff
  border-radius: 50%
  background-color: #eee
  box-shadow: 0px 0px 8px rgba(0, 0, 0, .33)

  display: flex
  align-items: center
  justify-content: center

  +hack-ie11()
    margin-top: 0

  svg
    width: 34px
    height: 34px
    fill: #bdbdbd

.kf-opl-create-card-text
  width: 85px
  margin: 10px auto auto
  font-size: 14px
  color: #333539
  line-height: 23px
  text-transform: uppercase
