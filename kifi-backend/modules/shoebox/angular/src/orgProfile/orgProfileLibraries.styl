.kf-org-profile-libraries
  margin: 15px

.kf-upl-move-card-text
.kf-upl-create-card-text
  font-size: 14px
  text-transform: uppercase

.kf-upl-card.kf-opl-move-libraries
  position: relative
  background-color: #e7e7e7
  border: 2px dashed #979797
  line-height: 23px
  box-sizing: border-box

  .kf-opl-move-libraries-wrapper
    display: flex
    width: 100%
    height: 100%
    justify-content: center
    align-items: center

.kf-opl-move-libraries-box
  display: block
  width: 60px
  height: 60px
  margin: 0 auto

.kf-opl-move-libraries-more-info
  width: 100px
  padding: 13px 0 10px
  border: 1px solid rgba(166, 175, 189, 0.53)
  font-size: 12px
  font-weight: 700
  color: #5c6373
  cursor: pointer
  border-radius: 6px
  background: linear-gradient(to top, #f3f3f3, #fff)

  &:hover
    background: #e6e8ea
