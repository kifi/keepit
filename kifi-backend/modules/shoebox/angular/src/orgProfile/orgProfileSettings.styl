.kf-ops
  padding-top: 35px
  text-align: left

.kf-ops-nav
  flex: 3


  .kf-ops-nav
    margin-top: 5px

    > li
      margin-left: 10px
      margin-bottom: 7px

.kf-ops-main
  flex: 9

  h1
    heading_xl()
    margin-bottom: 20px

  * + h1
    margin-top: 25px

  h2
    heading_lg()

  * + h2
    margin-top: 20px

  h3
    font-size: 16px
    font-weight: bold
    margin-bottom: 7px

.kf-ops-setting-select
  width: 100%

.kf-ops-setting
  p
    margin-top: 0
    margin-bottom: 25px

.kf-ops-push
  display: block
  height: 80vh
