.kf-organization-member-manage
  width: 50%
  margin: 15px auto
  background-color: #fff
  border-radius: 16px
  padding: 15px
  border: 1px solid #dadae2

  > * + *
    margin-top: 10px

  > .kf-organization-member + .kf-organization-member
    border-top: 1px solid lightgray
    padding-top: 10px

.kf-organization-member-invite
  box-sizing: border-box
  width: 100%
  padding: 10px
  border: 2px dashed lightgray
  border-radius: 6px
  background: none

.kf-organization-member-email
  width: 42px
  height: 42px
  background-repeat: no-repeat
  background-position: center
  background-color: #eeeeee
  border: 1px solid #ebebeb
  border-radius: 50%
