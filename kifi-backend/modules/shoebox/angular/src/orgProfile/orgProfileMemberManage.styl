.kf-org-member-manage
  width: 80%;
  max-width: 700px
  min-width: 400px
  margin: 40px auto
  background-color: #fff
  border-radius: 16px
  padding: 15px
  border: 1px solid #dadae2

  > * + *
    margin-top: 10px

  > .kf-org-member + .kf-org-member
    border-top: 1px solid lightgray
    padding-top: 10px

.kf-org-member-invite
  box-sizing: border-box
  width: 100%
  padding: 10px
  border: 2px dashed lightgray
  border-radius: 6px
  background: none
  margin-bottom: 15px

.kf-org-member-email
  width: 42px
  height: 42px
  background-repeat: no-repeat
  background-position: center
  background-color: #eeeeee
  border: 1px solid #ebebeb
  border-radius: 50%
