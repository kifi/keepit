.kf-org-member-manage
  width: 80%;
  max-width: 700px
  min-width: 400px
  margin: 40px auto
  background-color: #fff
  border-radius: 16px
  padding: 15px
  border: 1px solid #dadae2

  > * + *
    margin-top: 10px

.kf-org-member
  &:nth-child(odd)
    background: whitesmoke
    padding: 5px 15px
    margin-left: -15px
    margin-right: -15px

.kf-org-member-invite
  box-sizing: border-box
  width: 100%
  padding: 10px
  border: 2px dashed lightgray
  border-radius: 6px
  background: none
  margin-bottom: 15px
  color: textBlackColor

.kf-org-member-email
  width: 42px
  height: 42px
  background-repeat: no-repeat
  background-position: center
  background-color: #eeeeee
  border: 1px solid #ebebeb
  border-radius: 50%

.dialog-content[kf-org-profile-member-remove]

  .dialog-buttons
    text-align: right

.kf-opmr-wrapper
  display: flex
  align-items: center

.kf-opmr-member-pic
  flex: 1 0 0

  img
    border-radius: 50%
    width: 65px
    height: 65px

.kf-opmr-member-descriptions
  flex: 3 0 0
  text-align: left
  font-size: 13px
