.kf-org-create
  .kf-org-create-title
    heading_xl()
    margin: 20px 0

  .kf-org-create-name
    display: block
    width: 300px

  p
    line-height: 1.4rem
    color: textBlackColor

  .kf-org-create-slug
    span
    .kf-org-create-name
      display: inline-block
      vertical-align: middle

    .kf-org-create-name
      width: 150px

  .kf-org-create-field
    margin-bottom: 20px

    label
      font-weight: bold
      margin-bottom: 10px
      display: block

.kf-org-create-slack-container
  margin-bottom: 20px

.kf-org-create-slack-icon
  display: inline-block
  height: 20px
  width: 20px

.kf-org-create-slack-header
  display: inline-block
  color: textDarkGrey
  padding-bottom: 2px

.kf-org-create-slack-icon + .kf-org-create-slack-header
  margin-left 6px

.kf-org-create-error
  margin-top: 10px
  margin-left: 20px
  color: red

