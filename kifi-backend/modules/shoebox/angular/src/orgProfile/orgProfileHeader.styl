ophSmallMaxDim = 736px // for @media max-height and max-width
ophImageWidth = 200px

.kf-oph
  background: pageHeaderColor
  color: #fff
  padding-bottom: 75px

  @media (max-height: ophSmallMaxDim) and (max-width: ophSmallMaxDim)
    padding-bottom: 12px

.kf-oph-top
  position: relative
  padding-top: 75px
  max-width: 480px
  margin: 0 auto
  display: flex

  input[type="text"].kf-edit-field,
  textarea.kf-edit-field
    background: transparent

  &.kf-editing
    input[type="text"].kf-edit-field,
    textarea.kf-edit-field
      background: white
      color: textDarkGrey

  @media (max-height: ophSmallMaxDim) and (max-width: ophSmallMaxDim)
    padding-top: 12px
    margin-left: 20px
    margin-right: 20px

.kf-oph-actions
  position: absolute
  top: 10px
  right: 0

.kf-oph-pic
  width: ophImageWidth

.kf-oph-pic-wrapper
  position: relative
  overflow: hidden
  border-radius: 10px
  cursor: pointer

.kf-oph-pic-wrapper:hover:before
  content: 'Upload Logo'
  position: absolute
  right: 0
  bottom: 0
  left: 0
  height: 50px
  line-height: 50px
  color: #000
  background-color: rgba(255, 255, 255, .5);

.kf-oph-pic-wrapper:hover:before:hover
  background-color: rgba(255, 255, 255, 1);

.kf-oph-about
  flex: 1
  margin-left: 25px
  text-align: left

.kf-oph-name
  margin-top: 6px
  line-height: 31px
  font-size: 21px
  font-weight: normal
  color: inherit
  box-sizing: border-box

  @media (max-height: ophSmallMaxDim) and (max-width: ophSmallMaxDim)
    line-height: 20px
    font-size: 14px

.kf-oph-description
  margin: 0 auto 20px
  color: #d8d8d8
  line-height: 1.6em
  font-size: 0.9em
  font-smoothing: antialiased
  word-break: break-word
  border-bottom: 1px solid white
  width: 100%
  padding-bottom: 20px

  @media (max-height: ophSmallMaxDim) and (max-width: ophSmallMaxDim)
    line-height: 16px
    font-size: 10px

  &>a[href]
    color: inherit

    &:hover
      text-decoration: underline

.kf-oph-link
  color: accentGreent

