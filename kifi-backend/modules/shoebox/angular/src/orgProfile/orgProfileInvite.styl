.organization-invite-search
  & .dialog-x
    top: 13px
    right: 13px

  & .dialog-header
    border-bottom: none
    font-size: 14px

  & .dialog-body
    min-height: 350px
    padding: 0px 0px 10px 0px

.opi-header
  padding: 0 20px
  margin: 0

  p
    margin: 0 0 14px

.opi-input
  box-sizing: border-box
  font-size: 12px
  placeholder secondaryTextGray

.opi-message-input
  position: relative
  left: 20px
  width: calc(100% - 40px)
  height: 45px
  line-height: 18px
  padding: 10px 15px
  margin: 15px auto
  background-color: white
  outline: none
  border: 1px solid #f3f5f7
  border-radius: 5px
  resize: none

.opi-search-box
  position: relative
  width: 100%
  margin-bottom: 5px

  & .opi-search-input
    width: 100%
    line-height: 30px
    background-color: #F3F5F7
    padding: 10px 15px 8px 45px

.opi-spinner
  position: absolute
  right: 15px
  top: 9px

.opi-search-icon
  position: absolute
  top: 19px
  left: 20px
  height: 14px
  width: 14px
  background-size: contain
  background-repeat: no-repeat

.opi-contact-list
  max-height: 33vh
  min-height: 260px
  overflow-x: hidden
  overflow-y: auto

.opi-contact
  box-sizing: border-box
  border-top: 1px solid borderLightGray
  padding: 8px 20px
  width: 100%
  height: 53px
  background: #fff

  &:first-child
    border-top: none

  &.opi-invite-selected
    background-color: #f8f8f8

  &.opi-invite-actionable
    &:hover
      cursor: pointer

.opi-contact-container
  position: relative

.opi-contact-image
  display: inline-block
  margin-right: 15px
  border-radius: 100%
  width: 36px
  height: 36px
  vertical-align: top

.opi-contact-summary
  display: inline-block
  margin-top: 3px
  line-height: 1.4em

.opi-contact-name
  overflow: hidden
  font-size: 14px
  color: #000
  text-overflow: ellipsis
  white-space: nowrap

  .opi-new-email &
    font-weight: bold

.opi-contact-network
  overflow: hidden
  font-size: 12px
  color: secondaryTextGray
  text-overflow: ellipsis
  white-space: nowrap

.opi-contact-button
  float: right
  vertical-align: top
  margin-top: 1px
  padding: 5px 8px
  border: 1px solid #979797
  font-size: 13px
  color: #979797
  border-radius: 4px
  background: none
  outline: none

.opi-contact-button-label
  height: 20px
  line-height: 20px

.opi-invite-icon
  display: inline-block
  margin-right: 5px
  background-size: cover
  background-repeat: no-repeat

.opi-invite-sent
.opi-invite-invited
  display: inline-block
  position: absolute
  top: 8px
  color: #56b263
  right: 10px

.opi-invite-invited
  right: 4px

.opi-contact-email-icon
  @extend .opi-contact-image
  background-image: url(/img/mail.2x.png)
  background-position: center 9px
  background-repeat: no-repeat
  background-size: 62% 48%
  background-color: #e36766

.opi-contact-new-email-icon
  @extend .opi-contact-email-icon
  background-color: #32495e

