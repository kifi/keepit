  background-color: #fff

.opi-contact-import-gmail
  position: relative
  top: 10px
  overflow: hidden
  font-size: 14px
  color: #000
  text-overflow: ellipsis
  white-space: nowrap

.opi-email-many
  box-sizing: border-box
  display: block
  width: calc(100% - 30px)
  height: 268px
  margin: 0 auto 15px
  padding: 10px 15px

  border: 1px solid #f3f5f7
  border-radius: 5px
  outline: none

  background-color: #fff
  font-size: 12px
  line-height: 18px
  resize: none

  placeholder secondaryTextGray

.opi-send-many
  float: right
  margin-right: 15px
  margin-bottom: 15px
  padding: 10px 35px

.opi-banner
  padding: 5px
  background-color: #dadada
  text-align: center
  color: white
  font-size: 14px
  font-weight: bold
  margin-bottom: 15px

.opi-success-banner
  background-color: accentGreen

.opi-fail-banner
  background-color: errorRed

.kf-organization-invite-search-slack-link-wrapper
  display: block
  position: relative

  .kf-organization-invite-search-slack-input.kf-organization-invite-copied
    transition: color 0.2s
    color: #f5f5f5

  .kf-organization-invite-search-slack-input
    transition: color 0.2s
    text-align: center
    padding: 8px
    font-size: 12px
    margin-bottom: 15px

  .kf-organization-invite-confirm-copied
    user-select: none
    cursor: default;
    top: 5px
    width: 100%
    font-size: 14px
    text-align: center
    position: absolute

    color: greenColor
    &.ng-enter
      transition: color 0.3s 0.1s
      color: alpha(greenColor, 0)

    &.ng-enter-active
      color: alpha(greenColor, 1.0)

    &.ng-leave
      transition: color 0.1s
      color: alpha(greenColor, 1.0)

    &.ng-leave-active
      color: alpha(greenColor, 0)
