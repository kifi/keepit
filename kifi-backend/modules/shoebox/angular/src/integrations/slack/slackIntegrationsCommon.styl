.kf-si-container-wrapper
  display: flex
  flex-direction: column
  align-items: center
  width: 100%

.kf-si-container
  display: flex
  flex-direction: column
  width: 600px
  margin-top: 40px
  padding: 20px
  background-color: white
  border-radius: 10px
  box-shadow: 0px 1px 1px 1px #00000022

  .kf-si-header
    font-size: 30px
    color: #333
    font-weight: bold
    text-align: center

  .kf-si-inner-container
    margin-top: 20px
    margin-left: 50px
    margin-right: 50px

.kf-si-slack-icon
  margin-right: 10px;
  height: 30px
  width: 30px

.kf-si-bottom
  margin-top: 10px
  display: flex
  width: 100%
  flex-direction: column
  align-items: center