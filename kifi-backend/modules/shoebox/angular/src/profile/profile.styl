.profile .networks
  position: relative
  font-size: 0
  background-size: 62px
  margin: 20px 0
  padding: 0
  text-align: center

  & > ul
    margin: 0
    padding: 60px 0 0 72px
    user-select: none

    & > li
      display: block
      float: left
      margin: 0 5px
      width: 60px
      height: auto
      font-size: 0

      & > .connect
      & > .disconnect
        display: block
        font-size: 12px
        padding: 5px 0

  & > .kifi-k:before
    position: absolute
    display: block
    content: "."
    background: url(/img/kifi-k.png) no-repeat
    background-size: 100%
    top: -6px
    left: -6px
    border: 6px solid white
    width: 62px
    height: 62px
    border-radius: 50%
    z-index: 1

  & > .kifi-k:after
    position: absolute
    display: block
    content: "."
    z-index: 5
    left: 40px
    top: 0
    width: 286px
    height: 58px

  &:before
    position: absolute
    display: block
    content: "."
    top: 24px
    left: 54px
    width: 9px
    width: 9px
    height: 9px
    background: #accc98
    border: 2px solid white
    border-radius: 50%
    z-index: 2

  &:after
    position: absolute
    display: block
    content: "."
    top: 21px
    left: 63px
    width: 284px
    height: 20px
    background: #eff2f7
    z-index: 0

.profile-networks li
  display: inline-block
  margin-right: 10px

