.profile-wrapper
  font-size: 14px
  font-weight: 300
  color: #566278

  h2
    clear: both
    font-size: 26px
    line-height: 1.2
    font-smoothing: antialiased
    margin-bottom: 20px

.profile
  padding: 16px 12px 20px
  position: relative

.profile-container
  position: relative
  padding: 20px 88px 40px 167px
  margin-top: 1px
  background-color: #ffffff
  border: defaultBorder
  border-radius: 3px

.profile-image-wrapper
  position: absolute
  top: 33px
  left: 27px
  width: 103px
  text-align: center
  cursor: pointer

.profile-image-file
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: -1

.profile-image-flip
  display: block
  position: relative
  width: 72px
  height: 72px

  &:hover
    .profile-image
      transform: rotateY(180deg)
    .profile-image-change
      transform: rotateY(0deg)

.profile-image
.profile-image-change
  position: absolute
  top: 0
  left: 0
  display: block
  width: 100%
  height: 100%
  border-radius: 100%
  border: 4px solid #e3e6ee
  margin: 0 auto 6px
  background-color: #b8c5d1
  background-size: 100%
  transition: transform 0.3s
  backface-visibility: hidden

.profile-image-change
  transform: rotateY(-180deg)
  vertical-align: middle
  font-weight: 400
  color: #e3e6ee

.profile-image-change-inner
  position: absolute
  top: calc(50% - 16px)
  font-size: 14px
  font-weight: 400

.profile-input-title
  color: #c1c1c1
  font-size: 20px
  font-weight: 200
  letter-spacing: 1px
  margin-bottom: 4px
  font-family: Lato, Arial, sans-serif
  font-style: italic

.profile-input-wrapper
  padding-bottom: 1px
  margin-bottom: 19px
  margin-top: 25px

  &:last-child
    margin-bottom: 0

   &.profile-email
    margin-bottom: 5px

.profile-input-box
  position: relative
  transition: padding .25s ease

  & + &
    padding-top: 3px
    position: relative
    transition: padding .25s ease

  &.edit
    padding-right: 58px

    .profile-input-edit
      display: none

.profile-input-placeholder
input.profile-input-input
.profile-input-password
  height: 29px
  display: block
  font: inherit
  letter-spacing: 0.5px
  border: 0
  margin: 0
  width: 100%
  color: textBlackColor
  padding: 6px 2px
  background-color: transparent
  box-sizing: border-box

.profile-input-placeholder
input.profile-input-input
  border-bottom: 1px solid #d2dae3
  transition: all .3s ease

input.profile-input-input:focus
  padding-left: 7px
  border: 1px solid blueColor
  border-radius: 2px

input.profile-input-password
  padding: 6px
  border: 1px solid #d2dae3
  border-radius: 2px
  margin-top: 10px

  &::-webkit-input-placeholder
    font-style: normal
  &:-moz-placeholder
    font-style: normal
  &::-moz-placeholder
    font-style: normal
  &:-ms-input-placeholder
    font-style: normal

.input-error
  position: absolute
  top: 35px
  left: 0
  font-size: 13px
  background: #ed7071
  color: white
  text-align: center
  padding: 9px 12px

  &:before
    content: ' '
    position: absolute
    top: -8px
    width: 0
    left: 50%
    margin-left: -10px
    border-style: solid
    border-width: 0 10px 8px
    border-color: transparent transparent #ed7071
    font-size: 0

  .error-header
    font-weight: 500

  .error-body
    font-weight: 200
    font-size: .9em

.profile-input-box.edit .profile-input-placeholder
  display: none
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

input.profile-first-name
input.profile-last-name
  display: none
  width: 0

.profile-input-box.edit input.profile-first-name
.profile-input-box.edit input.profile-last-name
  display: inline-block

.profile-input-box.edit input.profile-first-name
  margin-right: 8px

.profile-input-edit
.profile-input-save
  position: absolute
  bottom: 0
  right: 0
  font-size: 12px
  line-height: 17px
  display: inline-block
  width: 58px
  padding: 6px 0
  color: white
  background-color: #b8c5d1
  border-radius: 2px
  text-align: center
  transition: background 0.2s ease
  display: none

.profile-input-edit
  &:hover
  &:focus
    background-color: #C5D2DE

  &:active
    background-color: #9FACB8

  .profile-input-box:hover &
    display: block

.profile-input-save
  background-color: greenColor

  &:hover
    background-color: clearGreenColor

  .profile-input-box &
    display: block

.profile-input-remaining-chars
  font-size: 14px
  color: #B7CE84
  margin-left: 2px

.profile-email-address-unverified
.profile-email-address-pending
  color: #a7aaa9
  font-size: 13px

.profile-email-pending-resend
.profile-email-pending-cancel
  color: #777c87
  text-decoration: underline

.profile-email-address-pending-email
  color: #777c87


.profile-manage-settings
  margin-top: 25px

.profile-manage-settings-group
  margin: 20px 0

  &:first-child
    margin-top: 10px

.profile-manage-settings-option
  margin-left: 20px
  margin-bottom: 8px
  font-weight: 100
  cursor: pointer

.profile-manage-label
  cursor: pointer

  &:hover
    .profile-manage-radio-check
      background-color: #f5f5f5
    .profile-settings-option-text
      color: darkBlueColor

.profile-manage-input
  display: none

.profile-manage-radio-check
  float: left
  width: 12px
  height: 12px
  margin-right: 5px
  background-color: #fff
  border: 1px solid #ccc
  border-radius: 50%

  &:hover
    background-color: #eee

  &:after
    display: none
    position: relative
    top: 2px
    width: 8px
    height: 8px
    background-color: darkBlueColor
    border-radius: 50%
    content: ' '

.profile-manage-input.profile-manage-input:checked ~ .profile-manage-radio-check:after
  display: block
  left: 2px

.profile-settings-option-text
  position: relative
  top: -2px


.profile-setting-arrow
  position: relative
  overflow: hidden
  display: inline-block
  width: 13px
  height: 13px
  vertical-align: middle
  top: -1px

  &.active
    transform: rotate(90deg)
    transition: all 0.3s

    &:before
      background-color: blueColor
      transition: all 0.3s

.profile-setting-arrow:before
  content: ''
  background-color: textGreyColor
  transform: rotate(45deg)
  width: 9px
  height: 9px
  position: absolute
  top: 2px
  left: 0

.profile-setting-arrow:after
  content: ''
  position: absolute
  top: 0
  left: 0
  width: 35%
  height: 100%
  background-color: #fff

.profile-manage-settings-title
.profile-email-addresses-title
.profile-change-password-title

.profile-manage-account-title
  display: inline-block
  margin-left: 6px

  &.active
    color: darkBlueColor
