.kf-pw
  // TODO: Implement reusable flexbox grid for cases such as this one.
  rounded-module()
  padding-top: 15px
  overflow: hidden

  &-badge
    display: flex
    align-items: center

  &-profileImg
    width: 70px
    min-width: 70px
    margin-right: 15px

    img
      width: 100%
      border-radius: 50%

  p
    heading_sm()
    color: libraryGray
    line-height: 18px

    .no-bio
      cursor: pointer
      color: accentGreen

      &:hover
        text-decoration: underline

  h1
    heading_lg()
    font-weight: bold
    margin-bottom: 5px

    a
      color: textBlackColor

      &:hover
        color: accentGreen
        text-decoration: underline

  h2
    heading_xs()
    text-transform: uppercase
    font-weight: bold
    text-align: center
    color: accentGreen
    margin-bottom: 5px

  h3
    heading_lg()
    font-weight: bold
    color: textBlackColor
    text-align: center
    position: relative
    margin-bottom: 5px

    span
      heading_xs()
      font-weight: bold
      color: white
      background: libraryRed
      border-radius: 7px
      min-width: 12px
      display: inline-block
      line-height: 13px
      text-align: center
      padding: 0px 3px
      margin-bottom: 0
      position: absolute
      top: -5px

  .stats
    display: flex
    width: 100%
    margin-top: 15px
    justify-content: center

    .stats-row
      &:hover
        .stat-title
          text-decoration: underline

    .stat
      width: 33%

  .kf-pw-org
    border-top: 1px solid borderLightGray
    margin: 15px -16px -10px
    padding: 15px
    display: flex
    flex-flow: wrap
    justify-content: space-between

    .kf-pw-org-pending-label
      flex: 1 100%
      text-align: center

    .kf-pw-org-img
      border-radius: 20%
      background: appBackgroundColor
      width: 70px
      height: 70px
      overflow: hidden
      display: block

    &.kf-pw-org-pending .kf-pw-org-img
      opacity: .35

    .kf-pw-org-link

      &:hover
        h1
          text-decoration: underline
          color: accentGreen

    .kf-pw-org-bio
      width: calc(100% - 80px)

    .stats
      margin-top: 0px
      margin-bottom: 0
      display: block

      tr
        td
          font-size: 10px
          line-height: 16px

          &:first-child
            padding-right: 3px
            font-weight: bold
            font-size: 16px

            a
              color: textBlackColor

          &:last-child
            a
              color: accentGreen
              text-transform: uppercase
              font-weight: bold

  .kf-pw-create-org
    margin: 15px -16px -10px
    padding: 15px
    border-top: 1px solid borderLightGray
    cursor: pointer

    &:hover
      .kf-pw-create-org-icon
        opacity: .75

  .kf-pw-create-org-icon
    display: inline-block
    width: 42px
    height: 42px
    margin: 14px
    margin-right: 20px
    border-radius: 50%
    background-position: -9px -7px
    background-size: 60px 60px
    background-repeat: no-repeat
    vertical-align: middle
    box-shadow: 0px 0px 6px rgba(0, 0, 0, .3)

  .kf-pw-create-org-icon-big
    display: inline-block
    width: 62px
    height: 62px
    margin: 6px
    margin-right: 12px
    border-radius: 50%
    background-position: -14px -11px
    background-size: 90px 90px
    background-repeat: no-repeat
    vertical-align: middle
    box-shadow: 0px 0px 6px rgba(0,0,0,0.3)

  .kf-pw-create-org-label
    display: inline-block

    h1
      margin: 0
      vertical-align: middle
      font-weight: normal
