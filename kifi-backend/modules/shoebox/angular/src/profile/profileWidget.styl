.kf-pw
  // TODO: Implement reusable flexbox grid for cases such as this one.
  rounded-module()
  padding-top: 15px
  overflow: hidden

  &-badge
    display: flex
    align-items: center

  &-profileImg
    width: 70px
    min-width: 70px
    margin-right: 15px

    img
      width: 100%
      border-radius: 50%

  p
    heading_sm()
    color: libraryGray
    line-height: 18px

    .no-bio
      cursor: pointer
      color: accentGreen

      &:hover
        text-decoration: underline

  h1
    heading_lg()
    font-weight: bold
    margin-bottom: 5px

    a
      color: textBlackColor

      &:hover
        color: accentGreen
        text-decoration: underline

  h2
    heading_xs()
    text-transform: uppercase
    font-weight: bold
    text-align: center
    color: accentGreen
    margin-bottom: 5px

  h3
    heading_lg()
    font-weight: bold
    color: textBlackColor
    text-align: center
    position: relative
    margin-bottom: 5px

    span
      heading_xs()
      font-weight: bold
      color: white
      background: libraryRed
      border-radius: 7px
      min-width: 12px
      display: inline-block
      line-height: 13px
      text-align: center
      padding: 0px 3px
      margin-bottom: 0
      position: absolute
      top: -5px

  .stats
    display: flex
    width: 100%
    margin-top: 15px
    justify-content: center

    .stat
      width: 33%

      &:hover
        h2
          text-decoration: underline

        h3
          color: accentGreen

  .kf-pw-org
    border-top: 1px solid borderLightGray
    margin: 15px -16px
    margin-bottom: -10px
    display: flex
    padding: 15px
    justify-content: space-between

    .kf-pw-org-img
      border-radius: 50%
      background: appBackgroundColor
      width: 70px
      height: 70px
      overflow: hidden
      display: block

    .kf-pw-org-link

      &:hover
        h1
          text-decoration: underline
          color: accentGreen

    .kf-pw-org-bio
      width: calc(100% - 80px)

    .stats
      margin-top: 10px
      margin-bottom: 0
      display: block

      tr
        td
          font-size: 12px

          &:first-child
            text-transform: uppercase
            padding-right: 3px
            font-weight: bold

            a
              color: textBlackColor

          &:last-child
            a
              color: accentGreen
