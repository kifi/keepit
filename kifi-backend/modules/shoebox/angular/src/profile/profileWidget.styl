.kf-pw
  // TODO: Implement reusable flexbox grid for cases such as this one.
  rounded-module()
  padding-top: 15px
  overflow: hidden

  &-badge
    display: flex
    align-items: center

  &-profileImg
    width: 70px
    min-width: 70px
    margin-right: 15px

    img
      width: 100%
      border-radius: 50%

  p
    heading_sm()
    color: libraryGray
    line-height: 18px

    .no-bio
      cursor: pointer
      color: accentGreen

      &:hover
        text-decoration: underline

  .kf-pw-title-link
    heading_lg()
    font-weight: bold
    margin-bottom: 5px
    color: textBlackColor

    &:hover
      color: accentGreen
      text-decoration: underline

  .kf-pw-stat-label
    display: block
    heading_xs()
    text-transform: uppercase
    font-weight: bold
    text-align: center
    color: accentGreen
    margin-bottom: 5px

  .kf-pw-stat-value
    heading_lg()
    display: block
    font-weight: bold
    color: textBlackColor
    text-align: center
    position: relative
    margin-bottom: 5px

  .kf-pw-stat-notification
    display: block
    heading_xs()
    font-weight: bold
    color: white
    background: libraryRed
    border-radius: 7px
    min-width: 12px
    display: inline-block
    line-height: 13px
    text-align: center
    padding: 0px 3px
    margin-bottom: 0
    position: absolute
    top: -5px

  .kf-pw-stats
    display: flex
    width: 100%
    margin-top: 15px
    justify-content: center

    .kf-pw-stat
      width: 33%

  .kf-pw-org
    border-top: 1px solid borderLightGray
    margin: 15px -16px -10px
    padding: 15px
    display: flex
    flex-flow: wrap
    justify-content: space-between

    .kf-pw-org-pending-label
    .kf-pw-org-potential-label
      flex: 1 100%
      text-align: center
      font-size: 14px

      &.ng-leave
        transition: all 1s
      &.ng-leave-active
        opacity: 0
        padding: 0px
        line-height: 0px
        font-size: 0px
        margin-bottom: 0px

    .kf-pw-org-img
      border-radius: 20%
      background: appBackgroundColor
      width: 70px
      height: 70px
      overflow: hidden
      display: block

    .kf-pw-org-bio
      width: calc(100% - 80px)
      overflow: hidden
      text-overflow: ellipsis

    .kf-pw-org-stats
      display: block
      margin-top: 0
      margin-bottom: 0
      line-height: 16px
      font-weight: bold

    .kf-pw-org-stat-value
      padding-right: 3px
      color: textBlackColor

    .kf-pw-org-stat-label
      color: accentGreens
      text-transform: uppercase
      font-size: 10px

    .kf-pw-org-btn
      font-size: 11px
      border: 1px solid white
      border-radius: 6px
      width: 90px
      margin-top: 15px

      &.kf-pw-org-btn-decline
      &.kf-pw-org-btn-ignore
        margin-right: auto
        margin-left: auto
        color: white
        background-color: alpha(gray, .85)

        &:hover:not(:active)
          background-color: gray

      &.kf-pw-org-btn-accept
      &.kf-pw-org-btn-verify
        margin-right: auto
        margin-left: 6px
        background-color: alpha(libraryGreen, .9)
        color: white

        &:hover:not(:active)
          background-color: libraryGreen

      &.kf-pw-org-btn-verify
      &.kf-pw-org-btn-ignore
        margin-top: 5px


      &.ng-leave
        transition: 1.75s all
      &.ng-leave-active
        font-size: 0px
        margin-top: 0px
        padding: 0px 0px 0px 0px
        margin-bottom: 0px
        border: 0px
        opacity: 0

    .kf-pw-org-email-txt
      font-size: 13px
      text-align: center
      flex: 1 100%
      margin-bottom: 0px
      margin-top: 10px
      color: gray


  .kf-pw-create-org
    margin: 15px -16px -10px
    padding: 15px
    border-top: 1px solid borderLightGray
    cursor: pointer

  .kf-pw-create-org-wrapper
    display: flex
    justify-content: space-around

    &:hover
      .kf-pw-create-org-icon
        opacity: .75

  .kf-pw-create-org-icon
    display: inline-flex
    justify-content: center
    align-items: center
    width: 42px
    height: 42px
    margin: 10px 0
    flex-shrink: 0
    border-radius: 50%
    border: 1px solid #fff
    background-color: #eee
    box-shadow: 0px 0px 8px rgba(0, 0, 0, .33)

    display: flex
    align-items: center
    justify-content: center

    svg
      width: 28px
      height: 28px
      fill: #bdbdbd

  .kf-pw-create-org-label
    display: inline-block
    max-width: 75%
    font-size: 20px
    margin-left: 2px

  .kf-pw-learn-more
    width: 100%
    text-align: center
    font-size: 14px
