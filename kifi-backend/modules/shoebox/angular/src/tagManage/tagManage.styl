.manage-tag-wrapper
  top: 70px
  left: 0
  right: 0
  bottom: 0
  font-size: 14px
  font-weight: 300

  h2
    clear: both
    font-size: 26px
    line-height: 1.2
    font-smoothing: antialiased
    margin-bottom: 20px

.manage-tag
  padding: 18px 32px 20px 32px
  position: relative

.manage-tag-container
  position: relative
  margin-top: 1px
  background-color: #ffffff
  box-shadow: defaultBoxShadow
  border: defaultBorder
  border-radius: 3px

.manage-tag-header
  width: 100%
  height: 70px
  box-sizing: border-box
  padding-left: 20px
  padding-right: 15px
  border-bottom: 1px solid separatorColor


////// FILTERING //////

.manage-tag-search-box
  position: relative
  top: 50%
  transform: translateY(-50%)
  display: inline-block
  width:45%

.manage-tag-input-box
  height: 25px
  width: 100%
  margin-bottom: 8px
  box-sizing: border-box
  border: 1px solid #e6e6e6
  border-radius: 5px
  background: #eeeeee
  font-weight: 200
  cursor: text
  transition: all .16s

  &.focused
    background: #fff
    border-color: blueColor

  input
    width: calc(100% - 20px)
    margin: 0
    border: 0
    padding: 3px 10px
    box-sizing: border-box
    background-color: transparent
    color: textDarkGrey
    white-space: nowrap
    font-size: 13px
    font-weight: 200
    font-smoothing: antialiased
    line-height: 18px

.manage-tag-input-clear
  float: right
  width: 20px
  box-sizing: border-box
  font-size: 17px
  line-height: 20px
  cursor: pointer



////// SORT BY BUTTONS //////

.manage-tag-sort-by
  position: relative
  top: 45%
  transform: translateY(-50%)
  float: right
  margin-right: 4px

.manage-tag-sort-text
  display: inline-block
  font-size: 12px
  font-weight: 500
  color: textDarkGrey
  background-color: #fff

.manage-tag-sort-button
  display: inline-block
  margin-left: 5px
  background: #fff
  border: 1px solid #c1c1c1
  border-radius: 8px
  font-weight: 200
  font-size: 12px
  color: #c1c1c1
  padding: 5px 15px
  cursor: pointer
  background-color: #ffffff
  border-color: #c1c1c1

  &.on
    background-color: #333333
    border-color: #333333


////// ROWS OF TAGS //////

.manage-tag-content
  box-sizing: border-box
  padding-right: 15px
  padding-left: 15px

.manage-tag-row
  border-bottom: 1px solid separatorColor
  padding: 5px 5px

.manage-tag-row-name-section
  position: relative
  top: 2px
  display: inline-block
  width: 50%

.manage-tag-row-name
  max-width: 90%
  padding: 5px
  background-color: #fff
  border: 1px solid #c1c1c1
  border-radius: 5px
  font-size: 12px
  font-weight: 400
  color: textDarkGrey
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
  float: left

.manage-tag-row-num-keeps-section
  margin-top: 5px
  display: inline-block
  font-size: 12px
  font-weight: 500
  vertical-align: top
  padding-top: 3px

.manage-tag-row-links-section
  display: inline-block
  margin-top: 5px
  float: right
  font-size: 12px
  font-weight: 400
  color: textDarkGrey
  position: relative
  top: 50%
  padding-top: 3px

.manage-tag-row-link
  padding-right: 6px
  padding-left: 2px

.manage-tag-row-link:hover
  color: blueColor
  text-decoration: underline
  cursor: pointer


////// FOOTER //////
.kf-show-more-tags
  float: right
  margin-right: 5px
  color: #4b6f9f
  font-weight: 300
  font-size: 13px
  letter-spacing: 0.5px
  text-decoration: underline
  cursor: pointer
