.manage-tag-wrapper
  top: 70px
  font-size: 14px
  font-weight: 300

  h2
    clear: both
    font-size: 26px
    line-height: 1.2
    font-smoothing: antialiased
    margin-bottom: 20px

.manage-tag
  padding: 18px 32px 20px 32px

.manage-tag-container
  background-color: #ffffff
  box-shadow: defaultBoxShadow
  border: defaultBorder
  border-radius: 3px

.manage-tag-header
  width: 100%
  height: 70px
  box-sizing: border-box
  border-bottom: 1px solid separatorColor


////// FILTERING //////

.manage-tag-search-box
  margin-left: 30px
  position: relative
  top: 50%
  transform: translateY(-50%)
  display: inline-block
  width: 30%

.manage-tag-input-box
  height: 30px
  width: 100%
  box-sizing: border-box
  border: 1px solid #e6e6e6
  border-radius: 4px
  background: #eeeeee
  font-weight: 200
  cursor: text
  transition: all .16s

  &.focused
    background: #fff
    border-color: blueColor

  input
    width: calc(100% - 20px)
    margin: 0
    border: 0
    padding: 5px 10px
    box-sizing: border-box
    background-color: transparent
    color: textDarkGrey
    white-space: nowrap
    font-size: 13px
    font-weight: 200
    font-smoothing: antialiased
    line-height: 18px

.manage-tag-input-clear
  float: right
  width: 20px
  box-sizing: border-box
  margin-top: 2px
  font-size: 17px
  line-height: 20px
  cursor: pointer


////// SORT BY BUTTONS //////

.manage-tag-sort-by
  position: relative
  top: 50%
  transform: translateY(-50%)
  float: right
  margin-right: 30px

.manage-tag-sort-text
  display: inline-block
  font-size: 12px
  font-weight: 500
  color: textDarkGrey

.manage-tag-sort-button
  display: inline-block
  margin-left: 10px
  padding: 8px 0
  width: 85px
  border: 1px solid #c1c1c1
  border-radius: 4px
  background-color: #ffffff
  border-color: #c1c1c1
  font-weight: 200
  font-size: 12px
  color: #c1c1c1
  text-align: center
  cursor: pointer

  &.on
    background-color: #333333
    border-color: #333333


////// ROWS OF TAGS //////

.manage-tag-content
  padding: 0px 15px 0px 15px

.manage-tag-row
  padding: 5px 0
  margin: 0 15px
  border-bottom: 1px solid separatorColor

.manage-tag-row-name-section
  position: relative
  top: 2px
  display: inline-block
  width: 50%

.manage-tag-row-name-section a
  color: #333333

.manage-tag-row-name
  float: left
  max-width: 90%
  padding: 5px
  background-color: #fff
  border: 1px solid #c1c1c1
  border-radius: 4px
  font-size: 12px
  font-weight: 400
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
  cursor: pointer

.manage-tag-row-name:hover
  background-color: #eeeeee
  border-color: #333333

.manage-tag-row-num-keeps-section
  position: relative
  top: -6px
  font-size: 12px
  font-weight: 500

.manage-tag-row-links-section
  position: relative
  top: 50%
  margin-top: 8px
  float: right
  font-size: 12px
  font-weight: 400
  color: textDarkGrey

.manage-tag-row-link-convert
  padding-right: 5px
.manage-tag-row-link-convert:hover
  color: blueColor
  text-decoration: underline
  cursor: pointer

.manage-tag-copy
  color: linkBlueColor

.manage-tag-row-link-delete
  padding-left: 2px
.manage-tag-row-link-delete:hover
  color: blueColor
  text-decoration: underline
  cursor: pointer

.manage-tag-action-button
  box-sizing: border-box
  margin: 0px 20px

.kf-delete-tag-confirm-modal .dialog-warn
  margin-left: 20px
