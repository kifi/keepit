.manage-library
  .dialog-content
    padding-bottom: 0

  .dialog-x
    top: 15px
    right: 20px
    width: 18px
    height: 18px

    &:hover
      cursor: pointer

    &::before
    &::after
      content: ' '
      position: absolute;
      left: 50%
      top: 1px
      bottom: 1px
      border-radius: 2px
      width: 3px;
      background: #c7c7c7
      font-size: 0

    &::before
      transform: translate(-1px) rotate(45deg)

    &::after
      transform: translate(-1px) rotate(-45deg)

    &:hover::before
    &:hover::after
    &:focus::before
    &:focus::after
      background: #aaa

    &:active::before
    &:active::after
      background: #888

  .dialog-body-wrap
    margin: 0
    padding: 0

  .dialog-body
    padding: 0 30px 15px

  .dialog-header
    padding: 10px 30px
    background-color: #333  // $kifi-black
    font-family: Helvetica, Arial, sans-serif
    font-size: 18px
    font-style: normal
    font-weight: bold
    color: #fff
    text-align: left


// ---------------------------------------------

  .dialog-buttons
    padding: 20px 0 0 0

  .create-button
    width: 180px

  .manage-lib-input-wrapper
    margin-bottom: 15px
    margin-top: 25px

  .manage-lib-input-title
    color: #333
    font-size: 16px
    font-weight: 200
    letter-spacing: 1px
    font-family: "Georgia", Arial, sans-serif
    font-style: italic

  input.manage-lib-input
    height: 29px
    display: inline-block
    font: inherit
    letter-spacing: 0.5px
    border: 0
    margin: 0
    width: 100%
    color: textBlackColor
    padding: 6px 2px
    background-color: transparent
    box-sizing: border-box
    border-bottom: 1px solid #d2dae3
    transition: all .3s ease

    &:focus
      padding-left: 7px
      border: 1px solid blueColor
      border-radius: 2px

    &.manage-lib-partial
      width: 50%

    &.manage-lib-calced
      color: textGreyColor

      &:focus
        color: textBlackColor


  .manage-lib-error
    color: redColor
