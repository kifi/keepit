  color: textBlackColor
  font-size: 15px
  padding: 5px 0
  cursor: pointer

.manage-lib-integrations-title
  font-weight: 700
  color: black
  margin-left: 5px

.manage-lib-integrations-arrow
  position: relative
  overflow: hidden
  display: inline-block
  width: 13px
  height: 13px
  vertical-align: middle
  top: -1px

  &.active
    transform: rotate(90deg)
    transition: all 0.8s

    &:before
      background-color: blueColor
      transition: all 0.8s

.manage-lib-integrations-arrow:before
  content: ''
  background-color: textGreyColor
  transform: rotate(45deg)
  width: 9px
  height: 9px
  position: absolute
  top: 2px
  left: 0

.manage-lib-integrations-arrow:after
  content: ''
  position: absolute
  top: 0
  left: 0
  width: 31%
  height: 100%
  background-color: #fff

