.manage-library

  .dialog-content
    padding-bottom: 0

  .dialog-body-wrap
    margin: 0
    padding: 0

  .go-back-button
    position: relative
    margin-right: 20px
    border: 1px solid rgba(166, 175, 189, 0.53)
    border-radius: 6px
    padding: 4px 6px 4px 17px
    background: linear-gradient(to top, #f3f3f3, #fff)
    font-size: 12px
    font-weight: 700
    font-smoothing: antialiased
    color: #5c6373
    cursor: pointer

    &:hover
      background: #e6e8ea

    &:active
      background: #dadcde

    &.disabled
    &.disabled:hover
      background: #f3f5f7
      color: #a9b0c0
      cursor: default

  .go-back-left-arrow
    position: absolute
    top: 1px
    left: 0
    width: 20px
    height: 20px
    cursor: pointer

    &::before
    &::after
      content: ' '
      position: absolute;
      left: 47%
      border-radius: 2px
      width: 2px;
      background: #5c6373
      font-size: 0

    &::before
      top: 4px
      bottom: 8px
      transform: translate(-1px) rotate(45deg)

    &::after
      top: 8px
      bottom: 4px
      transform: translate(-1px) rotate(-45deg)

  .dialog-body
    padding: 0

  .dialog-text
    padding: 0 35px

  .dialog-buttons
    text-align: left

