.manage-lib-sub-remove-x
  display: block
  top: 16px
  right: 18px
  border-radius: 100%
  width: 20px
  height: 20px
  background-color: #c8ced7
  cursor: pointer
  transform: rotate(45deg)

  &:hover
  &:focus
    background-color: red
    opacity: .5

  &:active
    background-color: #afb5be

