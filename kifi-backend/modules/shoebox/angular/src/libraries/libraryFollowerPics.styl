.kf-lfp
  white-space: nowrap
  font-size: 0

.kf-lfp-pics
  display: inline-block

.kf-lfp-pic
  display: inline-block
  margin-right: 8px
  border-radius: 50%
  width: 42px
  height: 42px

.kf-lfp-more
  display: inline-block
  border-radius: 50%
  height: 42px
  min-width: 42px
  border: none
  padding: 0
  background-color: kifiBlack
  color: #fff
  vertical-align: top
  text-align: center
  cursor: pointer

.kf-lfp-more-text
  line-height: 42px
  font-size: 16px
  padding: 0 6px

  &::before
    content: '+'
    margin-right: 2px
