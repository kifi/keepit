.library-members
  & .dialog-body
    padding: 0px 0px 0px 0px

.lmm-search-box
  width: 100%
  height: 80px
  background-color: #F3F5F7

  & input
    position: relative
    top: 50%
    transform: translateY(-50%)
    margin-left: 30px
    padding-left: 15px
    width: calc(100% - 60px)
    line-height: 40px
    box-sizing: border-box
    border-radius: 5px
    font-size: 12px
    placeholder secondaryTextGray

.lmm-members-content
  position: relative
  height: 320px
  overflow: hidden
  margin-bottom: 10px

.lmm-members-content-list
  margin-bottom: 20px
  height: 100%
  overflow-y: auto
  overflow-x: hidden

.lmm-members-content-list
  padding-left: 30px
  padding-right: 30px

.lmm-member-item
  padding: 10px 0px
  border-bottom: 1px solid #f3f5f7

.lmm-member-link
  outline: none

.lmm-member-pic
  display: inline-block
  border-radius: 100%
  width: 42px
  height: 42px

.lmm-member-info-wrapper
  display: inline-block
  vertical-align: top
  margin-left: 10px

.lmm-member-info-name
  font-size: 14px
  margin-bottom: 2px

.lmm-member-info-icon
  display: inline-block
  margin-right: 5px
  width: 20px
  height: 14px
  background-size: cover

.lmm-member-info-stat
  vertical-align: top
  background: none
  font-size: 13px
  color: #b2b2b2

  &.collab
    color: #56b263

.lmm-set-who-can-invite
  background-color: #F3F5F7
  padding-left: 20px
  line-height: 50px

  & input
    margin-right: 10px

