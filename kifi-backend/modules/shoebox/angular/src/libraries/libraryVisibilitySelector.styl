.library-visibility-radio-settings-option
  margin-bottom: 8px
  cursor: pointer

.library-visibility-radio-label
  cursor: pointer
  float: left
  clear: both

  &:hover
    .library-visibility-radio-check
      background-color: #f5f5f5
    .library-library-option-text
      color: darkBlueColor

.library-visibility-radio-input
  display: none

.library-visibility-radio-check
  display: inline-block
  width: 12px
  height: 12px
  margin-right: 5px
  background-color: #fff
  border: 1px solid #ccc
  border-radius: 50%

  &:hover
    background-color: #eee

  &:after
    display: none
    position: relative
    top: 2px
    width: 8px
    height: 8px
    background-color: darkBlueColor
    border-radius: 50%
    content: ' '

.library-visibility-radio-input.library-visibility-radio-input:checked ~ .library-visibility-radio-check:after
  display: block
  left: 2px

.library-visibility-option-text
  position: relative
  top: -2px
