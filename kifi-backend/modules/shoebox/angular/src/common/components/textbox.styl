// weird, but increases specificity over input[type="text"] reset
.kf-textbox.kf-textbox
  box-sizing: border-box
  display: inline-block
  border: 1px solid #c7c7c7
  border-radius: 5px
  padding: 10px 15px
  width: 100%
  color: textBlackColor
  vertical-align: top
  placeholder secondaryTextGray

  &:focus
    border: 1px solid blueColor

.kf-textbox.kf-textbox-static
  resize: none

.kf-textbox.kf-textbox-auto
  width: auto
