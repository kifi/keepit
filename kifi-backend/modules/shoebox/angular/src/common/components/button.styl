.kf-button
  padding: 4px defaultPadding
  border-radius: defaultBorderRadius/2
  background: white
  border: 1px solid textGreyColor
  color: textGreyColor
  height: auto
  line-height: normal
  appearance: none

  span
  .symbol-sprite
    display: inline-block
    vertical-align: middle
    line-height: normal

  .symbol-sprite
    width: 25px
    height: 25px
    fill: textGreyColor

.kf-button-small
  padding: 2px 9px

.kf-button-dialog
  border: 2px solid textLightGrey
  background: lightGray
  font-size: 12px
  line-height: 12px
  font-weight: bold
