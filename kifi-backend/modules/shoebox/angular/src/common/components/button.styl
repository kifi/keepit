.kf-button
  height: auto
  padding: 6px defaultPadding 4px
  border: 1px solid #bbb
  border-radius: 5px
  background: #f3f3f3 linear-gradient(#fff, alpha(#fff, 0))
  color: textSoftBlackColor
  font-size: 12px
  font-weight: 700
  font-smoothing: antialiased
  line-height: normal
  cursor: pointer
  appearance: none

  &:not([disabled]):not(.disabled)
    &:hover
      background: #f3f3f3

    &:active
      background: darken(#f3f3f3, 5%)

  &.disabled,
  &[disabled]
    color: #fff
    text-shadow: 1px 1px 1px rgba(0, 0, 0, .3)
    background: #ddd linear-gradient(alpha(#fff, 0), alpha(#fff, .5))
    cursor: no-drop
    opacity: .5

  span
  .symbol-sprite
    display: inline-block
    vertical-align: middle
    line-height: 1.6rem

  .symbol-sprite
    width: 25px
    height: 25px
    fill: #666

.kf-button-small
  padding: 2px 9px

.kf-button-large
  padding: 8px (defaultPadding * 1.5)
  font-size: 14px

.kf-button-dialog
  border: 2px solid textLightGrey
  background: lightGray
  font-size: 12px
  line-height: 12px
  font-weight: bold

.kf-button-textonly
  background: 0
  border: 0
  padding: 0
  margin: 0

.kf-button-error
  color: errorRed
  box-shadow: 0 0 2px 0 #f00

.kf-button-cta-blue
  background: linear-gradient(linkBlueColor, darken(linkBlueColor, 20%))
  color: #fff

  &:not([disabled]):not(.disabled)
    &:hover:not(:active)
      background: linear-gradient(linkBlueColor, darken(linkBlueColor, 20%))

    &:active
      background: darken(linkBlueColor, 20%)

.kf-button-cta-green
  background: linear-gradient(accentGreen, darken(accentGreen, 20%))
  color: #fff

  &:not([disabled]):not(.disabled)
    &:hover:not(:active)
      background: linear-gradient(accentGreen, darken(accentGreen, 20%))

    &:active
      background: darken(accentGreen, 20%)

.kf-button-cta-red
  background: linear-gradient(errorRed, darken(errorRed, 20%))
  color: #fff

  &:not([disabled]):not(.disabled)
    &:hover:not(:active)
      background: linear-gradient(errorRed, darken(errorRed, 20%))

    &:active
      background: darken(errorRed, 20%)
