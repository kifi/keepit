//------------------------------------------------------------------------------
//
// Markup-independent tooltip mixins
//
//------------------------------------------------------------------------------

tooltip-parent()
  position: relative
  white-space: normal

tooltip-body()
  background: textDarkColor
  color: #fff
  border-radius: 3px
  bottom: 100%
  box-shadow: 0px 5px 25px rgba(0, 0, 0, 0.25)
  content: attr(data-kf-tooltip)
  display: block
  font-size: 0.85rem
  line-height: 1.2rem
  margin-bottom: 0
  opacity: 0
  padding: 3px 5px
  position: absolute
  pointer-events: none
  left: calc(50% - 77px)
  text-align: center
  transform: translateY(0px)
  transition: transform 0.25s
  width: 150px
  z-index: 10

tooltip-arrow()
  border-top: 10px solid textDarkColor
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  width: 0px
  height: 0px
  content: ' '
  display: block
  background: transparent
  position: absolute
  left: calc(50% - 10px)
  pointer-events: none
  opacity: 0
  bottom: 100%
  z-index: 100

tooltip-hover-show()
  opacity: 1
  pointer-events: initial

tooltip-hover-slide()
  transform: translateY(-8px)
  transition: transform .25s

tooltip-hover-fade()
  transition: transform .25s, opacity .15s

tooltip-body-bottom()
  top: 100%
  bottom: auto
  margin-top: 15px
  transform: translateY(-6px)

tooltip-hover-slide-bottom()
  transform: translateY(0px)

tooltip-arrow-bottom()
  transform: translateY(6px) rotate(180deg)
  top: 100%
  bottom: auto

tooltip-body-left()
  transform: translateY(6px) translateX(6px)
  top: 50%
  bottom: auto
  margin-top: -19px
  margin-right: 12px
  left: auto
  right: 100%

tooltip-hover-slide-left()
  transform: translateY(6px) translateX(0)

tooltip-arrow-left()
  transform: rotate(-90deg)
  top: 50%
  margin-top: -6px
  bottom: auto
  left: auto
  right: 100%

tooltip-body-right()
  transform: translateY(6px) translateX(-6px)
  top: 50%
  bottom: auto
  margin-top: -19px
  margin-left: 16px
  left: 100%
  right: auto

tooltip-hover-slide-right()
  transform: translateY(6px) translateX(0)

tooltip-arrow-right()
  transform: rotate(90deg)
  top: 50%
  margin-top: -6px
  margin-left: 4px
  bottom: auto
  left: 100%
  right: auto


//------------------------------------------------------------------------------
// data-attribute/pseudo-element based selectors.
//
// These are useful for text-only tooltips.
// Usage:
// <div
//   data-kf-tooltip="This is some extra information"
//   data-kf-tooltip-position="bottom"
// >...</div>
//------------------------------------------------------------------------------

[data-kf-tooltip]
  tooltip-parent()

  &:after
    tooltip-body()

  &:before
    tooltip-arrow()

  &:hover
    &:after
    &:before
      tooltip-hover-show()

    &:after
      tooltip-hover-slide()

  // Positioning
  &[data-kf-tooltip-position="bottom"]
    &:after
      tooltip-body-bottom()

    &:hover:after
      tooltip-hover-slide-bottom()

    &:before
      tooltip-arrow-bottom()

  &[data-kf-tooltip-position="left"]
    &:after
      tooltip-body-left()

    &:hover:after
      tooltip-hover-slide-left()

    &:before
      tooltip-arrow-left()

  &[data-kf-tooltip-position="right"]

    &:after
      tooltip-body-right()

    &:hover:after
      tooltip-hover-slide-right()

    &:before
      tooltip-arrow-right()

//------------------------------------------------------------------------------
// Implementation with concrete element selectors
//
// These are useful for more flexible tooltips that contain markup.
// Usage:
// <div class="kf-tooltip-parent" data-kf-tooltip-position="bottom">
//    <div class="kf-tooltip-body">My <i>special</i> tooltip!</div>
//    ...
// </div>
//------------------------------------------------------------------------------
.kf-tooltip-parent
  tooltip-parent()

  &.kf-tooltip-parent-noclose
    &:after
      content: ''
      position: absolute;
      top: -15px
      right: 0
      bottom: 0
      left: 0

    &[data-kf-tooltip-position="right"]:after
      top: 0
      right: -15px
      left: 100%

    &[data-kf-tooltip-position="bottom"]:after
      top: 100%
      bottom: -15px

    &[data-kf-tooltip-position="left"]:after
      top: 0
      right: 100%
      left: -15px

  .kf-tooltip-body
    tooltip-body()

  &:before
    tooltip-arrow()

  &:hover
    &:before
    .kf-tooltip-body
      tooltip-hover-show()

    .kf-tooltip-body
      tooltip-hover-slide()

  &[data-kf-tooltip-position="bottom"]
    .kf-tooltip-body
      tooltip-body-bottom()

    &:hover .kf-tooltip-body
      tooltip-hover-slide-bottom()

    &:before
      tooltip-arrow-bottom()

  &[data-kf-tooltip-position="left"]
    .kf-tooltip-body
      tooltip-body-left()

    &:hover .kf-tooltip-body
      tooltip-hover-slide-left()

    &:before
      tooltip-arrow-left()

  &[data-kf-tooltip-position="right"]
    .kf-tooltip-body
      tooltip-body-right()

    &:hover .kf-tooltip-body
      tooltip-hover-slide-right()

    &:before
      tooltip-arrow-right()
