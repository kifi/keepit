.kf-tooltip-body
  position: relative
  z-index: 2000

.kf-tooltip-bg
  position: absolute
  z-index: 1998
  width: 100%
  height: 100%

.kf-tooltip
  position: fixed
  visibility: hidden
  z-index: 1999
  opacity: 0
  transition: opacity 0.2s, visibility 0s


.kf-tooltipped:hover > .kf-tooltip
  transition: opacity 0.2s
  visibility: visible
  opacity: 1
