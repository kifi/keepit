.kf-loading-spinner
  display: inline-flex
  flex-direction: column
  align-items: center
  margin: 25px

  svg
    width: 100px
    height: 100px
    fill: accentGreen
    animation: spin 5s infinite linear

  p
    position: relative
    margin: 5px auto
    font-size: 1rem
    color: accentGreen
    font-family: Helvetica, Arial, sans-serif

  p:after
    content: '...'
    position: absolute
    left: 100%

.kf-loading-spinner-center
  display: flex
  width: 100px
  margin-left: auto
  margin-right: auto
