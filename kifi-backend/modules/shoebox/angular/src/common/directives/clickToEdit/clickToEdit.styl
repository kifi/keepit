.kf-click-to-edit
  ::selection
    background: rgba(255, 255, 255, .33)

  ::-moz-selection
    background: rgba(255, 255, 255, .33)

  p
    margin: 0

  .kf-click-to-edit-textarea
  .kf-click-to-edit-p
    box-sizing: border-box
    width: 100%
    min-height: 25px
    padding: 2px
    background: none
    border: 0
    color: inherit
    text-decoration: inherit
    line-height: normal
    word-wrap: break-word
    text-align: inherit
    resize: none

  .kf-click-to-edit-p-a
    color: inherit
    text-decoration: inherit

  &.editable .kf-click-to-edit-wrapper
    padding: 5px 10px
    border: 2px dashed transparent
    border-radius: 10px
    cursor: pointer
    color: inherit
    text-decoration: inherit

  &.editable:hover .kf-click-to-edit-wrapper
    border-color: rgba(255, 255, 255, 0.25)
    box-shadow: inset 0 0 15px rgba(255, 255, 255, .1)

  &.editable.focus .kf-click-to-edit-wrapper
    border-color: textLightGrey
    box-shadow: inset 0 0 15px rgba(255, 255, 255, .1)

.kf-click-to-edit-textarea-tester
  box-sizing: border-box
  padding-left: 15px
  position: absolute
  top: -9999px
  left: -9999px
