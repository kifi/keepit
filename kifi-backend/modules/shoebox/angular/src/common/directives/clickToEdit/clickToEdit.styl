editButtonWidth = 40px

.kf-click-to-edit:hover
  position: relative

.kf-click-to-edit:hover:before
  content: 'edit'
  position: absolute
  right: 0
  width: editButtonWidth
  text-align: center
  font-size: 0.85rem
  font-weight: normal
  pointer-events: none
  display: inline-block
  vertical-align: middle
  color: white

.kf-click-to-edit-editing:hover:before
  content: 'save'

.kf-click-to-edit 
  input,
  textarea
    width: 'calc(100% - %s)' % editButtonWidth
    box-sizing: border-box
    padding: 2px
    background: none
    border-radius: 2px
    color: inherit
    border: 1px dashed transparent

    &:hover
      border-color: rgba(255, 255, 255, 0.25)

    &:focus,
    &:hover:focus
      border-color: #fff
