.org-selector
  margin-top: 15px
  margin-bottom: 15px

  .org-selector-org
    vertical-align: top
    position: relative
    cursor: pointer
    padding: 0 6px
    border-radius: 7px
    display: block
    width: 100%
    margin-left: -5px

    &:hover
      background: #EEEEEE

    &.selected
      &:before
        content: 'âœ“'
        color: white
        display: block
        position: absolute
        top: 0px
        left: 5px
        background: accentGreen
        padding: 0 5px
        border-top-left-radius: 3px
        border-bottom-right-radius: 7px
        box-shadow: -2px 2px 2px 1px rgba(0, 0, 0, 0.25)
        line-height: 20px
        font-size: 0.9rem

    &.disabled:not(.selected)
      h1
        color: #aaa

      img
        opacity: .5

    img
      width: 30px
      height: 30px
      margin: 0px auto
      display: block
      border-radius: 15%
      margin-bottom: 3px
      display: inline-block
      vertical-align: middle
      margin-right: 7px

    h1
      heading_sm()
      text-align: center
      margin-bottom: 0
      display: inline-block
      vertical-align: middle
