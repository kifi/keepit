.kf-keep-comments-container
  display: flex
  width: 100%
  height: auto
  flex-direction: row
  justify-content: space-around

  .kf-keep-comments
    display: flex
    flex-direction: column
    width: 90%
    border-left: solid 1px #3e495533
    border-right: solid 1px #3e495533
    border-bottom: solid 1px #3e495533
    border-bottom-left-radius: 5px
    border-bottom-right-radius: 5px
    background-color: #3e495508
    padding: 10px

    .kf-keep-comments-view-previous
      font-size: 14px
      font-weight: bold
      color: accentGreen
      align-self: center
      margin-bottom: 10px

      &:hover
        text-decoration: underline
        cursor: pointer

    .kf-keep-comments-comment-v-spacing
      margin-bottom: 15px

    .kf-keep-comments-input-container
      flex-direction: row
      flex-wrap: nowrap
      display: flex

      [contenteditable=true]:empty:before{
        content: attr(placeholder);
        display: block; /* For Firefox */
        color: #3e495566
      }

      .kf-keep-comments-input-user-img
        align-self: flex-start
        width: 34px
        height: 34px
        background: #3e495533
        border-radius: 17px
        flex-shrink: 0
        margin-right: 10px
        border: none
        outline: none

      .kf-keep-comments-input
        height: auto
        white-space: pre-wrap
        word-wrap: break-word
        background-color: white
        max-height: 300px
        flex-grow: 1
        border: 1px solid #3e495533
        border-radius: 1px
        font-size: 14px
        padding: 7px
        padding-right: 10px
        padding-left: 10px
        color: #3e4955CC
        box-sizing: border-box

