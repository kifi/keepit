.kf-keep-comment-embedded-data
  display: flex
  flex-direction: column

.kf-keep-comment-container
  width: 100%
  height: auto
  display: flex
  flex-direction: row

  .kf-keep-comment-img
    align-self: flex-start
    width: 34px
    height: 34px
    background: #3E495533
    border-radius: 17px
    background-size: cover
    flex-shrink: 0
    margin-right: 10px

  .kf-keep-comment-content
    display: flex
    width: 1px
    flex-grow: 1
    flex-direction: column
    font-size: 14px

    .kf-keep-comment-embedded-img
      max-width: 100px
      max-height: 100px

    .kf-keep-comment-commenter-text
      white-space: pre-wrap
      word-wrap: break-word
      flex-grow: 1
      color: #333333
      margin-top: 2px

    .kf-keep-comment-inline
      display: inline

    .kf-keep-comment-block
      display: block

    .kf-keep-comment-v-space
      margin-bottom: 4px

    .kf-keep-comment-v-space-top
      margin-top: 4px

    .kf-keep-comment-commenter-name
      font-weight: bold
      color: accentGreen
      margin-right: 5px

      &:hover
        text-decoration: underline
        cursor: pointer

    .kf-keep-comment-time
      color: #ABABAB
      font-size: 12px
      -webkit-font-smoothing: antialiased