.kf-utt
  position: absolute
  left: -40px
  top: -90px
  background-color: #fff
  color: #faf9f9
  box-shadow: rgba(103,130,156,.35) 2px 3px
  border: 1px solid #b8c5d2
  border-radius: 3px
  text-align: left
  cursor: default
  z-index: 10

  &.ng-enter
  &.ng-leave
    transition: transform 50ms, opacity 50ms

  &.ng-enter:not(.ng-enter-active)
  &.ng-leave-active
    transform: translate(0, 3px)
    opacity: 0

.kf-utt-top
  display: table
  table-layout: fixed
  border-collapse: collapse
  max-width: 320px

.kf-utt-pic
  display: table-cell
  height: 72px
  width: 72px
  margin: 1px
  border-radius: 2px 0 0 2px

.kf-utt-info
  display: table-cell
  vertical-align: middle
  padding: 0 14px
  font-size: 12px
  line-height: 13px
  color: #808080

.kf-utt-name
  font-size: 16px
  line-height: 18px
  color: #444
  margin-bottom: 4px

.kf-utt-desc
  white-space: nowrap
  color: #929496

.kf-utt-tri
  position: absolute
  height: 14px
  width: 28px
  bottom: -14px
  left: 36px
  margin-left: -14px
  overflow: hidden
  border-color: inherit

.kf-utt-tri::after
  content: ' '
  position: absolute
  height: 14px
  width: 14px
  left: 7px
  top: -7px
  -webkit-transform: rotate(45deg)
  transform: rotate(45deg)
  -moz-box-sizing: border-box
  box-sizing: border-box
  box-shadow: rgba(103, 130, 156, .35) 2px 1px
  border: 1px solid
  border-color: inherit
  background-color: #fff
