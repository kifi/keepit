.kf-alert-banner
  background-color: #FFEDA5
  margin: 20px 0px
  padding: 15px
  color: #F68980
  border-radius: 2px
  position: relative
  font-size: 110%

  .kf-alert-banner-head
    font-weight: 600

  .kf-alert-banner-button
    position: absolute;
    right: 15px;
    top: 10px;
    background-color: #FBB44C
    color: white
    padding: 5px 15px
    border-radius: 2px
    cursor: pointer
