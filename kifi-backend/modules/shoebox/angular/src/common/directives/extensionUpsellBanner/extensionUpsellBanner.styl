.extension-upsell-banner
  display: flex
  flex-direction: column
  justify-content: center
  width: 495px
  margin-bottom: 20px
  border-radius: 10px
  border: defaultBorder
  background-color: #fff
  padding: 15px 15px
  font-size: 13px
  color: #333
  position: relative

.extension-upsell-banner-image
  flex-shrink: 0
  width: 100px
  margin-right: 10px
  align-self: center

.extension-upsell-banner-content
  display: flex
  flex-direction: row
  align-items: center
  justify-content: center

.extension-upsell-banner-message
  font-size: 15px

.extension-upsell-banner-button
  background: greenColor
  padding: 6px 15px
  width: 40px
  align-self: center
  text-align: center
  margin-top: 5px
  border-radius: 5px
  color: #fff
  font-size: 14px
  cursor: pointer

.extension-upsell-banner-close.extension-upsell-banner-close
  position: absolute
  right: 8px
  top: 6px
  fill: #999
  width: 15px
  height: 15px
  cursor: pointer

  &:hover
    opacity: 0.7