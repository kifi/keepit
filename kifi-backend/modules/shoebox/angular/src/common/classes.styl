.kf-dropdown-menu
  position: absolute
  top: 100%
  right: 21px
  background: white
  border: 1px solid #cccccc
  z-index: 1
  display: block
  line-height: 150%

  & a
    display: block
    padding: 2px 8px
    color: #a7aaa9
    transition: background .2s ease
    white-space: nowrap

    &:hover
      background: #eeeeee

    &:active
      background: #cccccc

.kf-drag-mask
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1
  box-sizing: border-box

.kf-drag-target
  border-style: dashed
  border-width: 3px
  border-color: #c3dba8

.kf-candidate-drag-target
  .kf-drag-mask
    display: block
