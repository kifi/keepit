.kf-dropdown-menu
  position: absolute
  top: 100%
  background: white
  border: 1px solid separatorColor
  z-index: 1
  display: block
  line-height: 150%
  padding: 4px 0
  border-radius: 4px
  transform-origin: top
  transition: opacity .12s linear, transform .12s ease-in

  &.kf-dropdown-menu_split
    display: flex
    align-content: stretch
    padding-top: 0
    padding-bottom: 0

    .kf-dropdown-menu-nav a
      &:first-child
        margin-top: 5px

      &:last-child
        margin-bottom: 5px

.kf-dropdown-menu-item
  display: block
  padding: 0 20px 0 16px
  color: #556179
  font-size: 13px
  line-height: 30px
  white-space: nowrap
  text-align: right

  button&
    border: none
    background: transparent
    box-sizing: border-box
    font-smoothing: antialiased

  &:hover
  &.kf-hover
    background-color: #eee

  &:active
    background-color: #d8d8d8

.kf-dropdown-menu-nav
  + .kf-dropdown-menu-nav
    border-left: 1px solid separatorColor

.fill-parent
  width: 100%
  height: 100%

.clickable
  cursor: pointer
