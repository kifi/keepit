.kf-dropdown-menu
  position: absolute
  top: 100%
  background: white
  border: 1px solid #dbdee3
  z-index: 1
  display: block
  line-height: 150%
  padding: 4px 0
  border-radius: 4px
  transform-origin: top
  transition: opacity .12s linear, transform .12s ease-in

  a
    display: block
    padding: 0 25px 0 16px
    color: #556179
    transition: background .2s ease
    font-size: 13px
    line-height: 30px
    white-space: nowrap

    &:hover
      background: #eee

    &:active
      background: #ccc

.kf-keep-drag-mask
.kf-tag-new-location-mask
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1
  box-sizing: border-box

.kf-dragging-keep
  .kf-keep-drag-mask
    display: block

.fill-parent
  width: 100%
  height: 100%

.clickable
  cursor: pointer
