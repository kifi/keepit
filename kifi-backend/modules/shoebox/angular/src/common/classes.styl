
.kf-dropdown-menu
  position: absolute
  top: 100%
  background: white
  border: 1px solid #dbdee3
  z-index: 1
  display: block
  line-height: 150%
  padding: 4px 0
  border-radius: 4px
  transform-origin: top
  transition: opacity .12s linear, transform .12s ease-in

  & a
    display: block
    padding: 0 60px 0 16px
    color: #556179
    transition: background .2s ease
    white-space: nowrap
    font-size: 13px
    line-height: 30px
    white-space: nowrap

    &:hover
      background: #eeeeee

    &:active
      background: #cccccc

.kf-drag-mask
.kf-tag-new-location-mask
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1
  box-sizing: border-box
  border-width: 1px
  border-color: #c4d4e9
  border-style: none

.kf-candidate-drag-target
  .kf-drag-mask
    display: block

.kf-dragged
  .kf-drag-mask
    border-style: solid

.fill-parent
  width: 100%
  height: 100%

.clickable
  cursor: pointer