.modal-dialog
  &.modal-dialog
    position: fixed
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    width: auto
    margin: 0

    .modal.in &
      transform: translate(-50%, -50%)

    .modal.fade &
      transform: translate(-50%, -50%)

.modal-content
  width: 100%
  height: 100%


.kifi-onboarding-iframe
  position: fixed
  top: 0
  left: 0
  margin: 0 auto
  width: 100%
  height: 100%
  background: transparent
  z-index: 10000
