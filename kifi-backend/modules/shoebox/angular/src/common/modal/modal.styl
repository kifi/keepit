.dialog-x
  position: absolute
  top: 16px
  right: 18px
  border-radius: 100%
  width: 20px
  height: 20px
  background-color: #c8ced7
  cursor: pointer

  &:hover
  &:focus
    background-color: #bbc1ca

  &:active
    background-color: #afb5be

  &::before
  &::after
    content: ' '
    position: absolute;
    left: 50%
    top: 4px
    bottom: 4px
    border-radius: 2px
    width: 2px;
    background: #fff
    font-size: 0

  &::before
    transform: translate(-1px) rotate(45deg)

  &::after
    transform: translate(-1px) rotate(-45deg)

.dialog-buttons
  margin: 0px auto
  padding: 13px 0
  background-color: #f3f5f7
  text-align: center

  button
    {generic-dialog-button}

    // These rules in the block are not being picked up by the stylus preprocessor, argh!
    // Maybe the block needs to turn into a mixin or function...
    border-radius: 6px
    background: linear-gradient(to top, #f3f3f3, #fff)

    &:hover
      background: #e6e8ea

    &:active
      background: #dadcde

    &.disabled
    &.disabled:hover
      background: #f3f5f7
      color: #a9b0c0
      cursor: default


