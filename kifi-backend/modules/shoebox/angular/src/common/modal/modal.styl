//
// Blocks
//
.modal-dialog.modal-dialog
  position: fixed
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  width: auto

  box-sizing: border-box
  border: 10px transparent solid

  z-index: 1050

.modal-content
  width: 100%
  height: 100%
  box-shadow: 0px 10px 20px 10px rgba(0, 0, 0, 0.4)
  background: #fff
  border-radius: 10px
  overflow: hidden


.kifi-onboarding-iframe
  position: fixed
  top: 0
  left: 0
  margin: 0 auto
  width: 100%
  height: 100%
  background: transparent
  z-index: 10000


.dialog-content
  font-size: 14px
  line-height: 1.5
  color: kifiBlack

  .action-wrap
    margin: 0 auto 15px
    width: 100%
    text-align: center

  .email-address
    color: #73787f

dialog-header-vpad = 15px
dialog-header-border-bottom-width = 1px
dialog-header-line-height = 24px
dialog-header-height = (dialog-header-vpad * 2) + dialog-header-line-height + dialog-header-border-bottom-width

.dialog-header
  padding: dialog-header-vpad 23px
  border-bottom: dialog-header-border-bottom-width solid #e7e7e7
  background-color: #fff
  font: 700 16px/dialog-header-line-height Lato,Helvetica,Arial,sans-serif
  color: #5c6373
  text-align: left

  &.dialog-warning
    color: #ce6159

.dialog-x
  position: absolute
  top: 16px
  right: 18px
  border-radius: 100%
  width: 20px
  height: 20px
  background-color: #c8ced7
  cursor: pointer
  transform: rotate(45deg)

  &:hover
  &:focus
    background-color: #bbc1ca

  &:active
    background-color: #afb5be

  &::before
  &::after
    content: ''
    position: absolute
    background: #fff
    font-size: 0

  &::before
    top: 9px
    left: 4px
    right: 4px
    height: 2px

  &::after
    left: 9px
    top: 4px
    bottom: 4px
    width: 2px

.dialog-buttons
  display: flex
  justify-content: center
  margin: 0 auto
  padding: 13px 0
  background-color: #f3f5f7

  button + button
    margin-left: 5px

  .dialog-buttons-constant
    width: 120px
    padding-left: 0
    padding-right: 0

.dialog-body-wrap
  min-width: 300px
  max-width: 800px
  margin: 0
  margin-top: 20px
  padding: 0

  .dialog-body
    margin: 0 auto
    padding: 20px 25px
    max-height: 'calc(98vh - %s)' % dialog-header-height

  .dialog-buttons
    margin-bottom: 0px

.dialog-centered
  text-align: center

.modal-backdrop
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1030
  background-color: #000000
  opacity: 0.4

.kf-modal-upload-image-header
  padding: 20px
  text-align: center
  word-wrap: break-word
  margin-right: 30px
  display: inline-block

  &.warning
    color: #ce6159

.kf-modal-waiting
  display: inline-block
  transform: scale(.45)
  position: relative
  top: -30px
