//
// Blocks
//
generic-dialog-button =
  width: 100px
  padding: 13px 0 10px
  border: 1px solid rgba(166, 175, 189, 0.53)
  border-radius: 6px
  font-size: 12px
  font-weight: 700
  font-smoothing: antialiased
  color: #5c6373
  cursor: pointer

  &.dialog-warn
    background: #d50000
    color: white

    &:focus
    &:hover
      background: #c80000

.modal-dialog.modal-dialog
  position: fixed
  left: 50%
  top: 50%
  transform: translate(-50%, -50%)
  width: auto
  margin: 0
  z-index: 1050

.modal-content
  width: 100%
  height: 100%
  border: 1px solid #8197AC
  box-shadow: 10px 10px 0 rgba(0, 40, 90, 0.2)
  background: #fff
  border-radius: 10px
  overflow: hidden


.kifi-onboarding-iframe
  position: fixed
  top: 0
  left: 0
  margin: 0 auto
  width: 100%
  height: 100%
  background: transparent
  z-index: 10000


.dialog-content
  font-size: 14px
  line-height: 1.5
  color: kifiBlack

  .action-wrap
    margin: 0 auto 15px
    width: 100%
    text-align: center

  .email-address
    color: #73787f

.dialog-header
  padding: 15px 23px
  border-bottom: 1px solid #e7e7e7
  background-color: #fff
  font-family: Lato,Helvetica, Arial, sans-serif
  font-size: 16px
  font-style: normal
  font-weight: 700
  color: #5c6373
  text-align: left

  &.dialog-warning
    color: #ce6159

.dialog-x
  position: absolute
  top: 16px
  right: 18px
  border-radius: 100%
  width: 20px
  height: 20px
  background-color: #c8ced7
  cursor: pointer

  &:hover
  &:focus
    background-color: #bbc1ca

  &:active
    background-color: #afb5be

  &::before
  &::after
    content: ' '
    position: absolute;
    left: 50%
    top: 4px
    bottom: 4px
    border-radius: 2px
    width: 2px;
    background: #fff
    font-size: 0

  &::before
    transform: translate(-1px) rotate(45deg)

  &::after
    transform: translate(-1px) rotate(-45deg)

.dialog-buttons
  margin: 0px auto
  padding: 13px 0
  background-color: #f3f5f7
  text-align: center

  button
    {generic-dialog-button}

    // TODO(yiping): these rules in the block are not being picked up by the stylus preprocessor, argh!
    // Maybe the block needs to turn into a mixin or function...
    border-radius: 6px
    background: linear-gradient(to top, #f3f3f3, #fff)

    &:hover
      background: #e6e8ea

    &:active
      background: #dadcde

    &.disabled
    &.disabled:hover
      background: #f3f5f7
      color: #a9b0c0
      cursor: default


.dialog-body-wrap
  min-width: 300px
  max-width: 800px
  margin: 0
  padding: 0

  .dialog-body
    margin: 0 auto
    padding: 30px 25px
    max-height: calc(98vh - 55px)

  .dialog-buttons
    margin-bottom: 0px

.dialog-centered
  text-align: center

.modal-backdrop
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1030
  background-color: #000000
  opacity: 0.3

.kf-modal-upload-image-header
  padding: 20px
  text-align: center
  word-wrap: break-word
  margin-right: 30px
  display: inline-block

  &.warning
    color: #ce6159

.kf-modal-waiting
  display: inline-block
  transform: scale(.45)
  position: relative
  top: -30px
