// Mobile styles


.kf-mobile

  .kf-header.public-header
    height: 100px

    .kf-header-left
      width: 450px
      margin-top: 17px

      .public-header-tagline
        font-size: 22px
        width: 200px
        display inline-block
        line-height: 24px
        vertical-align middle

      .kifi-clover-logo-icon
        height: 56px
        width 56px

      .kf-header-logo
        margin: 0 15px 0 20px
        width: 80px
        height 42px

    .kf-header-right
      vertical-align middle
      font-size: 28px
      line-height: 102px

      .public-header-dot
        font-size: 20px

  .kf-col-island
    margin-top: 40px

  .kf-main-library-keeps

    .kf-library-card-header
      margin-bottom: -10px

      .library-card

        .kf-keep-lib-name.kf-keep-lib-name.kf-keep-lib-name.kf-keep-lib-name
            font-size 55px

        .kf-keep-lib-info

          .kf-keep-lib-owner
            text-align center

            .kf-keep-lib-user-image
              display: block
              text-align center
              margin: 0 auto
              width: 160px
              height: 160px

            .kf-keep-lib-curator
              margin-top: 30px
              font-size: 30px
              line-height 35px

            .kf-keep-lib-owner-name
              font-size: 30px
              line-height 35px

          .kf-keep-lib-description
            font-size: 30px
            line-height 40px

          .kf-keep-lib-metrics
            display block
            margin: 0 auto
            text-align: center
            font-size: 30px
            line-height 30px
            margin: 30px 0

            .kf-keep-lib-keeps-followers-stats
              font-size: 30px
              line-height 30px

            .kf-keep-lib-stats-number
              font-size: 30px

          .kf-keep-lib-follower-preview
            text-align: center
            margin: 0 auto
            display block
            margin: 0 0 30px

        .kf-keep-footer
          padding-top: 34px

          .library-button-with-icon
            width: 90px
            height: 68px

            .kf-keep-lib-footer-button-icon
              top: 15px
              left: 26px
              width: 38px
              height: 38px

          .kf-keep-lib-footer-button-follow
            font-size: 28px
            padding: 18px 50px
            border-radius: 7px


    .kf-main-keeps

      .kf-keep
         border-radius 30px
         margin-top: 20px

        .kf-keep-contents
          padding 30px 10px 10px

          .kf-keep-title
            font-size: 46px
            line-height 52px
            // Will it work?
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical
            display: -webkit-box
            overflow-y: hidden
            margin-bottom: 10px


          .kf-keep-subtitle
            font-size: 32px
            height: 36px
            line-height 28px
            overflow-x: hidden

            .kf-keep-dot
            .kf-keep-time
              display: none

            .kf-keep-read-time
              margin-left: 15px

              .sprite-small-clock
                display: none

            .kf-keep-url
              font-size: 32px
              height: 40px

          .kf-keep-description
            font-size 30px
            line-height 42px

        .kf-keep-who
          margin-bottom: 20px

          .kf-keep-who-text
            font-size: 28px
            margin-left: 10px

            .svg-button-keep-heart-green
              background-size: 30px 32px
              padding-left: 45px

      .kf-keeps-load-more
        font-size: 42px
        line-height: 100px
        margin-bottom: 30px