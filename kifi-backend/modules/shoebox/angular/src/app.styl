html
  height: 100%
  text-align: left
  overflow: visible

body
  position: relative
  overflow: visible
  min-height: calc(100% - 62px)
  width: 100%
  padding: 0
  margin: 62px 0 0;
  background: appBackgroundColor
  font-family: Lato, Helvetica, Arial, sans-serif
  min-width: 800px

  &.modal-open
    overflow: hidden

*, :after, :before
  box-sizing: content-box

h1, h2, h3, h4, h5, label
  margin: 0
  font-weight: normal
  font-smoothing: antialiased

h1, h2
  title-text()

input[type="text"]
  padding: 0
  border: none
  margin: 0
  background: #fff

img
  border: none
  vertical-align: middle

menu, ol, ul
  list-style: none
  padding: 0
  margin: 0

:link,
:visited
  color: linkColor
  text-decoration: none
  font-smoothing: antialiased

::-webkit-input-placeholder
  color: #aaaaaa
  font-style: italic
:-moz-placeholder
  color: #aaaaaa
  font-style: italic
::-moz-placeholder
  color: #aaaaaa
  font-style: italic
:-ms-input-placeholder
  color: #aaaaaa
  font-style: italic

:focus
  outline: none

.clearfix
  &::before
  &::after
    content: ""
    display: table

  &::after
    clear: both

  zoom: 1

.kf-cols
  text-align: start

.kf-logged-in .kf-col-island
  max-width: userAppMaxWidth
  margin: 0 auto

.kf-col
  display: inline-block
  vertical-align: top
  background: appBackgroundColor
  box-sizing: border-box
  z-index: 1

.kf-col-inner
  height: 100%
  width: 100%

.kf-horizontal-separator
  width: 100%
  padding: 2px 0 0
  border-bottom: separatorBorder
  margin: 10px 0

.kf-logged-out
  &.kf-logged-out
    .kf-col
      margin-top: 0

.ng-cloak
  display: none !important

.kf-button
  display: inline-block
  vertical-align: top
  height = 32px
  height: height
  border: 1px solid #bbb
  border-radius: 5px
  padding: 0 15px
  background: linear-gradient(to top, #f3f3f3, #fff)
  font: 13px\/height Lato, Helvetica, Arial, sans-serif
  color: #666
  a&
    font-smoothing: auto

    &:focus
      outline: none

.kf-button-icon
  display: inline-block
  vertical-align: top
  width: 18px
  height: inherit
  background-repeat: no-repeat
  background-position: center center
  background-size: contain
  margin: 0 5px 0 -3px

