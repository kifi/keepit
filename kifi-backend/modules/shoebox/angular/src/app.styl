html
  height: 100%
  text-align: left
  overflow: visible

body
  position: relative
  overflow: visible
  padding: 0
  margin: 0;
  background: appBackgroundColor
  font-family: Lato, Helvetica, Arial, sans-serif

*, :after, :before
  box-sizing: content-box

h1, h2, h3, h4, h5, label
  margin: 0
  font-weight: normal
  font-smoothing: antialiased

h1, h2
  title-text()

input[type="text"]
  padding: 0
  border: none
  margin: 0
  background: #fff

img
  border: none
  vertical-align: middle

menu, ol, ul
  list-style: none
  padding: 0
  margin: 0

:link,
:visited
  color: linkColor
  text-decoration: none
  font-smoothing: antialiased

::-webkit-input-placeholder
  color: #aaaaaa
  font-style: italic
:-moz-placeholder
  color: #aaaaaa
  font-style: italic
::-moz-placeholder
  color: #aaaaaa
  font-style: italic
:-ms-input-placeholder
  color: #aaaaaa
  font-style: italic

:focus
  outline: none

.clearfix
  zoom: 1

  &::before
  &::after
    content: ''
    display: table

  &::after
    clear: both

.kf-app
  // min-height keeps vertical scrollbars present to avoid horizontal shift
  // during page transitions when content is removed or inserted
  min-height: 101vh
  box-sizing: border-box
  padding-top: appHeaderHeight2

  @media (max-height: appHeaderHeight1MaxDim) and (max-width: appHeaderHeight1MaxDim)
    padding-top: appHeaderHeight1

.ng-cloak
  display: none !important

.kf-width-bounded  // for pages that are not yet responsive
  margin: 0 auto
  min-width: appMinWidth
  max-width: appMinWidth
  padding: 0 appSidePad2

.kf-button
  display: inline-block
  vertical-align: top
  height = 32px
  height: height
  border: 1px solid #bbb
  border-radius: 5px
  padding: 0 15px
  background: #f3f3f3 linear-gradient(#fff, alpha(#fff, 0))
  font: 13px\/height Lato, Helvetica, Arial, sans-serif
  color: #666

  &:hover
    background-color: #f8f8f8

    &:active
      background-color: #eee

  a&
    font-smoothing: auto

    &:focus
      outline: none

.kf-button-icon
  display: inline-block
  vertical-align: top
  width: 18px
  height: inherit
  background-repeat: no-repeat
  background-position: center center
  background-size: contain
  margin: 0 5px 0 -3px

