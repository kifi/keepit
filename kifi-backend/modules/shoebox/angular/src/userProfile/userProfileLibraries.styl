.kf-upl-follower
  display: inline-block
  vertical-align: top
  width: follower-pic-diameter
  height: follower-pic-diameter
  background-size: cover
  background-position: center
  border-radius: 100%
  margin-right: 4px

  &:last-of-type
    margin-right: 3px

.kf-upl-all-followers
  margin-left: 1px
