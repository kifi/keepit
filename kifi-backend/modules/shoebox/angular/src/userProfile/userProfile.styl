//
// Desktop styles.
// Note: mobile styles defined at the bottom.
//
.kf-user-profile
  margin: 0 auto
  text-align: center

  // The following styles are hacky and can be removed when we move to
  // a two-column layout.
  margin-top: -15px  // So that the background will extend to the top
  margin-left: 1px   // Otherwise there is a small area jutting out on the top left

.kf-user-profile-header
  color: #fff
  background: #3e4954

.kf-user-profile-header-content
  position: relative
  padding: 50px 0 25px

.kf-user-profile-optional-action
  position: absolute
  top: 90px
  right: 250px

.kf-user-profile-connect
  position: relative
  left: 185px
  display: inline-block
  padding: 10px 0 0 50px
  width: 180px
  height: 39px
  background-repeat: no-repeat
  text-align: left

  &.clickable
    cursor: pointer

.kf-user-profile-user-settings
  display: block
  width: 20px
  height: 20px
  background-repeat: no-repeat

.kf-user-profile-picture
  height: 100px
  width: 100px
  border-radius: 100%

.kf-user-profile-name
  font-size: 1.3em
  line-height: 2em

.kf-user-profile-user-nav-link
  display: inline-block
  color: #9fa3aa

  &:first-child
    margin-right: 5px

    &::after
      margin-left: 5px
      content: 'Â·'

.kf-upl-nav-container
  height: 68px
  padding-top: 15px
  background: #e8e8e8
  text-align: center

.kf-upl-nav
  display: table
  width: 75%
  margin: 0 auto
  border-radius: 6px
  background: #cbcbcb

.kf-upl-nav-link
  display: table-cell
  width: 33%
  height: 38px
  line-height: 38px
  border-radius: 6px  // TODO: investigate why our toolchain strips out border-radius: inherit
  font-size: 0.8em
  color: #333539

  &.kf-selected
    background: #fff
    color: #000

  &.kf-my::before
    content: 'My '


//
// Mobile styles.
//
.kf-logged-out.kf-mobile
  .kf-user-profile
    font-size: 1.5em

  .kf-user-profile-header-content
    padding: 55px 0 30px

  .kf-upl-nav-container
    height: 70px
    padding-top: 20px

  .kf-upl-nav-link
    height: 45px
    width: 30%
    max-width: 220px
    font-size: 1.1em
