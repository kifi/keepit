.kf-user-profile
  // Pretty much everything is centered on this page. :)
  margin: 0 auto
  text-align: center

.kf-user-profile-header
  color: #fff
  background: #3e4954

.kf-user-profile-header-content
  position: relative
  padding: 50px 0 25px

.kf-user-profile-optional-action
  position: absolute
  top: 85px
  right: 30px

.kf-user-profile-picture
  border-radius: 100%

.kf-user-profile-name
  font-size: 1.3em
  line-height: 2em

a.kf-user-profile-user-nav-link
  display: inline-block
  color: #9fa3aa

  &:first-child
    margin-right: 5px
