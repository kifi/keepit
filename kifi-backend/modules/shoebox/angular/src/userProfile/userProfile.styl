.kf-user-profile
  margin: 0 auto
  text-align: center

.kf-user-profile-header
  color: #fff
  background: #3e4954

.kf-user-profile-header-content
  position: relative
  padding: 50px 0 25px

.kf-user-profile-optional-action
  position: absolute
  top: 85px
  right: 30px

.kf-user-profile-picture
  border-radius: 100%

.kf-user-profile-name
  font-size: 1.3em
  line-height: 2em

.kf-user-profile-user-nav-link
  display: inline-block
  color: #9fa3aa

  &:first-child
    margin-right: 5px

    &::after
      margin-left: 5px
      content: 'Â·'

.kf-upl-nav-container
  height: 68px
  padding-top: 15px
  background: #e8e8e8
  text-align: center

.kf-upl-nav
  display: table
  width: 75%
  margin: 0 auto
  border-radius: 6px
  background: #cbcbcb

.kf-upl-nav-link
  display: table-cell
  width: 33%
  height: 38px
  line-height: 38px
  border-radius: 6px  // TODO: investigate why our toolchain strips out border-radius: inherit
  font-size: 0.8em
  color: #333539

  &.kf-selected
    background: #fff
    color: #000
