.kf-loh
  position: fixed
  top: 0
  width: 100%
  height: 62px
  background-color: #f9fafb
  border-bottom: 1px solid #dbdbdb
  z-index: 500
  user-select: none

.kf-loh-inner
  height: 100%
  width: 745px
  margin: 0 auto
  transition: padding 0.5s
  box-sizing: border-box

.kf-loh-left
  float: left
  height: 100%
  width: 240px
  margin-left: 30px
  line-height: 62px
  box-sizing: border-box

.kf-loh-clover-logo
  display: inline-block
  vertical-align: middle
  margin-right: 2px
  width: 28px
  height: 28px
  background-repeat: no-repeat

.kf-loh-kifi-logo
  display: inline-block
  vertical-align: middle
  margin-left: 10px
  margin-right: 4px
  width: 40px
  height: 21px
  background-repeat: no-repeat

.kf-loh-tagline
  display: inline-block
  vertical-align: -7px
  width: 100px
  font-size: 11px
  color: #7d7d7d
  line-height: 1.1

.kf-loh-right
  overflow: hidden
  height: 100%
  margin-right: 60px
  line-height: 62px
  text-align: right
  font-size: 14px
  box-sizing: border-box

  @media screen and (max-width: 1280px)
    margin-right: 30px

.kf-loh-link
.kf-loh-dot
  color: #818692

.kf-loh-link
  &:focus
  &:hover
    color: #686d79

.kf-loh-dot
  margin: 0 10px
