search-height = 28px
search-dur = .36s

.kf-loh
  position: fixed
  top: 0
  width: 100%
  height: 62px
  background-color: #f9fafb
  box-shadow: 0 1px rgba(0,0,0,.14)
  z-index: 500
  user-select: none

  [kifi-pane-parent] &
    transition: width .25s ease-in

  [kifi-with-pane] &
    width: calc(100% - 322px)

.kf-loh-inner
  height: 100%
  width: 'calc(100% - %s)' % (2 * appSidePad)
  display: table
  table-layout: fixed

.kf-loh-left
  display: table-cell
  vertical-align: middle
  width: 270px
  font-size: 0
  white-space: nowrap
  overflow: hidden
  transition: width search-dur

  .kf-lit>&
    width: 100px

.kf-loh-logo
  display: inline-block
  vertical-align: middle
  width: 80px
  height: 36px
  background-position: left center
  background-repeat: no-repeat
  background-size: 70px auto
  outline-color: #fff

.kf-loh-tagline
  display: inline-block
  vertical-align: middle
  width: 100px
  line-height: 13px
  font-size: 11px
  color: #7d7d7d
  cursor: default
  transition: opacity linear search-dur

  .kf-lit &
    opacity: 0

.kf-loh-center
  display: table-cell
  vertical-align: middle
  text-align: right

.kf-loh-search
  border-width = 1px
  display: inline-table
  box-sizing: border-box
  width: 220px
  height: search-height + 2 * border-width
  border: border-width solid alpha(defaultBorderColor, .5)
  border-radius: 3px
  background-color: transparent
  transition: width search-dur

  .kf-lit &
    width: 100%
    border-color: defaultBorderColor
    background-color: #fff

search-icon-width = 15px
search-icon-left-pad = 7px

.kf-loh-search-left
  display: table-cell
  vertical-align: middle
  padding-left: search-icon-left-pad
  white-space: nowrap
  font-size: 0
  position: relative  // for svg-search-icon-gray
  transition: background-color search-dur, padding-left 0s

  .kf-loh-inner:not(.kf-lit) &
    padding-left: search-icon-left-pad + search-icon-width + 1px
    background-color: alpha(#fff, 0) !important  // overrides inline library color
    transition-delay: 0s, search-dur

.kf-loh-search-icon
  position: absolute
  top: 0
  left: search-icon-left-pad
  width: search-icon-width
  height: search-height
  background-position: center
  background-repeat: no-repeat
  background-size: contain

.kf-loh-search-lib-icon
  display: inline-block
  vertical-align: middle
  width: search-icon-width
  height: search-icon-width
  background-repeat: no-repeat
  background-size: contain
  position: relative  // to overlap svg-search-icon-gray
  transition: width 0s, opacity search-dur

  .kf-loh-inner:not(.kf-lit) &
    width: 0
    opacity: 0
    transition-delay: search-dur, 0s

lib-owner-img-radius = 12px

.kf-loh-search-lib
  display: inline-block
  vertical-align: middle
  box-sizing: border-box
  max-width: 0
  padding: 0
  line-height: search-height
  font-size: 13px
  font-weight: 100
  color: #fff
  text-align: left
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
  opacity: 0
  visibility: hidden
  transition: max-width search-dur, padding search-dur, opacity search-dur, visibility 0s search-dur

  .kf-lit &
    max-width: 180px
    padding: 0 5px 0 0
    opacity: 1
    visibility: visible
    transition-delay: 0s

.kf-loh-search-lib-owner-img
  display: inline-block
  vertical-align: top
  position: relative
  z-index: 1
  top: 2px
  left: 6px
  width: 2 * lib-owner-img-radius
  height: 2 * lib-owner-img-radius
  border-radius: 50%
  background-size: contain
  margin-right: 10px

.kf-loh-search-center
  display: table-cell
  width: 99%
  padding-left: 4px
  transition: padding-left search-dur

  .kf-lit &
    padding-left: 8px

input.kf-loh-search-input
  width: 100%
  line-height: search-height
  background-color: transparent

.kf-loh-search-right
  display: table-cell
  width: 1%
  white-space: nowrap
  vertical-align: middle

.kf-loh-search-clear
  border: none
  background-color: transparent
  padding: 0 8px 0 0
  line-height: search-height
  font-weight: 200
  font-size: 16px
  color: blueColor
  cursor: pointer

.kf-loh-right
  display: table-cell
  width: 144px
  vertical-align: middle
  text-align: right
  font-size: 14px
  position: relative  // for follow button

.kf-loh-links
  position: relative  // for follow button

.kf-loh-link
.kf-loh-dot
  color: #818692

.kf-loh-link
  &:focus
  &:hover
    color: #686d79

.kf-loh-dot
  margin: 0 10px
