sidePad = 10px

.kf-ssg
  position: absolute
  top: 1px
  left: 0
  right: 0
  border-radius: 4px
  padding: 4px 0
  background: #fff
  box-shadow: 0 3px 8px rgba(0,0,0,.15)

.kf-ssg-group-title
  padding-left: sidePad
  line-height: 22px
  font-size: 12px
  color: #bbb
  text-transform: uppercase

  &:not(:first-child)
    padding-top: 4px

iconAreaWidth = sidePad + 54px

.kf-ssg-a
  display: block
  color: #333
  padding: 0 sidePad 0 iconAreaWidth
  position: relative

  &.kf-selected
    background-color: #f3faf2

uriHeight = 48px

.kf-ssg-uri
  height: uriHeight

.kf-ssg-uri-thumb
  position: absolute
  sidePad = 10px
  top: 6px
  left: sidePad
  bottom: 6px
  width: iconAreaWidth - (2 * sidePad)
  background-size: cover
  background-color: #eee
  box-shadow: inset 0 0 1px rgba(0,0,0,.15)

.kf-ssg-uri-title
  padding-top: 6px
  line-height: 20px
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

  &:empty::before
    content: 'no title'
    color: #ccc

.kf-ssg-uri-domain
  line-height: 16px
  font-size: 12px
  color: accentGreen
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

queryHeight = 32px

.kf-ssg-query
.kf-ssg-no-results
  height: queryHeight
  line-height: queryHeight
  font-size: 14px
  color: #777

.kf-ssg-query-icon
  position: absolute
  top: 0
  left: 0
  height: queryHeight
  width: iconAreaWidth
  background-position: center
  background-size: 16px auto
  background-repeat: no-repeat

.kf-ssg-no-results
  padding: 0 sidePad

libHeight = 64px
libCardTop = 12px
countsHeight = 14px

.kf-ssg-lib
  height: libHeight
  font-size: 12px

.kf-ssg-lib-card
  position: absolute
  top: libCardTop
  left: 16px
  height: 35px
  width: 27px
  border-radius: 4px
  background-color: #808080
  box-shadow: 0 1px #fff, 0 2px #c9ccc0, 0 3px #fff, 0 4px #c9ccc0

.kf-ssg-lib-icon
  position: absolute;
  top: (libCardTop + 8px)
  left: 21px
  width: 17px
  height: 17px
  background-position: center
  background-size: contain
  background-repeat: no-repeat

.kf-ssg-lib-owner-pic-wrap
  position: absolute
  top: (libCardTop + 21px)
  left: 28px
  height: 23px
  width: 23px
  border-radius: 50%

  &::after
    content: ''
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    border-radius: 50%
    box-shadow: inset 0 0 1px rgba(0,0,0,.15)

.kf-ssg-lib-owner-pic
  height: 100%
  width: 100%
  border-radius: 50%

.kf-ssg-lib-name
  padTop = libCardTop + 2px
  padding-top: padTop
  line-height: 20px
  font-size: 16px

  .kf-with-counts>&
    padding-top: padTop - (countsHeight / 2)

.kf-ssg-lib-owner-name
  line-height: 16px
  font-size: 12px

.kf-ssg-lib-counts
  line-height: countsHeight
  font-size: 11px
  color: #777

  &>:not(:last-child)::after
    content: ' \00b7 '

userHeight = 46px
userPicRadius = 32px

.kf-ssg-user
  height: userHeight

.kf-ssg-user-pic-wrap
  position: absolute
  top: ((userHeight - userPicRadius) / 2)
  left: ((iconAreaWidth - userPicRadius) / 2)
  height: userPicRadius
  width: userPicRadius
  border-radius: 50%

  &::after
    content: ''
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    border-radius: 50%
    box-shadow: inset 0 0 2px rgba(0,0,0,.15)

.kf-ssg-user-pic
  height: 100%
  width: 100%
  border-radius: 50%

.kf-ssg-user-name
  padTop = 13px
  padding-top: padTop
  line-height: 20px

  .kf-with-counts>&
    padding-top: padTop - (countsHeight / 2)

.kf-ssg-user-counts
  line-height: 14px
  font-size: 11px
  color: #777

  &>:not(:last-child)::after
    content: ' \00b7 '
