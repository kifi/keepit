.kf-lih
  position: fixed
  top: 0
  width: 100%
  height: 62px
  background-color: #333
  z-index: 500
  user-select: none

.kf-lih-inner
  height: 100%
  max-width: userAppMaxWidth
  margin: 0 auto
  transition: padding 0.5s
  box-sizing: border-box

.kf-lih-left
  float: left
  height: 100%
  width: 240px
  margin-left: 30px
  line-height: 62px
  box-sizing: border-box

.kf-lih-toggle-menu
.kf-lih-left-separator
.kf-lih-profile-picture
  display: inline-block
  vertical-align: middle

.kf-lih-profile-picture
  display: inline-block

.kf-lih-toggle-menu
  cursor: pointer
  margin: 0 13px

.kf-lih-left-separator
  height: 35px
  border: 1px solid #7d7d7d

.kf-lih-profile-picture
  width: 32px
  height: 32px
  margin: 0 6px 0 6px
  border-radius: 100%
  background-size: 100%

.kf-lih-logo
  display: inline-block
  vertical-align: middle
  width: 70px
  height: 27px
  margin-left: 10px

.kf-lih-search-bar
  float: left
  box-sizing: border-box
  max-width: 850px
  width: calc(100% - 530px)
  padding-top: 7px

.kf-lih-search-wrap
  position: relative
  z-index: 1
  box-sizing: border-box
  width: 90%
  margin-left: 30px
  margin-top: 5px
  padding: 5px 0
  border: defaultBorder
  border-radius: 3px
  background-color: #fff

.kf-lih-search-query-wrap
  position: relative
  top: 3px
  display: inline-block
  vertical-align: bottom
  width: calc(70% - 125px)
  height: 24px

  &.kf-extend
    width: calc(100% - 90px)
    margin-left: 8px

  .kf-lih-search-query-input
    width: 100%
    color: textDarkGray

.kf-lih-search-icon
  display: inline-block
  margin-left: 5px
  sprite2x($search-icon-default)
  vertical-align: bottom

  &.kf-focused
    sprite2x($search-icon-active)

.kf-lih-search-lib-owner-img
  position: relative
  left: 9px
  z-index: 1
  width: 24px
  height: 24px
  border-radius: 100%

.kf-lih-search-lib-name
  position: relative
  left: -10px
  vertical-align: bottom
  display: inline-block
  padding: 4px 5px 4px 24px
  max-width: 25%
  border-radius: 8px 0 0 8px
  font-size: 13px
  font-weight: 100
  color: #fff
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

.kf-lih-search-lib-x
  position: relative
  left: -10px
  vertical-align: bottom
  display: inline-block
  padding: 3px 8px 4px 2px
  border-radius: 0 8px 8px 0
  font-size: 14px
  color: #fff
  cursor: pointer

.kf-lih-search-clear
  float: right
  margin-top: 3px
  margin-right: 8px
  font-weight: 200
  font-size: 16px
  color: blueColor
  cursor: pointer

.kf-lih-right
  overflow: hidden
  height: 100%
  margin-right: 60px
  line-height: 62px
  text-align: right
  font-size: 14px
  box-sizing: border-box

  @media screen and (max-width: 1280px)
    margin-right: 30px

  .kf-dropdown-menu
    display: none

    :hover
      background-color: #eee
    :active
      background-color: #ccc

  .sprite
    cursor: pointer
    margin: 0 5px

  .sprite-add-link
    &:hover
      sprite2x($add-link-active)

.kf-lih-manage-tags
  height: 32px
  width: 32px

.kf-lih-dropdown-menu-trigger
  display: inline-block

  &:hover
    .kf-dropdown-menu
      display: block
      margin-top: -10px
    .on-icon
      display: none

.kf-lih-friends
  .kf-dropdown-menu
    margin-left: -128px

.kf-lih-profile
  .kf-dropdown-menu
    margin-left: -50px
