.kf-my-identity
  position: relative
  width: 100%
  padding-bottom: 10px
  background: #fff
  text-align: center

.kf-my-settings-wrapper
  position: relative
  top: -10px
  display: block
  width: 66px
  height: 66px
  border: 6px solid #eff1f7
  border-radius: 50%
  margin: 0 auto -10px
  background-color: #b6c3cc
  font-size: 12px
  font-weight: 200
  letter-spacing: .4px
  z-index: 2

  &[href]
    color: white

  &:hover
    .kf-my-settings-shade
      background-color: rgba(103, 130, 156, 0.6)

    .kf-my-settings
      transform: none
      -webkit-transform: none

  &:active
    .kf-my-settings
      background: #929FAF

.kf-my-pic
  display: block
  width: 100%
  height: 100%
  border-radius: 50%
  background-size: 100%

.kf-my-settings-shade
  position: absolute
  top: 0
  left: 0
  display: block
  width: 100%
  height: 100%
  border-radius: 50%
  transition: background-color .2s ease

.kf-my-settings
  position: absolute
  top: 3px
  left: 3px
  width: 60px
  height: 60px
  background: #ABB8C8
  border-radius: 50%
  text-align: center
  transition: all 0.15s ease
  transform: scale(0, 0)
  -webkit-transform: scale(0, 0)

.kf-my-settings-icon
  display: inline-block
  width: 15px
  height: 15px
  background-image: url(../img/gear-white.png)
  background-repeat: no-repeat
  background-size: 15px 15px
  margin-top: 14px

.kf-my-settings-text
  display: block

.kf-my-name
  height: 28px
  line-height: 28px
  font-size: 16px

  &:first-child
    padding-top: 80px

.kf-my-description
  font-size: 12px
  color: #818692
  min-height: 14px
