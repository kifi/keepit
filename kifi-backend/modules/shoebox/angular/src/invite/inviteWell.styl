.social-invite-well
  padding: 25px 15px
  background-color: #EFF2F7
  position: relative
  border-radius: 3px
  margin: 15px 0
  @media screen and (max-width: 1230px)
    text-align: center

.social-networks-display
  float: right
  display: inline-block
  margin-top: 10px
  @media screen and (max-width: 1230px)
    float: initial
    margin: 20px 25px 0px


.social-networks-summary
  font-size: 14px

.social-networks-add
  font-size: 14px
  background-color: #41C381
  color: #fff
  border-radius: 3px
  padding: 5px 15px
  margin-left: 15px
  cursor: pointer
