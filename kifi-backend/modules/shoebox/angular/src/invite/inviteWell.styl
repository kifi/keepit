.social-invite-well
  margin: 15px 0
  padding: 25px 15px 15px
  background-color: #FFFFFF
  position: relative
  border-radius: 3px
  box-shadow: defaultBoxShadow
  border: defaultBorder
  @media screen and (max-width: 1100px)
    text-align: center

a.invite-well-find-friends-button
  float: right
  display: inline-block
  margin-top: 5px
  color: #4372B1
  cursor: pointer
  font-smoothing: auto
  @media screen and (max-width: 1100px)
    float: initial
    margin: 20px 25px 0px


