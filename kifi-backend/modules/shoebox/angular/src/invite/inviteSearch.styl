
.social-invite-search
  display: inline-block

  input
    padding: 10px
    font-size: 14px
    width: 285px
    border: 1px solid #c5d0da

  .social-invite-dropdown
    position: absolute
    box-sizing: border-box
    z-index: 2

    .social-invite-element
      background: #fff
      width: 289px
      border: 1px solid #c5d0da
      border-bottom: 0
      padding: 4px
      padding-left: 12px
      height: 56px

      &.social-invite-invited
        background-color: #bdd8fa

      &.social-invite-joined
        background-color: #c2d698

      &:first-child
        border-top: 0

      &:last-child
        border-bottom: 1px solid #c5d0da

.social-invite-image
  width: 55px
  height: 55px
  border-radius: 4px
  display: inline-block
  float: left
  margin-right: 15px

.social-invite-image.cant-find
  width: 42px
  height: initial
  display: inline-block
  float: left
  margin-top: 13px
  margin-right: 19px
  margin-left: 10px

.social-invite-summary
  float: left

.social-invite-name
  font-size: 14px
  padding-top: 10px
  color: #000
  text-overflow: ellipsis
  overflow: hidden
  width: 150px
  white-space: nowrap
  text-align: left

.social-invite-network
  font-size: 12px
  color: #628196
  vertical-align: bottom
  text-overflow: ellipsis
  overflow: hidden
  width: 190px
  white-space: nowrap
  text-align: left


  .social-network-icon
    vertical-align: middle
    margin-right: 5px
    height: 16px
    width: 16px
    display: inline-block

  .kf-email-icon-micro
    background-color: #e36767

.social-invite-action
  position absolute
  right: 0
  display: block
  background-color: #6fa6ef
  border-radius: 3px
  padding: 4px 20px
  color: #fff
  font-weight: 300
  font-size: 13px
  margin: 15px 8px

.social-invite-custom-email
  padding-top: 18px

.friend-not-found-modal
  h1, h2
    text-align: center

  h3
    color: #42C380
    padding: 10px 0px

