col-1-min-width = 590px
col-1-max-width = 690px
col-2-width = 256px
col-gap = 20px

// min-width: 866 = col-1-min-width + col-gap + col-2-width
// max-width: 966 = col-1-max-width + col-gap + col-2-width

.kf-recos-title
  padding: 16px 0

.kf-reco-cols
  display: table
  width: 100%
  table-layout: fixed

.kf-reco-col-1
  display: table-cell
  vertical-align: top

.kf-reco-col-2
  display: table-cell
  vertical-align: top
  width: col-2-width
  padding-left: col-gap

.kf-reco
  margin-bottom: 20px

.kf-reco.ng-leave
  opacity: 1
  transition: opacity 0.5s ease

.kf-reco.ng-leave.ng-leave-active
  opacity: 0

.kf-reco.ng-enter
  opacity: 0
  transition: opacity 0.5s ease

.kf-reco.ng-enter.ng-enter-active
  opacity: 1

.kf-reco-info
  margin: 0 25px 20px 30px
  border: defaultBorder
  border-radius: 3px
  padding: 25px 20px
  background-color: #fafafa
  font-size: 18px

  h4
    font-weight: bold

.kf-reco-cta
  background-color: #5ab86d
  position: relative
  margin-bottom: 40px
  border-radius: 4px

.kf-reco-cta-text
  display: inline-block
  color: white
  letter-spacing: 0.5px
  line-height: 150%
  width: 40%
  font-size: 20px
  padding: 25px 0px 25px 25px

.kf-reco-cta-image
  display: inline-block
  width: 28%
  padding: 5% 10%
  float: right

.kf-reco-cta::after
  content: '';
  position: absolute;
  left: 50%;
  bottom: -15px;
  height: 0;
  width: 0;
  border: solid;
  margin-left: -16px;
  border-width: 16px 20px 0;
  border-color: #5ab86d transparent transparent;

.kf-reco-top
  padding: 20px 20px 0px

  // library recos with invite need additional spacing between the control header and the invite banner
  .kf-reco-with-invite &
    padding-bottom: 10px

.kf-reco-top
.kf-reco-bottom
  border-left: 1px solid #dadae2
  border-right: 1px solid #dadae2

.kf-reco-top
  position: relative
  border-top: 1px solid #dadae2
  border-radius: 10px 10px 0 0
  background-color: #fff
  font-size: 13px
  font-weight: 400
  color: #9d9d9d

  span
    display: inline-block

  &+.kf-keep
    border-top-left-radius: 0
    border-top-right-radius: 0

.kf-reco-bottom
  position:relative
  margin: 0 auto
  border-bottom: 1px solid #dadae2
  border-bottom-left-radius: 3px
  border-bottom-right-radius: 3px
  padding: 15px 0 15px
  width: 90%
  font-size: 13px
  text-align: center

  &.kf-reco-multiple-reasons
    padding-bottom: 10px

.kf-reco-reason
  margin: 0 auto
  width: calc(100% - 120px);
  line-height: 1.5em
  height: 19px
  overflow: hidden

  a
    color: linkBlueColor

  time
    white-space: nowrap

.kf-reco-multiple-reasons
  .kf-reco-reason
    position: relative
    left: -15px

.kf-reco-reason-topic
    white-space: nowrap

.kf-reason-bullet-container
  margin: 0px 40px -5px 0

.kf-reason-bullet
  padding: 0 1px
  font-size: 19px
  color: #ddd

  &.kf-dark-reason-bullet
    color: #bbb

// Icons
.kf-reco-icon
  position: relative
  float: right
  margin: -8px 0 0 10px
  width: 18px
  height: 18px

.kf-reco-recommended
  .kf-reco-top
    padding-top: 10px
  .kf-keep
    margin-bottom: 0
    border-top: 0
  .kf-reco-icon
    margin-top: 0
  .kf-reco-dropdown-menu-container .kf-dropdown-menu
    top: 18px
  .kf-keep-contents
    padding-top: 10px

.kf-reco-top-title
  font-size: 14px
  line-height: 27px

.kf-reco-icon:hover
  cursor: pointer

.kf-reco-icon::before
.kf-reco-icon::after
  content: ' '
  position: absolute;
  left: 50%
  width: 3px;
  background: #c7c7c7
  font-size: 0

.kf-reco-icon:hover::before
.kf-reco-icon:hover::after
.kf-reco-icon:focus::before
.kf-reco-icon:focus::after
  background: #aaa

.kf-reco-icon:active::before
.kf-reco-icon:active::after
  background: #888

// X icon
.kf-reco-close-x::before
.kf-reco-close-x::after
  top: 1px
  bottom: 1px
  border-radius: 2px
.kf-reco-close-x::before
  transform: translate(-1px) rotate(45deg)
.kf-reco-close-x::after
  transform: translate(-1px) rotate(-45deg)

// Down arrow icon
.kf-reco-dropdown-menu-down::before
.kf-reco-dropdown-menu-down::after
  top: 4px
  bottom: 4px
  border-top-left-radius: 2px
  border-top-right-radius: 2px
.kf-reco-dropdown-menu-down::before
  transform: translate(-4px) rotate(-45deg)
.kf-reco-dropdown-menu-down::after
  transform: translate(2px) rotate(45deg)

// Left and right arrow Icons
.kf-reco-reasons-left::before
.kf-reco-reasons-left::after
.kf-reco-reasons-right::before
.kf-reco-reasons-right::after
  top: 4px
  bottom: 4px
  border-top-left-radius: 2px
  border-top-right-radius: 2px

// Left arrow icon
.kf-reco-reasons-left
  right: 41px
.kf-reco-reasons-left::before
  transform: translate(-2px, -3px) rotate(45deg)
.kf-reco-reasons-left::after
  transform: translate(-2px, 3px) rotate(135deg)

// Right arrow icon
.kf-reco-reasons-right
  right: 20px
.kf-reco-reasons-right::before
  transform: translate(-2px, -3px) rotate(-45deg)
.kf-reco-reasons-right::after
  transform: translate(-2px, 3px) rotate(-135deg)

.kf-reco-bottom
  .kf-reco-icon
    position: absolute
    top: 20px
    margin: auto

// Dropdown menu
.kf-reco-dropdown-menu-container
  position: relative

  .kf-dropdown-menu
    display: none
    top: 10px
    right: 20px

    & li
      display: block
      padding: 0 25px 0 16px
      color: #556179
      transition: background .2s ease
      white-space: nowrap
      font-size: 15px
      line-height: 30px
      cursor: pointer

      &:hover
        background: #eee

      &:active
        background: #ccc

// Modal
.kf-reco-improve-modal
  p
    font-size: 15px

  label
    margin-left: 5px

.kf-reco-get-more-container
  margin-bottom: 200px
  border: 1px solid #dadae2
  border-radius: 10px
  padding: 12px 0
  text-align: center
  background: #fff

.kf-reco-get-more
.kf-reco-get-more-loading
.kf-reco-no-more
  font-size: 16px
  font-weight: bold
  color: #006bb2

.kf-reco-get-more:hover
  text-decoration: underline
  cursor: pointer

.kf-reco-loading-logo
  width: 50px
  height: 50px
  margin: 40px auto 0
  opacity: 0.5
  animation: jump-spin 2s linear infinite
  transform: translate(-50%, -50%) rotate(0deg)
