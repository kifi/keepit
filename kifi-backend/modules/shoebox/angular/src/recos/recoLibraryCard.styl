.kf-rcl
  margin-bottom: 10px

rcl-side-pad = 30px

.kf-rcl-color
  height: 3px
  margin-top: -10px

  &.kf-above-image
    transform: scale(1,2)
    transform-origin: center bottom
    margin: 0 (-(rcl-side-pad))

.kf-rcl-cover-image
  display: block
  height: 210px
  margin: 0 (-(rcl-side-pad))
  background-color: #eee
  background-size: cover

.kf-rcl-card
  border: defaultBorder
  border-top: none
  border-radius: 0 0 3px 3px
  background-color: #fff
  box-shadow: defaultBoxShadow

  // Do not display text on buttons when the card is very narrow
  @media screen and (max-width: 1250px)
    .kf-button-text-optional
      padding: 0
      width: 41px
      height: 32px
      font-size: 0

    .library-share-menu
      left: -44px

  .kf-rcl-body
    padding: 0 rcl-side-pad 5px

  .kf-rcl-name-wrap-2
    padding-top: 4px
    padding-bottom: 10px

  .kf-rcl-name-wrap-1
    display: inline-block
    width: 100%
    margin-top: 8px
    margin-bottom: 9px
    vertical-align: top
    overflow: hidden
    font: keepTitleFont
    font-smoothing: antialiased
    word-break: break-word

  .kf-rcl-name
    display: inline-block
    width: calc(100% - 30px)
    font-size: 26px
    font-weight: bold
    vertical-align: middle
    color: textBlackColor

  .kf-rcl-info
    margin: 16px 0 10px
    color: kifiBlack
    vertical-align: top

    @media screen and (max-width: 800px)
      margin: 0 8px

  .kf-rcl-owner
    position: relative
    padding-bottom: 10px
    padding-top: 5px

  .kf-rcl-owner-image
    display: inline-block
    margin-right: 10px
    border-radius: 50%
    width: 42px
    height: 42px

  .kf-rcl-owner-text
    display: inline-block
    font-size: 14px
    line-height: 1.3em
    vertical-align: middle

  .kf-rcl-owner-name
    color: #939393

  .kf-rcl-desc-wrap
    padding-bottom: 5px

    .kf-rcl-desc-more
      font-size: 11px

  .kf-rcl-desc
    line-height: 23px

  .kf-rcl-stats-line
    border-top: 1px solid #dadae2
    padding-top: 15px
    height: 42px
    overflow: hidden

  .kf-rcl-stats
    display: inline-block
    height: 42px

  .kf-rcl-stat
    display: inline-block
    margin: 0 20px 0 5px
    font-size: 12px

  a.kf-rcl-stat
    color: inherit
    font-smoothing: inherit

    &:hover
      .kf-rcl-stat-val
        text-decoration: underline

  .kf-rcl-stat-name
  .kf-rcl-stat-val
    display: block

  .kf-rcl-stat-name
    color: textDarkGrey
    text-transform: uppercase

  .kf-rcl-stat-val
    padding-top: 3px
    font-size: 16px
    font-weight: bold
    text-align: center

  .kf-lfp
    display: inline

  .kf-lfp-pics
    display: inline-block
    height: 42px
    vertical-align: top

    .kf-lfp-pic
      display: inline-block
      margin-right: 8px
      border-radius: 50%
      width: 42px
      height: 42px

  .kf-lfp-more
    display: inline-block
    border-radius: 21px
    padding: 0 6px 0 5px
    height: 42px
    background-color: kifiBlack
    color: #fff
    vertical-align: top
    cursor: pointer
    min-width: 31px

  .kf-lfp-more-text
    display: block
    padding-top: 12px
    text-align: center

  .kf-rcl-buttons
    border-top: 2px solid #f5f5f5
    padding: 15px 20px
    line-height: 37px
    font-size: 0

    .kf-button:not(:last-child):not(.library-share-contact-button)
      margin-right: 15px

  .kf-library-share-search
    vertical-align: top

  follow-unfollow-width = 112px

  .kf-rcl-follow-btn
    border-color: transparent
    width: follow-unfollow-width
    padding: 0
    background: #008aee
    color: white

    &::before  // moves the text slightly right
      content: ''
      padding-left: 2px

  .kf-rcl-unfollow-btn
    border: 1px solid #20a1f1
    width: follow-unfollow-width
    padding: 0
    background: #fff
    color: #20a1f1

    &:hover
      border-color: redColor

    &::after
      content: 'Following'

    &:hover::after
      content: 'Unfollow'
      color: redColor
