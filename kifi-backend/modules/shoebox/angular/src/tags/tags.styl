.kf-tag-input-box
  cursor: text
  border-radius: 12px
  border-style: none
  background: #eeeeee
  transition: background-color .16s
  width: 100%
  height: 24px
  margin: 2px 0 20px 0
  font-weight: 200

  input
    width: calc(100% - 20px)
    white-space: nowrap
    margin: 0
    border: 0
    padding: 3px 10px
    background-color: transparent
    color: textDarkGrey
    font-size: 13px
    font-weight: 200
    line-height: 18px
    box-sizing: border-box

::-webkit-input-placeholder
  color: #aaaaaa
  font-style: italic
:-moz-placeholder
  color: #aaaaaa
  font-style: italic
::-moz-placeholder
  color: #aaaaaa
  font-style: italic
:-ms-input-placeholder
  color: #aaaaaa
  font-style: italic

.kf-tag-input-clear
  float: right
  width: 20px
  padding: 0 10px 0 0
  font-size: 17px
  line-height: 20px
  cursor: pointer
  box-sizing: border-box

  &.kf-tag-input-clear
    color: #99a3b3

  &:hover
    color: #6fa6ef

.kf-tag-name
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  vertical-align: middle
  line-height: 26px
  font-size: 13px
  padding: 0 5px 0 26px
  background: url(../img/placeholder-icon.png) 0 center / 16px no-repeat
  color: textDarkColor

.kf-tag-count
  float: right
  font-size: 12px
  line-height: 26px
  color: countColor
  font-weight: 200

.kf-scrollable-tags
  position: relative

.kf-tag-list
  padding-right: 30px

.kf-tags-header
  margin-right: 30px