kfTagHeight = 30px

.kf-tag
  position: relative
  margin-right: 20px
  border-radius: 2px
  height: kfTagHeight

  .renaming
    background-color: #f6f6f6

  &:hover
    background-color: #eeeeee

    .kf-tag-tool
      display: block

  .kf-dropdown-menu
    right: 0

.kf-tag-info
  cursor: pointer
  padding: 0 20px 0 20px
  line-height: kfTagHeight

.kf-tag-input-box
  cursor: text
  border-radius: 12px
  border-style: none
  background: #eeeeee
  transition: background-color .16s
  width: 100%
  height: 24px
  margin: 2px 0 20px 0
  font-weight: 200

  input
    width: calc(100% - 20px)
    white-space: nowrap
    margin: 0
    border: 0
    padding: 3px 10px
    background-color: transparent
    color: textDarkGrey
    font-size: 13px
    font-weight: 200
    line-height: 18px
    box-sizing: border-box

::-webkit-input-placeholder
  color: #aaaaaa
  font-style: italic
:-moz-placeholder
  color: #aaaaaa
  font-style: italic
::-moz-placeholder
  color: #aaaaaa
  font-style: italic
:-ms-input-placeholder
  color: #aaaaaa
  font-style: italic

.kf-tag-input-clear
  float: right
  width: 20px
  padding: 0 10px 0 0
  font-size: 17px
  line-height: 20px
  cursor: pointer
  box-sizing: border-box

  &.kf-tag-input-clear
    color: #99a3b3

  &:hover
    color: #6fa6ef

.kf-tag-name-holder
  padding: 0 15px 0 26px
  background: url(../img/placeholder-icon.png) 0 center / 16px no-repeat
  font-size: 13px
  color: textDarkColor
  vertical-align: middle

.kf-tag-name
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

input.kf-tag-rename
  background-color: transparent

.kf-tag-count
  float: right
  font-size: 12px
  color: countColor
  font-weight: 200

.kf-scrollable-tags
  position: relative

.kf-tags-header
  margin: 0 40px 0 20px

.kf-tag-tool
  position: absolute
  display: none
  height: 100%
  width: 10px
  padding: 0 5px
  top: 0

.kf-tag-dropdown-toggle
  right: 0
  background: url(../img/arrow-gray-down.png) center/10px no-repeat

.kf-tag-handle
  left: 0
  cursor: move
  background: url(../img/drag-handle-tag.png) center/10px no-repeat

