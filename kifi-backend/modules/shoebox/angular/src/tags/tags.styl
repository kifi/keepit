.kf-tags
  .kf-nav-group-name
    position: relative
    padding-bottom: 2px
    margin-top: 15px

.kf-tag-input-box
  position: relative
  display: block
  padding: 0 6px 0 40px
  color: #818692
  cursor: text
  background: #fff
  transition: background-color .16s

  input
    width: 100%
    margin: 0
    border: 0
    padding: 0
    padding-left: 22px
    padding-right: 23px
    background-color: transparent
    color: inherit
    font: inherit
    line-height: 1.35
    background-image: url(../img/tag-icon-blue.png)
    background-repeat: no-repeat
    background-size: auto 16px
    box-sizing: border-box

.kf-tag-input-clear
  position: absolute
  top: -1px
  right: 0
  font-size: 1.45em
  padding: 0 12px
  cursor: pointer

  &.kf-tag-input-clear
    color: #99a3b3

  &:hover
    color: #6fa6ef

.kf-tag-list
  position: relative
  width: 100%
  overflow: hidden

  .antiscroll-inner
    position: relative
    width: 100% !important
    height: 100% !important
    overflow-x: hidden

  .sortable-placeholder
    background: #6fa6ef
    height: 2px
    min-height: 0

  .antiscroll-scrollbar
    z-index: 2

.kf-tag
  position: relative
  line-height: 36px
  white-space: nowrap

  &:hover
    background-color: #e9ecf2

  &.active
    background-color: #e3e6ee

.kf-tag-name
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.kf-tag-count
  font-size: 12px
  line-height: 20px
  padding: 2px 12px
  border-radius: 10.5px
  margin-left: 4px
  color: #93a7bc
  background: #e3e6ee

  .kf-tag.active &
    background-color: #eff2f7
    color: #93a7bc
