.kf-keep-discussions-widget-container
  display: flex
  flex-direction: row

.kf-keep-discussions-widget-right-container
  cursor: pointer
  width: 100%
  overflow: hidden
  align-self: center

.kf-keep-discussions-widget-container:not(:last-child)
  border-bottom-style: solid
  border-bottom-width: 1px
  border-color: #DDD
  padding-bottom: 6px
  margin-bottom: 6px

.kf-keep-discussions-widget-image
  background-size: cover
  flex-shrink: 0
  width: 36px
  height: 36px
  margin-right: 10px
  border-radius: 50%

.kf-keep-discussions-widget-participants
  font-size: 14px
  font-weight: bold

  span:not(:last-child)::after
    content: ', '
    color: #333

.kf-keep-discussions-widget-message
  font-size: 13px
  max-height: 3rem
  overflow: hidden
  margin-top: 3px

.kf-keep-discussions-widget-message-sender
  font-weight: bold

.kf-keep-discussions-widget-library
  color: gray

.kf-keep-discussions-widget-message-time
  font-size: 12px
  color: #999
  margin-bottom: 4px

.kf-keep-discussions-widget-visibility
  fill: #333
  margin-left: -2px
  margin-top: -3px
  margin-right: 2px
  width: 1rem
  height: 1rem