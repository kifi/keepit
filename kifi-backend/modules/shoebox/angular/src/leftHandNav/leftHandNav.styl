.kf-left-hand-nav
  width: 230px
  background-color: #3e4954
  display: flex
  flex-direction: column
  height: 100vh
  padding-left: 10px
  padding-right: 10px
  user-select: none
  margin-top: - appHeaderHeight2

  @media (max-height: appHeaderHeight1MaxDim) and (max-width: appHeaderHeight1MaxDim)
    margin-top: - appHeaderHeight1

  .kf-left-hand-nav-org-container
    flex-shrink: 0
    display: flex
    flex-direction: column
    width: 100%
    margin-top: 20px

    .kf-left-hand-nav-item-header
      img
        border-radius: 4px

  .kf-left-hand-nav-header
    height: appHeaderHeight2

  @media (max-height: appHeaderHeight1MaxDim) and (max-width: appHeaderHeight1MaxDim)
    height: appHeaderHeight1

  .kf-left-hand-nav-content
    overflow-y: scroll
    overflow-x: hidden

  .kf-left-hand-nav-user-container
    flex-shrink: 0
    display: flex
    flex-direction: column
    width: 100%

  .kf-left-hand-nav-item-header
    display: flex
    align-items: center

    img
      width: 35px
      height: 35px
      border-radius 20px
      margin-right: 10px

    span
      font-size: 18px
      color: white
      font-weight: semi-bold
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis

  .kf-left-hand-nav-libraries-container
    margin-top: 10px
    padding-left: 10px

    .kf-left-hand-nav-view-more-libraries
      padding-left: 8px
      font-size: 12px
      color: #DDD

      &:hover
        color: #FFF
        cursor: pointer


    .kf-left-hand-nav-library-header
      font-size: 14px
      color: #F5F5F5
      font-weight: semi-bold
      margin-bottom: 4px

    .kf-left-hand-nav-library-container
      margin-top: 1px
      margin-bottom: 1px
      border-left-width: 3px
      border-left-style: solid
      padding-left: 5px
      display: block

      &:hover
        background-color: alpha(white, 0.2)


      .kf-left-hand-nav-library
        font-size: 14px
        color: #DDD
        margin-bottom: 4px
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis

        &:hover
          color: #FFF
          cursor: pointer