.kf-left-hand-nav
  font-smoothing: antialiased
  width: leftHandNavWidth
  background-color: #3e4954
  display: flex
  flex-direction: column
  height: 100vh
  user-select: none

  @media (max-width: appMobileWidth)
    display: none

  .kf-left-hand-nav-button-container
    display: flex
    width: 100%
    justify-content: center
    margin-top: 6px

    > * + *
      margin-left: 5px

  .kf-left-hand-nav-button-accept
  .kf-left-hand-nav-button-decline
    font-size: 13px
    color: #FFF
    border-radius: 2px
    padding: 2px 10px
    cursor: pointer

  .kf-left-hand-nav-button-accept
    background: accentGreen

  .kf-left-hand-nav-button-decline
    background: gray
    opacity: 0.6

  .kf-left-hand-nav-org-container
    flex-shrink: 0
    display: flex
    flex-direction: column
    width: 100%
    margin-bottom: 20px
    margin-top: 0px

    .kf-left-hand-nav-item-header
      img
        border-radius: 4px
        flex-shrink: 0

    .kf-left-hand-nav-org-message
      color: #DDD
      margin-top: 4px
      margin-left: 4px
      font-size: 13px

    .kf-left-hand-nav-org-email
      margin: 5px 0px
      text-align: center

  .kf-left-hand-nav-header
    height: appHeaderHeightWithNav
    display: flex
    align-items: center
    padding-left: 10px
    margin-left: 0px
    flex-shrink: 0
    z-index: 2
    background-color: #3e4954

  .kf-left-hand-nav-create-team
    padding-left: 5px
    font-size: 14px
    font-weight: bold
    color: #DDD
    padding-bottom: 20px

    &:hover
      color: #FFF
      cursor: pointer

  .kf-left-hand-nav-create-team-learn-more
      font-size: 13px
      font-weight: bold
      color: #DDD

      &:hover
        color: #FFF
        cursor: pointer
        text-decoration: underline

.kf-left-hand-nav-content
  overflow-y: scroll
  overflow-x: hidden
  padding-left: 10px
  height: 100%
  z-index: 1
  //box-shadow: 2px 0px 2px -0px rgba(0, 0, 0, 0.12)

  &::-webkit-scrollbar
    width: 8px

  &::-webkit-scrollbar-thumb
    border-radius: 4px
    background-color: alpha(black, 0.0)


  &:hover
    &::-webkit-scrollbar-thumb
      border-radius: 4px;
      background-color: alpha(black, .5)

  .kf-left-hand-nav-user-container
    flex-shrink: 0
    display: flex
    flex-direction: column
    width: 100%
    margin-bottom: 20px
    margin-top: 6px

  .kf-left-hand-nav-item-header
    display: flex
    align-items: center

    img
      width: 30px
      height: 30px
      border-radius 20px
      margin-right: 10px
      flex-shrink: 0

    span
      font-size: 16px
      color: white
      font-weight: bold
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis

  .kf-left-hand-nav-libraries-container
    margin-top: 6px
    padding-left: 5px

    .kf-left-hand-nav-actions-container
      display: flex
      flex-direction: column
      min-height: 12px



    .kf-left-hand-nav-action
      padding-left: 10px
      font-size: 14px
      font-weight: bold
      color: #DDD

      &:hover
        color: #FFF
        cursor: pointer


    .kf-left-hand-nav-library-header
      font-size: 14px
      color: #F5F5F5
      font-weight: bold
      margin-bottom: 2px


    .kf-left-hand-nav-library-container
      display: block
      position: relative

      .kf-left-hand-nav-library
        font-size: 14px
        color: #DDD
        padding: 2px 0
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
        margin-left: 9px
        height: 100%

      .kf-left-hand-nav-library-color
        width: 3px
        margin: auto
        top: 2px
        bottom: 2px
        position: absolute
        background: gray

      .kf-left-hand-nav-library-container-bg
        position: absolute
        width: 50%
        opacity: 0.0
        margin: auto
        top: 2px
        bottom: 2px
        background: gray
        z-index: -1

    .kf-left-hand-nav-library-container:hover
      // .kf-left-hand-nav-library-color
      //   top: 0px
      //   bottom: 0px

      .kf-left-hand-nav-library
        color: #FFF
        cursor: pointer

      .kf-left-hand-nav-library-container-bg
        transition: width 0.15s ease-in
        opacity: 0.5
        width: 100%



.kf-left-hand-nav-content-spinner-container
  display: flex
  width: 100%
  justify-content: center

.kf-left-hand-nav-spinner
  vertical-align: center
  text-align: left
  display: inline-block

.kf-left-hand-nav-spinner > div
  width: 8px
  height: 8px
  margin-left: 2px
  margin-right: 2px
  background-color: #f9f9f9

  border-radius: 100%
  display: inline-block
  animation: sk-bouncedelay 1.4s infinite ease-in-out both

.kf-left-hand-nav-spinner .bounce1
  animation-delay: -0.32s

.kf-left-hand-nav-spinner .bounce2
  animation-delay: -0.16s

@keyframes sk-bouncedelay
  0%, 80%, 100%
    transform: scale(0)
  40%
    transform: scale(1.0)

.kf-left-hand-nav-spinner-scale
  transform: scale(.5)