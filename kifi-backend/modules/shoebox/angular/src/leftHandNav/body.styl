  padding-top: 0px

.kf-body-container
  display: flex
  flex-direction: row-reverse

  .kf-body-container-content
    flex-grow: 1
    display: flex
    flex-direction: column
    height: 'calc(100vh - %s)' % appHeaderHeightWithNav
