.kf-delighted-title
  padding: 14px 28px 8px 4px // make sure the title doesn't underlap the cancel button
  font-family: "Georgia", Arial, sans-serif
  font-style: italic
  font-size: 18px

.kf-delighted-body
  //background-color: #b4d3fa
  background-color: #fff
  border-radius: 2px
  box-shadow: 0 1px 1px 0 #dadae2
  border: 1px solid #dadae2
  text-align: center
  position: relative

.kf-delighted-cancel
  position: absolute
  top: 10px
  right: 10px
  cursor: pointer

.kf-delighted-label
.kf-delighted-option
  display: inline-block
  margin: 1px

.kf-delighted-label
  color: grey
  font-size: 14px

.kf-delighted-comment-back
.kf-delighted-comment-submit
.kf-delighted-option
  border-radius: 2px
  vertical-align: middle
  height: 35px
  line-height: 35px
  color: #fff
  user-select: none
  cursor: pointer

.kf-delighted-comment-submit
.kf-delighted-option
  background-color: #6fa6ef
  &:hover
    background-color: #5a99ed
  &:active
    background-color: #6fa6ef

.kf-delighted-comment-back
  background-color: #ccc
  &:hover
    background-color: #d6d6d6
  &:active
    background-color: #ccc

.kf-delighted-comment-back
.kf-delighted-comment-submit
  transition: all 0.3s

.kf-delighted-option
  width: 33px

.kf-delighted-options
  padding: 6px 0 26px
  white-space: nowrap

  input[type="radio"]
    display: none

.kf-delighted-label
  position: absolute
  color: #000
  width: 70px
  top: 37px
  color: #99a3b3

.kf-delighted-option-left-wrapper
.kf-delighted-option-right-wrapper
  position: relative
  display: inline-block

.kf-delighted-option-left-wrapper
  .kf-delighted-label
    left: 0
    text-align: left

.kf-delighted-option-right-wrapper
  .kf-delighted-label
    right: 0
    text-align: right

.kf-delighted-comment-area
  textarea
    margin: 10px
    resize: none
    width: calc(100% - 100px)
    max-width: 400px
    height: 60px
    border-radius: 3px
    border: 1px solid #ccc
    font-weight: 300
    padding: 5px

.kf-delighted-comment-back
.kf-delighted-comment-submit
  padding: 0 15px
  min-width: 120px
  display: inline-block
  margin: 10px
