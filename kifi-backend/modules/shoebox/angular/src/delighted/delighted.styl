.kf-delighted-wrap
  max-height: 200px
  overflow: hidden

  &.ng-leave
    transition: opacity .4s, max-height .4s

  &.ng-leave-active
    max-height: 0
    opacity: 0

  @media (max-width: 759px)
    display: none

.kf-delighted-title
  padding: 8px 28px // make sure the title doesn't underlap the cancel button
  font-family: Lato, Arial, sans-serif
  font-style: italic
  font-size: 18px

.kf-delighted-body
  background-color: #fff
  border-radius: 0 0 10px 10px
  border: defaultBorder
  border-top: none
  text-align: center
  position: relative

  button
    background-color: #4372b1
    color: #fff
    border: none
    border-radius: 6px
    font-size: 17px
    font-weight: 300
    font-smoothing: antialiased
    cursor: pointer
    transition: background-color .1s

    &:focus
    &:hover
      background-color: #5382c1

    &.dialog-cancel
      background-color: #ccc
      &:hover
        background-color: #d6d6d6
      &:active
        background-color: #ccc

  button + button
    margin-left: 20px

.kf-delighted-cancel
  position: absolute
  top: 10px
  right: 10px
  cursor: pointer

.kf-delighted-label
.kf-delighted-option
  display: inline-block
  margin: 1px

.kf-delighted-label
  color: grey
  font-size: 14px

.kf-delighted-comment-back
.kf-delighted-comment-submit
.kf-delighted-option
  border-radius: 2px
  vertical-align: middle
  height: 35px
  line-height: 35px
  color: #fff
  user-select: none
  cursor: pointer

.kf-delighted-comment-submit
.kf-delighted-option
  background-color: #4372b1
  &:hover
    background-color: #5382c1
  &:active
    background-color: #6590c8

.kf-delighted-comment-back
.kf-delighted-comment-submit
  transition: all 0.3s

.kf-delighted-option
  width: 33px

.kf-delighted-options
  padding: 6px 0 35px
  white-space: nowrap

  input[type="radio"]
    display: none

.kf-delighted-label
  position: absolute
  color: #000
  width: 70px
  top: 46px
  color: #99a3b3

.kf-delighted-option-left-wrapper
.kf-delighted-option-right-wrapper
  position: relative
  display: inline-block

.kf-delighted-option-left-wrapper
  .kf-delighted-label
    left: 0
    text-align: left

.kf-delighted-option-right-wrapper
  .kf-delighted-label
    right: 0
    text-align: right

.kf-delighted-score-chooser
.kf-delighted-comment-area
.kf-delighted-end
  padding: 6px

.kf-delighted-end
  background-color: #cbf3ca

.kf-delighted-comment-area
  textarea
    margin: 6px
    resize: none
    width: calc(100% - 100px)
    max-width: 400px
    height: 40px
    border-radius: 3px
    border: 1px solid #ccc
    font-weight: 300
    padding: 5px

.kf-delighted-comment-actions
  margin: 10px

.kf-delighted-comment-back
.kf-delighted-comment-submit
  padding: 3px 15px
  min-width: 120px
  display: inline-block
