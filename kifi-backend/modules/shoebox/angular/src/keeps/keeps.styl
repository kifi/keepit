.kf-main-keeps:before
  content: " "
  border-top: 1px none #f9f9f9
  z-index: 1

.kf-keeps-load-more
  display: block
  margin: 10px 0
  font-size: 16px
  line-height: 30px
  text-align: center
  background-color: #fcfdff

  &:link
    color: linkBlueColor
  &:hover
    background-color: #f3fbff

  &:active
    background-color: #f3f5f9

.kf-keeps-loading
.kf-friends-loading
  display: block
  width: 44px
  height: 8px
  margin: 40px auto

.kf-shadow-dragged-keeps
.kf-my-keeps
  padding: 0 25px 20px 0

.kf-shadow-dragged-keeps
  position: absolute
  left: 0
  top: 0
  width: 100%
  z-index: -1
  box-sizing: border-box

  &.two
    .kf-shadow-keep-last
      top: 40px

  &.three
    .kf-shadow-keep-second
      top: 40px
    .kf-shadow-keep-last
      top: 80px

  &.more
    .kf-shadow-keep-ellipsis
      top: 40px
    .kf-shadow-keep-last
      top: 80px

.kf-shadow-keep-ellipsis
  display: none
  position: absolute
  height: 40px
  top: 0
  left: 3px
  width: calc(100% - 28px)
  border-radius: 3px 3px 0 0
  border: defaultBorder
  border-bottom: none
  background-color: #fafafa
  box-sizing: border-box

  &.active
    display: block

.kf-shadow-keep-ellipsis-line
  position: relative
  top: 50%
  height: 50%
  width: 100%
  border: inherit
  border-left: none
  border-right: none
  margin-top: -1px

.kf-shadow-keep-ellipsis-counter
.kf-shadow-keep-ellipsis-counter-hidden
  position: absolute
  font-size: 16px
  color: black
  background-color: inherit
  line-height: 40px
  top: 0
  padding: 0 3px
  font-family: Lato, Arial, sans-serif

.kf-shadow-keep-ellipsis-counter-hidden
  visibility: hidden

.kf-shadow-keep-first
.kf-shadow-keep-second
.kf-shadow-keep-last
  position: absolute
  top: 0
  width: calc(100% - 55px) // (100% - total left/right padding)

//
// Add keep modal
//
.kf-add-keep-modal
  .dialog-body-wrap
    margin-bottom: 0

  .dialog-body
    padding: 0

.kf-add-keep-body
  width: 500px
  text-align: left
  padding: 5px

.kf-add-keep-input
  width: 440px
  margin: 10px 15px
  border: 2px solid #e7eaee
  border-radius: 6px
  font-size: 12px
  padding: 12px
  box-sizing: border-box

.kf-add-keep-hint
.kf-add-keep-error
  color: textLightGrey
  font-size: 13px

.kf-add-keep-hint
  color: textLightGrey

.kf-add-keep-error
  color: redColor
  padding-left: 18px

.kf-add-keep-private-container
  display: inline-block
  margin-left: 15px
  border: 1px dotted transparent
  padding: 2px

.kf-add-keep-private-container:focus
  border-color: #ddd

.kf-add-keep-private-label
  margin-left: 10px

.kf-add-keep-private-checkbox
  user-select: none

.kf-empty-state
  margin-left: 32px
  margin-top: 25px
  line-height: 2.7em
  font-weight: 300

.kf-ak-button.kf-action-button
  padding: 10px 0
  height: 15px

  .kf-ak-button-text::after
    content: 'Keep it'

  &:not(.in-animation)
    &.kept-public
    &.kept-public:hover
      background: #73c885
      border-color: #5aaf6c
      color: #fff

      .kf-ak-button-text::after
        content: 'Kept'

    &.kept-private
    &.kept-private:hover
      background: #f06463
      border-color: #d74b4a
      color: #fff

      .kf-ak-button-text::after
        content: 'Kept Private'

  &.in-animation
    font-size: 2px
    transition: font-size 0.3s

    .kf-ak-button-text::after
      content: ''
