buttonsTransitionDuration = .3s // also in removeForm in keepNoteForm.js

.kf-knf
  position: relative  // for hashtag suggestions and buttons

  &.kf-transition::after
    content: ''
    display: block
    transition: height .3s
    height: 42px

  &.kf-small::after
    height: 0

.kf-knf-editor
  white-space: pre-wrap
  word-wrap: break-word
  -webkit-line-break: auto

  &:empty::before
    content: 'Add a note'
    color: #ccc
    font-smoothing: antialiased

.kf-knf-tag-suggestions
  position: absolute
  z-index: 1
  margin: 0
  border: 1px solid #d2d2d2
  padding: 2px 0
  background-color: #fff
  overflow: hidden
  cursor: default

.kf-knf-tag-suggestion
  position: relative
  margin: 0
  padding: 3px 6px
  white-space: nowrap
  cursor: pointer

  &.kf-selected
    background-color: #f4f4f4

  &::before
    content: '#'

.kf-knf-buttons
  margin-top: 6px
  border-top: 1px solid #ddd
  border-radius: 0 0 4px 4px
  padding-right: 10px
  background-color: appBackgroundColor
  text-align: right
  position: relative

  .kf-transition>&
    position: absolute
    box-sizing: border-box
    width: 100%
    transition: opacity linear (buttonsTransitionDuration / 2) (buttonsTransitionDuration / 2)

  .kf-small>&
    opacity: 0
    transition-delay: 0s

.kf-knf-save
.kf-knf-cancel
  margin: 6px 0
  box-sizing: border-box
  min-width: 80px
  border: 0
  padding: 0 16px
  border-radius: 4px
  line-height: 23px
  font-size: 13px

  &:focus
    outline: 1px dotted #aaa

.kf-knf-cancel
  bgColor = #ddd
  background-color: bgColor
  color: #666

  &:hover
    background-color: tint(bgColor, 16%)

    &:active
      background-color: shade(bgColor, 2%)

.kf-knf-save
  bgColor = accentGreen
  background-color: bgColor
  color: #fff
  margin-left: 3px

  &:hover
    background-color: tint(bgColor, 8%)

    &:active
      background-color: shade(bgColor, 4%)

.kf-knf-progress
  position: absolute
  left: 0
  bottom: 100%
  width: 100%
  height: 2px
  background-color: accentGreen
  transform: scale(0, 1)
  transform-origin: left
  transition: transform .2s linear

  &.kf-fail
    background-color: #a00
    transition: transform .4s

  &.kf-done
    transition-timing-function: ease

.kf-knf-checkmark
  position: absolute
  bottom: 100%
  right: 0
  height: 20px
  width: 16px
  background-repeat: no-repeat
  background-position: center
  clip: rect(0,0,auto,0)
  transition: clip .2s .2s

  .kf-done>&
    clip: rect(0,16px,auto,0)
