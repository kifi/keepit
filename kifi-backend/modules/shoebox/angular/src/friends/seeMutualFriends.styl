// Customize basic content modal for the mutual friends modal.
.kf-see-mutual-friends-modal
  .dialog-content
    padding-bottom: 0

  .dialog-body-wrap
    margin: 0
    padding: 0

  .dialog-body
    padding: 0

  .dialog-x
    top: 15px
    right: 15px

.kf-mutual-friends
  padding-bottom: 20px

.kf-mutual-friends-image
  display: inline-block
  margin-right: 12px
  border-radius: 3px
  width: 60px
  height: 60px

.kf-mutual-friends-action
  position: absolute
  top: 35px
  right: 100px
  float: right
  border-radius: 3px
  padding: 5px 7px 5px 5px
  background-color: #6fa6ef
  font-size: 14px

  .sprite-tag-new-plus-icon
    display: inline-block
    margin: 0 3px

a.kf-mutual-friends-action
  color: #fff

.kf-mutual-friends-pymk
  padding: 20px 50px 15px
  width: 500px
  background-color: #f5f6f7
  font-size: 16px

  .kf-mutual-friends-image
    float: left

.kf-mutual-friends-pymk-info
  padding: 5px 0
  height: 50px

.kf-mutual-friends-pymk-number
  font-weight: 450

.kf-mutual-friends-pymk-name
  font-weight: 300

.kf-mutual-friends-friends
  overflow-y: scroll
  padding: 0px 50px
  width: 500px
  max-height: 250px

  // Force scrollbar to display in Chrome and Safari. Post-Lion,
  // scrollbars in Chrome, Safari, and FF don't show up until
  // user scrolls. No fix found for FF.
  // See: http://simurai.com/blog/2011/07/26/webkit-scrollbar/
  &::-webkit-scrollbar
    -webkit-appearance: none
    width: 7px

  &::-webkit-scrollbar-thumb
    border-radius: 4px
    background-color: rgba(0,0,0,.5)
    box-shadow: 0 0 1px rgba(255,255,255,.5)

.kf-mutual-friend-card
  display: inline-block
  margin: 15px 30px 0 0
  border-bottom: 1px solid #e9e9e9
  padding-bottom: 15px
  width: 215px

.kf-mutual-friend-pair:last-child .kf-mutual-friend-card
  border: none

.kf-mutual-friend-card-info
  float: right
  padding-top: 12px
  width: 143px
  height: 40px

.kf-mutual-friend-card-name
  font-weight: bold
  line-height: 1.0

  &:not(:hover)
    color: inherit
