.friends-wrapper
  border-right: 1px solid #dbdee3
  font-size: 14px
  font-weight: 300
  color: #566278

  h2
    clear: both
    font-size: 26px
    line-height: 1.2
    font-smoothing: antialiased

.friends
  padding-top: 18px
  padding-right: 18px
  padding-left: 18px

  .friends-list-header
    margin-bottom: 25px
    margin-left: 5px
    font-size: 130%
    font-weight: 200

    a
      text-decoration: underline

  .friend-requests
    margin-top: 30px
    margin-bottom: 40px
    opacity: 0
    transition: all 0.3s ease-in
    transform: translateY(-30px)

    &.unfold
      margin-top: 30px
      margin-bottom: 40px
      opacity: 1
      transform: translateY(0px)

    .friend-requests-badge
      background-color: #F58182
      color: white
      border-radius: 100%
      padding: 3px 8px;

.social-connect-friends
  margin: 30px 0

