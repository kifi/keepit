.kf-friend-card
  @media screen and (min-width: 1365px)
    width: calc(50% - 24px)

  @media screen and (max-width: 1365px)
    width: calc(100% - 25px)

  box-shadow: 1px 1px 0px 0px #DADAE2
  border-radius: 1px
  display: inline-block
  height: 90px
  margin: 5px 6px
  padding: 5px
  position: relative
  background-color: #FFFFFF

  .kf-friend-card-image
    float: left
    margin-right: 12px
    height: 60px
    width: 60px
    border-radius: 3px
    margin-top: 15px
    margin-left: 5px

  .kf-friend-card-who

    display: inline-block
    padding-top: 20px
    overflow: hidden
    white-space: nowrap
    width: calc(100% - 162px)

    .kf-friend-card-name
      font-size: 120%
      color: black
      text-overflow: ellipsis;
      overflow: hidden;


    .kf-friend-card-count
      font-size: 90%
      padding-top: 3px;

  .kf-friend-card-button
    background-color: #41C482
    color: #FFFFFF
    position: absolute
    right: 15px
    top: 39px
    padding: 2px 10px
    cursor: pointer
    border-radius: 2px

    &:hover + .kf-friend-card-menu
      display: block

  .kf-friend-card-menu
    right: 15px
    display: none
    top: 60px
    box-shadow: 1px 1px 0px 0px #DADAE2

    &:hover {
      display: block
    }

