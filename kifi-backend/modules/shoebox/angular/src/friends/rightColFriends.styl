.kf-rightcol-friends
  text-align: center

  .kf-rightcol-header
    text-align: left

  .kf-friends-content
    margin: 10px 5px
    color: #555
    line-height: 1.2

  .kf-friends-content-bigger
    font-size: 14px

  .social-connect-button
    position: relative
    width: 85px
    padding: 10px 10px 10px 40px
    font-size: 14px

    a:hover,
    a:active
      text-decoration: none

  .social-connect-button::before
    position: absolute
    top: 0;
    left: 0
    width: 35px
    height: 100%   
    background-image: url(../img/networks2.png)
    background-size: auto 35px;
    background-color: rgba(0, 0, 0, 0.1)
    display: inline-block
    content: ''

  .social-connect-button.linkedin::before
    background-position: -35px 0px

  .social-connect-button.gmail::before
    background-position: -140px 0px

.kf-compact-friend-image
  width: 40px
  height: 40px
  padding: 1px 1px
  border-radius: 5px

.kf-rightcol-friends-links
  float: right
  width: 70px
  margin-top: 5px

.kf-rightcol-friends-connect
  margin: 15px 15px;
  padding: 0;
  border: 1px solid #999;
  border-radius: 10px;
  background-color: #fdfdfd;

