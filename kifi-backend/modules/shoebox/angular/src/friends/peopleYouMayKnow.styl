section-padding = 10px 16px
section-border = defaultBorder
section-border-radius = 10px

.kf-pymk
  line-height: 14px
  font-size: 12px

.kf-pymk-top
  border-radius: section-border-radius section-border-radius 0 0
  border: section-border
  padding: section-padding
  background: #fff

.kf-pymk-title
  font-size: 15px
  padding: 6px 0 16px

.kf-pymk-person
  height: 32px
  position: relative
  margin-bottom: 12px
  padding: 5px 0

  &:last-child
    margin-bottom: 0

.kf-pymk-image-a
  float: left
  width: 32px
  height: 32px
  border-radius: 50%
  position: relative
  margin-right: 10px

  &::after
    content: ''
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    border-radius: '%s' % inherit
    box-shadow: 0 0 2px rgba(0,0,0,.3) inset

.kf-pymk-image
  width: inherit
  height: inherit
  border-radius: '%s' % inherit

.kf-pymk-name
  width: 120px
  padding-top: 2px
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.kf-pymk-via
  display: block
  margin-top: 1px
  font-size: 11px
  text-overflow: ellipsis
  max-width: 120px
  overflow: hidden
  white-space: nowrap

.kf-pymk-mutual
  border: none
  padding: 0
  background: transparent
  color: linkBlueColor
  font-smoothing: antialiased

  &:hover
    text-decoration: underline

.kf-pymk-action
  bg-color = #3e4954
  position: absolute
  top: 10px
  right: 0
  border: none
  border-radius: 4px
  padding: 0 6px
  background-color: bg-color
  color: #fff
  line-height: 22px
  font-size: 10px

  &:hover
    background-color: lighten(bg-color, 10%)

  &:hover:active
    background-color: darken(bg-color, 10%)

.kf-pymk-x
  radius = 6px
  bg-color = #c00
  position: absolute
  top: 6px
  right: -(radius)
  height: 2 * radius
  width: 2 * radius
  border: none
  border-radius: 50%
  padding: 0
  background-color: bg-color
  cursor: pointer

  :not(:hover)>&
    display: none

  &:hover
    transform: scale(1.2)
    background-color: lighten(bg-color, 10%)

  &:hover:active
    background-color: darken(bg-color, 10%)

  &::before
  &::after
    content: ''
    position: absolute
    top: 3px
    bottom: 3px
    left: -1px
    width: 2px
    background-color: #fff

  &::before
    transform: translate(radius) rotate(45deg) scale(.5, 1)

  &::after
    transform: translate(radius) rotate(-45deg) scale(.5, 1)

.kf-pymk-bottom
  clear: both
  border-radius: 0 0 section-border-radius section-border-radius
  border: defaultBorder
  border-top: none
  padding: section-padding
  background-color: #f3fAf2

.kf-pymk-connect
  margin-bottom: 15px
  color: #555
  line-height: 1.2

.kf-pymk-network-btn
  width: 100%
  border: none
  padding: 0
  background-color: transparent
  text-align: left

.kf-pymk-network-icon
  float: left
  width: 32px
  height: 32px
  border-radius: 50%
  background-repeat: no-repeat
  margin-right: 10px

  &.svg-facebook-f
    background-color: #597ab1
    background-position: center
    background-size: auto 16px

  &.svg-twitter-white
    background-color: #55acee
    background-position: center
    background-size: auto 13px

  &.svg-linkedin-in
    background-color: #2786C4
    background-position: 9px 7px
    background-size: auto 16px

  &.gmail
    background-color: #e36767
    background-position: center
    background-size: 18px auto
    box-shadow: 0 0 1px rgba(0,0,0,.5) inset

.kf-pymk-network-1
  display: block
  padding-top: 2px  // like kf-pymk-name

.kf-pymk-network-2
  display: block
  margin-top: 1px  // like kf-pymk-via
  color: #858e92
  font-size: 11px
  font-smoothing: antialiased

  :hover>&
    color: linkBlueColor
    text-decoration: underline

.kf-pymk-network-other:not(:first-child)
  margin-top: 10px
  border-top: 1px solid #dfe0e5
  padding-top: 6px

.kf-pymk-network-other-a
  color: #858e92
  font-size: 11px

  &:hover
    color: linkBlueColor
    text-decoration: underline
