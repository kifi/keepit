
.social-invite-search
  input
    padding: 10px
    font-size: 14px
    width: 345px
    border: 1px solid #c5d0da

  .social-invite-dropdown
    position: absolute
    box-sizing: border-box

    .social-invite-element
      background: #fff
      width: 349px
      border: 1px solid #c5d0da
      border-bottom: 0
      padding: 4px
      padding-left: 12px
      height: 56px

      &:first-child
        border-top: 0

      &:last-child
        border-bottom: 1px solid #c5d0da

.social-invite-image
  width: 55px
  height: 55px
  border-radius: 4px
  display: inline-block
  float: left
  margin-right: 15px

.social-invite-summary
  float: left

.social-invite-name
  font-size: 14px
  padding-top: 10px
  color: #000

.social-invite-network
  font-size: 12px
  color: #628196
  vertical-align: bottom

  .social-network-icon
    vertical-align: middle
    margin-right: 5px
    height: 16px
    width: 16px
    display: inline-block

  .kf-email-icon-micro
    background-color: #e36767

.social-invite-action
  float: right
  cursor: pointer
  display: block
  background-color: #6fa6ef
  border-radius: 3px
  padding: 4px 20px
  color: #fff
  font-weight: 300
  font-size: 13px
  margin: 15px 8px




