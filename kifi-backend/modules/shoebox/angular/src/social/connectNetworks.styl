.social-connect
  min-width: 430px
  margin: 0 auto
  text-align: center
  width: 0px

.social-connect-title
  font-size: 24px
  font-weight: 300
  font-family: "Georgia", Arial, sans-serif
  font-style: italic

.social-connect-desc
  font-size: 16px
  margin: 15px auto 35px
  max-width: 350px

.friends-wrapper, .invite-wrapper
  .social-connect
    @media screen and (max-width: 1260px)
      text-align: left
      margin: 0 auto

  .social-connect-desc
    @media screen and (max-width: 1260px)
      margin: 15px 0 35px
      text-align: center

.social-connect-button
  padding: 11px
  font-size: 18px
  cursor: pointer
  width: 215px
  border-radius: 4px
  display: inline-block
  text-align: center

  a,
  a:hover,
  a:active
    color: #fff
    text-decoration: none

  &.facebook
    background-color: #597AB1

  &.linkedin
    background-color: #2786C4

  &.gmail
    background-color: #E36767

.social-connect-row
  margin: 15px auto

.social-more-accounts
  margin-top: -10px
  font-size: 14px
  color: #486788
  text-decoration: underline
  cursor: pointer

.social-connected-button
  padding: 10px 11px
  font-size: 18px
  width: 215px
  border-radius: 4px
  background-color: #fff
  display: inline-block
  text-align: center

  &.facebook
    color: #597AB1
    border: 1px solid #597AB1

  &.linkedin
    color: #2786C4
    border: 1px solid #2786C4

  &.gmail
    color: #E36767
    border: 1px solid #E36767

  .social-account-name
    font-size: 14px
    color: #999

.social-notice-badge
  position: relative
  text-align: center

  .notice-message
    position: absolute
    width: 200px
    left: 24px
    top: -2px
    text-align: left

    &.import
      color: #40c381
      left: 44px

    &.refresh
      color: #486788
      text-decoration: underline
      cursor: pointer

  .notice-button
    content: ' '
    position: absolute
    top: -8px
    right: -15px
    background-color: #f00
    border-radius: 50px
    width: 30px
    height: 30px
    line-height: 30px
    border: 1px solid #0f0
    user-select: none

    .social-extended &
      top: -16px

    &.good
      background: url("/img/checkmark.png") 7px/18px no-repeat #41C381
      border: 1px solid #41C381

    &.warn
      border: 1px solid #f59989
      font-size: 30px
      color: #f59989
      background: #FFEDA5
      font-weight: 300
      font-family: sans-serif
      line-height: 26px

.bouncy-ball
  transform: scale(.45)
  top: -15px
  left: -30px
  position: absolute
