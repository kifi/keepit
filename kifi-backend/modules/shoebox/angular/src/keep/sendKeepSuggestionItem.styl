.kf-skw-suggestion-content
  display:inline-block
  position: absolute
  margin-top: 7px

.kf-skw-suggestion-content-row1
  * + *
    margin-left: 3px

.kf-skw-suggestion-name
  display: inline-block
  position: relative
  max-width: 200px
  font-size: 12px
  font-weight: 600
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

.kf-skw-suggestion-subname
  display: block

.kf-skw-suggestion-img
  position: relative
  display: inline-block
  margin: 10px
  width: 30px
  height: 30px

.kf-skw-suggestion-user-img
  width: 30px
  height: 30px
  -webkit-border-radius: 17px
  border-radius: 17px
  border: none
  outline: none

.kf-skw-library-org-img
  width: 30px
  height: 30px

.kf-skw-suggestion-email-img
  width: 30px
  height: 30px
  border-radius: 100%
  background-image: url(/img/mail.2x.png)
  background-position: center 9px
  background-repeat: no-repeat
  background-size: 60% 45%
  background-color: #e36766

.kf-skw-library-card
  position: relative
  left: 3px
  width: 23px
  height: 31px
  vertical-align: top
  border-radius: 4px
  box-shadow: 0 1px #f5f5f5, 0 3px #c9ccc0

.kf-skw-library-privacy
  position: relative
  bottom: 0px
  display: inline
  width: 18px
  height: 18px

.kf-skw-library-privacy-star

  fill: textBlackColor

.kf-skw-library-slack
  display: inline
  position: relative
  width: 15px
  height: 15px
  bottom: 1px

