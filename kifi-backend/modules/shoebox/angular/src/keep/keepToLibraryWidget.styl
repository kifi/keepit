//
// Dropdown button.
//
.add-keep-to-library-dropdown
  position: relative
  display: block
  box-sizing: border-box
  margin: 0 0 10px 15px
  border: 2px solid #e7eaee
  border-radius: 6px
  padding: 12px 12px 12px 46px
  width: 328px
  background-color: #fff
  font-family: Lato, Helvetica, Arial, sans-serif
  font-size: 12px
  line-height: 18px
  color: #66829b
  text-align: left
  cursor: pointer

  &:focus
    border-color: #ced1d5

  .keep-to-library-lib-icon-container
    position: absolute
    top: 5px
    left: 12px

  .add-keep-to-library-dropdown-arrow
    position: absolute
    top: 20px
    right: 12px
    border-top: 6px solid #d8dee6
    border-bottom: 6px solid transparent
    border-left: 5px solid transparent
    border-right: 5px solid transparent

//
// Widget.
//
.keep-to-library-widget
  position: absolute
  box-sizing: border-box
  border: 1px solid #a6afbd
  border-radius: 10px
  box-shadow: 1px 1px 3px rgba(51, 51, 51, 0.6)
  width: 328px
  font-size: 12px  // TODO(yiping): get the SegoeUI font used in the PSD?
  background-color: #fff
  color: kifiBlack
  overflow: hidden
  z-index: 1100

  .keep-to-library-lib-icon
    display: block
    width: 24px
    height: 34px
    background-size: cover

  .keep-to-library-default-header
    box-sizing: border-box
    padding: 12px 16px
    background-color: kifiBlack
    font-size: 12px
    font-weight: 500
    color: #fff

  .keep-to-library-search
    position: relative
    border-bottom: 1px solid #e7e7e7
    padding: 17px 12px

  .keep-to-library-search-input-icon
    position: absolute
    top: 18px;
    left: 22px
    width: 15px
    height: 28px
    background-size: contain
    background-position: center
    background-repeat: no-repeat

  .keep-to-library-search-input
    box-sizing: border-box
    border: 1px solid #dbdee3
    border-radius: 4px
    padding: 9px 10px 8px 30px
    width: 302px
    height: 31px
    font-weight: 400
    placeholder #a1adb9
    background-color: #fcfcfc

  .library-group-header
    padding: 7px 0 7px 12px
    font-size: 12px

  .kept-to-libraries-group-header
    background-color: #43b178
    color: #fff

  .my-libraries-group-header
    border-bottom: 1px solid #e7e7e7
    background-color: #f3f3f3
    color: #777

  .kf-triptych
    padding-top: 10px
    padding-bottom: 10px

.library-select-list
  max-height: 305px
  overflow-x: hidden
  overflow-y: auto

.library-select-option
  position: relative
  box-sizing: border-box
  border-bottom: 1px solid #e7e7e7
  padding: 17px 25px 15px 46px
  font-weight: 600
  white-space: nowrap
  text-overflow: ellipsis
  overflow: hidden
  cursor: pointer

  .kf-kept-to>&
    cursor: default

  &.selected
    background-color: #f3f5f7

  &:active
    background-color: #e6e8ea

.keep-to-library-lib-icon-container
  position: absolute
  top: 6px
  left: 14px

  .keep-to-library-create-name-input-container &
    top: 14px

.keep-to-library-unkeep-button
  position: absolute
  top: 9px
  right: 15px
  padding: 0 10px
  height: 25px
  line-height: 25px
  font-size: 12px

  :not(.kf-kept-to)>*>&
    display: none

.keep-to-library-create
  position: relative
  box-sizing: border-box
  padding: 17px 25px 15px 46px
  font-weight: 600
  background-color: #f3f5f7
  white-space: nowrap
  overflow: hidden
  cursor: pointer

.keep-to-library-create-header
  position: relative
  box-sizing: border-box
  padding: 17px 25px 15px 46px
  font-weight: 600
  background-color: #fff
  white-space: nowrap
  overflow: hidden
  cursor: pointer

.keep-to-library-back-arrow
  position: absolute
  top: 13px
  left: 15px
  border-radius: 100%
  width: 20px
  height: 20px
  background-color: #c8ced7
  cursor: pointer

  &:hover
  &:focus
    background-color: #bbc1ca

  &:active
    background-color: #afb5be

  &::before
  &::after
    content: ' '
    position: absolute;
    left: 47%
    border-radius: 2px
    width: 2px;
    background: #fff
    font-size: 0

  &::before
    top: 4px
    bottom: 8px
    transform: translate(-1px) rotate(45deg)

  &::after
    top: 8px
    bottom: 4px
    transform: translate(-1px) rotate(-45deg)

.keep-to-library-create-heading
  box-sizing: border-box
  padding: 8px 15px
  font-weight: 600
  background-color: #f3f5f7

.keep-to-library-create-name-input-container
  position: relative
  box-sizing: border-box
  padding: 20px 16px 20px 15px
  font-weight: 600
  background-color: #fff
  white-space: nowrap

input.keep-to-library-create-name-input
  border: none
  width: 302px
  font-size: 12px
  placeholder secondaryTextGray

.keep-to-library-create-name-error
  pop-over 40px 18px redColor
  font-size: 11px
  font-weight: 500

.keep-to-library-create-visibility
  width: 100%
  text-align: center

  .kf-library-visibility-selector .kf-row
    margin: 10px auto
    width: 100%
    max-width: 230px

.keep-to-library-create-visibility-switch
.keep-to-library-create-visibility-explanation
  display: inline-block
  vertical-align: middle
  font-size: 12px
  color: textGreyColor

.kf-library-visibility-selector-checkbox
  margin-bottom: 15px

.keep-to-library-create-general-error
  padding: 10px
  background-color: redColor
  color: #fff
  text-align: center

.keep-to-library-create-button-container
  padding: 10px
  background-color: #f3f5f7
  text-align: center

.keep-to-library-create-org-selector
  padding-left: 15px
  padding-right: 15px

.kf-klw-library-org-pic
  position: absolute
  top: 0
  bottom: 0
  left: 13px
  display: inline-block
  width: 26px
  height: 26px
  margin: auto
  border-radius: 5px

.kf-klw-library-color-bar
  position: absolute
  top: 0
  bottom: 0
  left: 0
  width: 3px

.kf-klw-library-card
  display: inline-block
  border-radius: 4px
  width: 23px
  height: 31px
  vertical-align: top
  box-shadow: 0 1px #f5f5f5, 0 3px #c9ccc0

.kf-klw-lock-icon
.kf-klw-star-icon
  position: relative
  top: -2px
  display: inline-block
  width: 16px
  height: 16px
  margin: auto
  fill: textBlackColor
