keepRectBorderRadius = 4px
keepFooterMarginTop = 16px
eeeTransparentBlack = rgba(0,0,0,.065)  // makes #eee over white

.kf-keep-body
  border-radius: keepRectBorderRadius
  box-shadow: 0 1px 2px rgba(0,0,0,.05), inset 0 0 0 1px eeeTransparentBlack

  &:not(.kf-side-by-side) // increasing top border-radius to ensure box-shadow does not bleed through corners of image/video
    border-radius: (keepRectBorderRadius + 2px) (keepRectBorderRadius + 2px) keepRectBorderRadius keepRectBorderRadius

.kf-keep-content
  padding: 0 20px

  .kf-side-by-side>&
    overflow: hidden

.kf-keep-image
  display: block
  height: 280px
  background-size: cover
  background-position: center
  box-shadow: inset 0 0 0 1px eeeTransparentBlack

  :not(.kf-side-by-side)>&
    border-radius: keepRectBorderRadius keepRectBorderRadius 0 0

  .kf-side-by-side>&
    float: left
    margin: 16px 0 keepFooterMarginTop 20px

  &.kf-bottom-clip
    background-position: center top

.kf-keep-video
  position: relative

  &::before
    content: ''
    display: block
    padding-top: 56.25% // enforcing 16:9 ratio, ideally 496px x 279px

  &::after  // faint top border with rounded corners overlay to provide shape to white videos
    content: ''
    position: absolute
    top: 0
    left: 0
    right: 0
    height: keepRectBorderRadius
    border-radius: keepRectBorderRadius keepRectBorderRadius 0 0
    border: 1px solid eeeTransparentBlack
    border-bottom: 0

.kf-youtube
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  border-radius: keepRectBorderRadius keepRectBorderRadius 0 0
  overflow: hidden
  cursor: pointer

  &::before  // faint left/right border overlays to provide shape to white videos
  &::after
    content: ''
    position: absolute
    z-index: 1
    top: keepRectBorderRadius + 1px  // avoiding overlap with top
    bottom: 1px  // avoiding overlap with bottom
    width: 0

  &::before
    left: 0
    border-left: 1px solid eeeTransparentBlack

  &::after
    right: 0
    border-right: 1px solid eeeTransparentBlack

.kf-youtube-iframe
  background-color: #000
  // prevents black background from bleeding through rounded top corners in Firefox,
  // but causes iframe to overflow in Chrome, hence -moz- prefix
  -moz-transform: translate3d(0,0,0)

.kf-youtube-bottom-overlay
  position: absolute
  bottom: 0
  left: 0
  right: 0
  border-bottom: 1px solid eeeTransparentBlack

.kf-youtube-img
  width: 100%
  height: 100%
  background-position: center
  background-size: cover

.kf-youtube-play
  width = 70px
  height = 50px
  position: absolute
  top: 'calc(50% - %s)' % (height / 2)
  left: 'calc(50% - %s)' % (width / 2)
  width: width
  height: height
  background: url(/img/youtube-play-red.png)
  background-size: 70px 50px
  background-repeat: no-repeat
  opacity: 0.8

  &:hover
    opacity: 1.0

.kf-keep-footer
  display: table
  width: 100%
  margin-top: keepFooterMarginTop
  border-top: 1px solid #eee // dfdfdf
  line-height: 16px
  font-size: 14px
  min-height: 42px

.kf-keep-actions
  display: table-cell
  vertical-align: middle
  text-align: left
  padding-left: 20px

  &>button
    sidePad = 8px
    border: 0
    padding: 6px sidePad
    background: none
    border-radius: 4px
    color: accentGreen
    cursor: pointer

    &:first-child
      margin-left: -(sidePad)

    &:hover
      box-shadow: inset 0 0 0 1px #f6f6f6

      &:active
        background-color: #fcfcfc

.kf-keep-keep-btn
  &.state-kept-private
    color: libraryRed

  &>.svg-hearts-green
    display: inline-block
    vertical-align: top
    width: 18px
    height: 18px
    background-repeat: no-repeat
    background-position: center
    background-size: contain
    margin-right: 3px
    transform: translate(0, 1px)

  &>.svg-small-lock
    display: inline-block
    vertical-align: top
    width: 10px
    height: 13px
    background-repeat: no-repeat
    background-position: center
    background-size: contain
    margin: 2px 3px 0 0

.kf-keep-share-btn
  &>.svg-share-arrow-green
    display: inline-block
    vertical-align: top
    width: 18px
    height: 18px
    background-repeat: no-repeat
    background-position: center
    background-size: contain
    margin-right: 1px

.kf-keep-who
  display: table-cell
  vertical-align: middle
  text-align: right
  padding-right: 20px

  &::after
    content: 'kept'
    vertical-align: middle
    color: #888
    font-smoothing: antialiased

.kf-keep-who-pic-box
  display: inline-block
  vertical-align: middle
  height: 23px
  border-radius: 50%
  margin: 0 2px
  position: relative // for user hovercard

  @media (max-width: 479px)
    margin-left: 1px
    height: 18px

  &>.kf-utt
    margin-left: 14px

.kf-keep-who-pic
  position: relative
  display: inline-block
  vertical-align: top
  border-radius: 50%
  background-size: 100%
  width: 23px
  height: 23px

  @media (max-width: 479px)
    width: 18px
    height: 18px

  &::after
    content: ''
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    border-radius: 50%
    box-shadow: inset 0 0 1px rgba(0,0,0,.15)

.kf-keep-who-num
  color: #888
  font-smoothing: antialiased
  vertical-align: middle
  margin-right: 3px

  @media (max-width: 479px)
    font-smoothing: antialiased

  &:not(:first-child)::before
    content: '+ '

.kf-keep-title
  margin: 12px 0
  font: bold 20px/24px Lato,sans-serif
  font-smoothing: antialiased
  word-break: break-word

  @media (max-width: 479px)
    line-height: 22px
    font-size: 18px

.kf-keep-title-link[href]
  color: textBlackColor
  outline-color: #ddd

.kf-keep-meta
  padding-top: 16px
  height: 1.2em
  line-height: 1.2em
  font-size: 12px
  font-smoothing: antialiased
  color: #909aa8
  overflow: hidden

  @media (min-width: 480px)
    font-size: 14px

    .kf-side-by-side &
      font-size: 12px

.kf-keep-source
  white-space: nowrap
  color: accentGreen

.kf-keep-twitter-attr
  a
    color: #909aa8
    outline: none

.kf-keep-twitter-logo
  display: inline-block
  width: 16px
  height: 14px
  margin-right: 5px
  background-size: cover
  vertical-align: text-bottom

  @media (max-width: 479px)
    width: 14px
    height: 12px

.kf-keep-length
  white-space: nowrap  // hides entire element (including bullet) if it does not fit

  .sprite-clock
    margin-right: 2px

    .kf-side-by-side &
      transform: translate(0, -0.6px)

  @media (max-width: 479px)
    font-size: 11px

    .sprite-clock
      display: none

.kf-keep-twitter-attr::before
.kf-keep-length::before
  content: '\2022'
  vertical-align: 2px
  padding: 0 9px 0 6px
  font-size: 7px

  @media (max-width: 479px)
    padding: 0 4px 0 3px
    font-size: 6px

.kf-keep-description
  font: 12px/18px Lato,Helvetica,Arial,sans-serif
  font-smoothing: antialiased
  color: textBlackColor
  word-break: break-word

  @media (min-width: 480px)
    line-height: 19px
    font-size: 13px

  @media (min-width: 560px)
    line-height: 20px
    font-size: 14px
