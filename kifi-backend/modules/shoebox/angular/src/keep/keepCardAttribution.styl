.kf-keep-card-attribution-slack-icon
  display: inline-block
  position: relative
  top: 2px
  width: 15px
  height: 15px
  margin-right: 4px
  margin-top: -5px
  margin-left: 2px

.kf-keep-card-attribution-page-link
  color: grey
  display: inline

  &.kf-link
    &:hover
      text-decoration: none
      color: grey
      opacity: .7
