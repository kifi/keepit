.kf-keep
  position: relative
  padding-left: 30px
  border-top: 1px solid #f9f9f9
  background-color: white
  box-sizing: border-box

  &.detailed
    background-color: #eff2f7

  &.selected
    background-color: #fffcf1
    border-color: #f0f0f0

  &.ui-draggable-dragging
    border-top: none

  &.toggling
    overflow: hidden
    transition: height .3s ease-in-out

  &.unkept
    height: 0 !important

  &:before
    content: " "
    display: block
    height: 10px

  &:after
    content: " "
    display: block
    height: 13px

.kf-keep-time
  float: right
  margin: 0 16px 0 4%
  font-size: 12px
  line-height: 28px
  color: #99a3b3

.kf-keep-handle
  display: none
  position: absolute
  top: 0
  bottom: 0
  left: 0
  width: 21px
  background: url(../img/drag-handle.png) center/10px no-repeat
  cursor: move

  &:hover
  .kf-keep.detailed &
  .kf-keep.selected &
  .kf-keep.ui-draggable-dragging &
    background-color: #e3e6ee

  .kf-keep:hover &
  .kf-keep.detailed &
  .kf-keep.selected &
  .kf-keep.ui-draggable-dragging &
    display: block

.kf-keep-checkbox
  display: none
  position: absolute
  left: 3px
  top: 4px
  width: 15px
  height: 15px
  background: url(../img/check.png) 99px/12px 8px no-repeat #fff
  cursor: pointer

  .kf-keep-handle:hover &
  .kf-keep.detailed &
  .kf-keep.selected &
  .kf-keep.ui-draggable-dragging &
    display: block

  .kf-keep.selected &
    background-position: 2px 4px

.kf-keep-title
  max-width: 100%
  font-size: 16px
  line-height: 24px
  color: #0089d5
  font-smoothing: antialiased
  long-text()

.kf-keep.example .kf-keep-title-link.kf-keep-title-link
  color: #66b8e6

.kf-keep-url
  font-size: 12px
  line-height: 14px
  color: #99a3b3
  long-text()

  .kf-keep.example &
    color: #c6cbd3

// tag
.kf-keep-tags
  margin-right: 10px
  border: solid transparent
  border-width: 7px 0
  background: url(../img/tag-icon-small.png) 0 0/18px 18px no-repeat
  padding-left: 19px
  font-size: 12px
  line-height: 18px
  overflow: hidden

  &:empty
    border-bottom-width: 0

@-moz-document url-prefix()
  .kf-keep-tags
    background-position: 0 1px

.kf-keep-tag
  display: inline-block
  position: relative
  overflow: hidden
  white-space: nowrap

  &:not(:last-of-type):after
    content: " "
    display: inline-block
    height: 9px
    font-size: 0
    border-right: 1px solid #99a3b3

  &.removed
    width: 0 !important
    transition: width .12s ease-in-out

.kf-keep-tag-link
  padding: 0 5px

  &:not(:hover)
    color: #99a3b3

    .kf-keep-tag.example &
      color: #c3dba8

  &:hover
    text-decoration: underline
    font-smoothing: antialiased

.kf-example-tag
  display: none
  position: relative
  top: -1px
  font-size: 12px
  font-weight: 500
  line-height: 22px
  padding: 0 10px
  border-radius: 2px
  margin-right: 4px
  color: white
  background-color: #c3dba8

  .kf-keep.example &
    display: inline-block

// who
.kf-keep-who
  font-size: 0

.kf-keep-who-pic
.kf-keep-who-others
  position: relative
  display: inline-block
  width: 23px
  height: 23px
  border-radius: 2px
  margin-right: 1px
  background-size: 100%
  vertical-align: middle

.kf-keep-who-others
  background-image: url(../img/globe.png)

  .kf-keep.mine &
    display: none

.kf-keep-who-pic.me
  border-radius: 50% 0 0 50%

  &:last-of-type
    border-radius: 50%

.kf-keep-who-text
  margin-left: 4px
  font-size: 12px
  color: #99a3b3
  vertical-align: middle

  .kf-keep.mine .me + &
    margin-left: 7px

  .kf-keep:not(.mine) .me + &
    margin-left: 0

.kf-keep:not(.mine)
  .me
  .keep-you
  .kf-keep-private
    display: none

.kf-keep-private
  display: inline-block
  padding-left: 21px
  margin: 0 2px
  line-height: 17px
  background: url(../img/private.png) left center/17px no-repeat

  &:not(.on)
    display: none

.kf-keep.mine .kf-keep-friends:before
.kf-keep.mine .kf-keep-others:before
.kf-keep-friends + .kf-keep-others:before
  content: "+ "

.kf-keep:not(.mine) .kf-keep-you + .keep-kept-this:before
  content: "Nobody has "
  line-height: 23px

// preview arrow
.kf-keep-arrow-1
  position: absolute
  top: 26px
  bottom: 0
  right: 16px
  width: 22px

.kf-keep-arrow-2
  display: table
  table-layout: fixed
  width: 100%
  height: 100%

.kf-keep-arrow-3
  display: table-cell
  vertical-align: middle

.kf-keep-arrow-4
  display: inline-block
  width: 6px
  height: 16px
  border: solid transparent
  border-width: 4px 8px
  background: url(../img/arrow-r.png) left/13px 16px no-repeat content-box
  transition: transform .2s
  cursor: pointer

  &:hover
    border-color: rgba(0,0,0,.05)
    background-color: rgba(0,0,0,.05)

  .kf-keep:hover &
    background-position: right

  .kf-keep.detailed &
    background-position: right
    transform: scale(-1,1)

// preview button
.kf-keep-hover-button-wrapper
  display: none
  position: absolute
  right: 0
  top: 0
  width: 1px
  height: 100%

  .kf-keep:hover &
    display: block

.kf-keep-hover-button-table
  display: table
  width: 100%
  height: 100%

.kf-keep-hover-button-cell
  display: table-cell
  vertical-align: middle

.kf-keep-hover-button
  position: absolute
  right: 16px
  padding: 7px 12px
  border: 1px solid transparent
  border-radius: 9px
  font-size: 11px
  color: #fff
  background: #67829c
  cursor: pointer
  user-select: none

  .kf-keep.detailed &
    background: #67829c

.kf-keep-button-close
  display: none

  .kf-keep.detailed &
    display: block

.kf-keep.detailed .kf-keep-button-preview
  display: none
