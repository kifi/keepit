.kf-keep
  position: relative
  padding-left: 30px
  border-top: 1px solid #f9f9f9
  background-color: white
  box-sizing: border-box

  &.detailed
    background-color: #eff2f7

  &.selected
    background-color: #fffcf1
    border-color: #f0f0f0

  &.ui-draggable-dragging
    border-top: none

  &.toggling
    overflow: hidden
    transition: height .3s ease-in-out

  &.unkept
    height: 0 !important

  &:before
    content: " "
    display: block
    height: 10px

  &:after
    content: " "
    display: block
    height: 13px

.kf-keep-handle
  display: none
  position: absolute
  top: 0
  bottom: 0
  left: 0
  width: 21px
  background: url(../img/drag-handle.png) center/10px no-repeat
  cursor: move

.kf-keep-checkbox
  display: none
  position: absolute
  left: 3px
  top: 4px
  width: 15px
  height: 15px
  background: url(../img/check.png) 99px/12px 8px no-repeat #fff
  cursor: pointer

// preview arrow
.kf-keep-arrow-1
  position: absolute
  top: 26px
  bottom: 0
  right: 16px
  width: 22px

.kf-keep-arrow-2
  display: table
  table-layout: fixed
  width: 100%
  height: 100%

.kf-keep-arrow-3
  display: table-cell
  vertical-align: middle

.kf-keep-arrow-4
  display: inline-block
  width: 6px
  height: 16px
  border: solid transparent
  border-width: 4px 8px
  background: url(../img/arrow-r.png) left/13px 16px no-repeat content-box
  transition: transform .2s
  cursor: pointer

  &:hover
    border-color: rgba(0,0,0,.05)
    background-color: rgba(0,0,0,.05)

  .kf-keep:hover &
    background-position: right

  .kf-keep.detailed &
    background-position: right
    transform: scale(-1,1)

// preview button
.kf-keep-hover-button-wrapper
  display: none
  position: absolute
  right: 0
  top: 0
  width: 1px
  height: 100%

  .kf-keep:hover &
    display: block

.kf-keep-hover-button-table
  display: table
  width: 100%
  height: 100%

.kf-keep-hover-button-cell
  display: table-cell
  vertical-align: middle

.kf-keep-hover-button
  position: absolute
  right: 16px
  padding: 7px 12px
  border: 1px solid transparent
  border-radius: 9px
  font-size: 11px
  color: #fff
  background: #67829c
  cursor: pointer
  user-select: none

  .kf-keep.detailed &
    background: #67829c

.kf-keep-button-close
  display: none

  .kf-keep.detailed &
    display: block

.kf-keep.detailed .kf-keep-button-preview
  display: none
