keepBorderWidth = 1px
keepBorderRadius = 10px
keepBorderRadiusEditing = 3px
keepEditToolsWidth = 28px
tagOutlineColor = #bdc4c9
kifiGreen = #73c583

.kf-keep
.kf-keep-selection-tools
  box-sizing: border-box
  margin-bottom: 10px
  background-color: white
  box-shadow: 0 0 0 .5px defaultBorderColor  // half-pixel border workaround crbug.com/236371

  @media (min-width: 480px)
    box-shadow: none  // important not to use box-shadow here (for recommended keep cards)
    border: defaultBorder

.kf-keep-selection-tools
  border-radius: keepBorderRadius keepBorderRadiusEditing keepBorderRadiusEditing keepBorderRadius
  margin-left: keepBorderWidth - keepEditToolsWidth

.kf-keep-selection-tools-body
  padding: 0 0 7px 27px

.kf-keep-selected-count
  text-align: center
  font-size: 14px
  padding: 10px 0 5px

.kf-keep-selected-count-number
  font-size: 28px
  font-family: Lato, Arial, sans-serif
  font-weight: bold

.kf-keep-selection-options
  position: relative
  background-color: #eee
  color: linkColor
  font-size: 13px
  font-smoothing: antialiased
  text-align: center
  user-select: none
  padding: 12px 20px
  margin: 7px 20px

.kf-keep-selection-options-mask
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  display: none

.kf-keep-selection-options.disabled
  background-color: #f5f5f5

  .kf-keep-selection-option
    color: textLightGrey

  .kf-keep-selection-options-mask
    display: block

.kf-keep-selection-option
  display: inline-block
  color: linkBlueColor

  span
    cursor: pointer

.kf-keep-selection-option + .kf-keep-selection-option::before
  content: "|"
  padding: 5px

.kf-keep
  position: relative
  border-radius: keepBorderRadius

  &.detailed
    background-color: #eff2f7

  &.selected.detailed
    background-color: #F7F7F5

  &.ng-hide-add
  &.ng-hide-remove
    transition: max-height 0.3s
    display: block !important
    overflow: hidden

  &.ng-hide-add.ng-hide-add-active
  &.ng-hide-remove
    max-height: 0

  &.ng-hide-add
  &.ng-hide-remove.ng-hide-remove-active
    max-height: 400px

  &.editing
    border-radius: 0 keepBorderRadiusEditing keepBorderRadiusEditing

    .kf-keep-edit-tools
      display: block

.kf-keep-body
  padding: 0 16px 3px

  @media (min-width: 480px)
    padding: 0 20px 4px

  @media (min-width: 560px)
    padding: 0 24px 5px

  @media (min-width: 720px)
    padding: 0 30px 5px

.kf-keep-contents
  padding: 20px 0 0
  overflow: hidden

.kf-keep-who
  display: inline-block
  margin: 8px 0
  padding: 6px 35px 5px 0
  background-size: 9px 10px
  background-repeat: no-repeat
  background-position: 0 0

  @media (max-width: 479px)
    margin: 6px 0

.kf-keep-who-text
  font-size: 12px
  color: #99a3b3

  @media (max-width: 479px)
    font-size: 11px
    font-smoothing: antialiased

.kf-keep-who-pic-box
  display: inline-block
  margin: 4px 4px 0 0
  height: 23px
  border-radius: 50%

  @media (max-width: 479px)
    margin: 2px 1px 0 0
    height: 18px

.kf-keep-who-pic
  position: relative
  display: inline-block
  vertical-align: top
  border-radius: 50%
  background-size: 100%
  width: 23px
  height: 23px

  @media (max-width: 479px)
    width: 18px
    height: 18px

.kf-keep-footer
  background-color: #f9f9f9
  font-size: 12px
  font-weight: 200
  color: #5983bd
  padding: 0 20px
  line-height: 37px
  border-bottom-left-radius: inherit
  border-bottom-right-radius: inherit

  a:active
    color: #92add3

.kf-keep-footer-buttons-wrapper
  padding: 7px 5px

  .kf-button
    float: right
    height: 30px
    line-height: 30px
    padding: 0 10px 0 12px
    margin-right: 10px

  .kf-button-icon
    width: 16px

.kf-keep-master-btn
  &.state-kept-public
    color: #73c885

  &.state-kept-private
    color: libraryRed

  .kf-button-icon
    margin-right: 3px

  .svg-small-lock
    width: 10px
    margin-top: -1px
    margin-left: -2px

.kf-keep-footer-link a
  color: linkBlueColor
  cursor: pointer

  &:hover
    text-decoration: underline

  &:active
    text-decoration: underline

.kf-keep-footer-link + .kf-keep-footer-link:before
    content: "Â·"
    color: textGreyColor
    padding: 0 6px 0 5px

.kf-keep-edit-tools
  display: none
  position: absolute
  top: -1px
  left: -(keepEditToolsWidth)
  width: keepEditToolsWidth
  background-color: #fff
  border: defaultBorder
  border-right: none
  border-radius: keepBorderRadius 0 0 keepBorderRadius
  box-sizing: border-box

.kf-keep-checkbox-icon
  float: left
  margin: 20px 0 20px 5px

.kf-keep-big-image-container
  width: 100%

.kf-keep-content-line
  width: 100%
  position: relative

.kf-keep-big-image
  margin: 4px 0 11px

.kf-keep-big-image
  display: block
  max-width: 100%
  max-height: 400px
  margin: 0 auto

.kf-keep-small-image
  width: 150px
  vertical-align: top
  float: right
  padding-top: 5px
  padding-left: 20px
  min-width: 90px

  @media screen and (min-width: 1150px) and (max-width: 1250px)
    width: 150px

  @media screen and (min-width: 1024px) and (max-width: 1149px)
    width: 100px

  @media screen and (min-width: 800px) and (max-width: 950px)
    width: 150px

  @media screen and (max-width: 319px)
    display: none

.kf-keep-image
  width: 100%

.kf-keep-small-image + .kf-keep-info
  padding-left: 20px

.kf-keep-info-wrap
  position: relative
  display: block
  overflow: hidden

.kf-keep-title
  margin-bottom: 12px
  font: 900 18px/1.12 Lato,sans-serif
  font-smoothing: antialiased
  word-break: break-word

  @media (min-width: 480px)
    font-size: 21px

  @media (min-width: 560px)
    font-size: 24px

  @media (min-width: 720px)
    font-size: 27px

.kf-keep-title-link[href]
  color: textBlackColor

.kf-keep-youtube-content
  width: 100%

.kf-youtube
  height: 360px
  margin-bottom: 5px
  cursor: pointer
  background-color: #000

.kf-youtube-img
  width: 100%
  height: 100%
  background-position: center center
  background-size: cover

.kf-youtube-play
  height: 50px
  width: 70px
  background: url(/img/youtube-play-red.png)
  background-size: 70px 50px;
  background-repeat: no-repeat;
  position: relative
  top: calc(-50% - 25px)
  left: calc(50% - 35px)
  opacity: 0.8

  &:hover
    opacity: 1.0

.kf-keep-loading
  padding-right: 5px

.kf-keep-subtitle
  margin-bottom: 14px
  line-height: 11px
  color: #909aa8
  vertical-align: middle
  font-smoothing: antialiased
  font-size: 12px

  @media (min-width: 480px)
    font-size: 13px

.kf-keep-url
  display: inline-block
  vertical-align: text-bottom
  height: 13px
  font-weight: 500
  long-text()
  max-width: calc(100% - 60px)
  color: #74C485

  @media (min-width: 480px)
    max-width: calc(100% - 100px)

.kf-keep-twitter-attr
  margin-left: 15px

  a
    color: #909aa8
    outline: none

  @media (max-width: 479px)
    margin-left: 8px

.kf-keep-twitter-logo
  display: inline-block
  width: 16px
  height: 14px
  margin-right: 5px
  background-size: cover
  vertical-align: -3px

  @media (max-width: 479px)
    width: 14px
    height: 12px

.kf-keep-time
  @media (max-width: 479px)
    display: none

.kf-keep-length
  @media (max-width: 479px)
    font-size: 11px

    .sprite-small-clock
      display: none

.kf-keep-time::before
.kf-keep-length::before
  content: '\2022'
  display: inline-block
  vertical-align: 2px
  padding: 0 8px 0 6px
  font-size: 7px

  @media (max-width: 479px)
    padding: 0 4px 0 3px
    font-size: 6px

.kf-keep-description
  font: 12px/1.4 Lato,Helvetica,Arial,sans-serif
  font-smoothing: antialiased
  color: textBlackColor
  word-break: break-word

  @media (min-width: 480px)
    font-size: 13px

  @media (min-width: 560px)
    font-size: 14px

  @media (min-width: 720px)
    font-size: 16px

.kf-keep-description-sizer
  position: absolute
  visibility: hidden
  z-index: -1
  top: -999px
  left: -999px
