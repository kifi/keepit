keepBorderWidth = 1px
keepBorderRadius = 10px
keepEditToolsWidth = 28px
tagOutlineColor = #bdc4c9
kifiGreen = #73c583

.kf-keep
.kf-keep-selection-tools
  box-sizing: border-box
  margin-bottom: 10px
  background-color: white
  border-radius: keepBorderRadius
  box-shadow: 0 0 0 .5px defaultBorderColor  // half-pixel border workaround crbug.com/236371

  @media (min-width: 480px)
    box-shadow: none  // important not to use box-shadow here (for recommended keep cards)
    border: defaultBorder

.kf-keep-selection-tools-body
  padding: 0 0 7px 27px

.kf-keep-selection-tags
  overflow: hidden

.kf-keep-selection-tags-list
  overflow: hidden

.kf-keep-selection-tags-done
  float: right

.kf-edit-keeps-label
.kf-keep-selection-tags-done
  color: linkColor
  cursor: pointer
  user-select: none

.kf-keep-selection-tags-done
  vertical-align: middle
  font-size: 13px
  font-smoothing: antialiased
  line-height: 33px

.kf-keep-selection-tools
  margin-left: keepBorderWidth - keepEditToolsWidth
  margin-right: 25px

.kf-keep-selected-count
  text-align: center
  font-size: 14px
  padding: 10px 0 5px

.kf-keep-selected-count-number
  font-size: 28px
  font-family: Lato, Arial, sans-serif
  font-weight: bold

.kf-keep-selection-options
  position: relative
  background-color: #eee
  color: linkColor
  font-size: 13px
  font-smoothing: antialiased
  text-align: center
  user-select: none
  padding: 12px 20px
  margin: 7px 20px

.kf-keep-selection-options-mask
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  display: none

.kf-keep-selection-options.disabled
  background-color: #f5f5f5

  .kf-keep-selection-option
    color: textLightGrey

  .kf-keep-selection-options-mask
    display: block

.kf-keep-selection-tags
  margin: 0px 20px

.kf-keep-selection-option
  display: inline-block
  color: linkBlueColor

  span
    cursor: pointer

.kf-keep-selection-option + .kf-keep-selection-option::before
  content: "|"
  padding: 5px

.kf-keep
  position: relative

  &.detailed
    background-color: #eff2f7

  &.selected.detailed
    background-color: #F7F7F5

  &.toggling
    overflow: hidden
    transition: height .3s ease-in-out

  &.ng-hide-add
  &.ng-hide-remove
    transition: max-height 0.3s linear
    display: block !important

  &.ng-hide-add.ng-hide-add-active
  &.ng-hide-remove
    max-height: 0

  &.ng-hide-add
  &.ng-hide-remove.ng-hide-remove-active
    max-height: 200px

  &.editing
    border-radius: 0 3px 3px

    .kf-keep-edit-tools
      display: block

.kf-keep-body
  padding: 0 16px 3px

  @media (min-width: 480px)
    padding: 0 20px 4px

  @media (min-width: 560px)
    padding: 0 24px 5px

  @media (min-width: 720px)
    padding: 0 30px 5px

.kf-keep-contents
  padding: 20px 0 0
  overflow: hidden

.kf-keep-who
  padding: 6px 35px 5px 0
  background-size: 9px 10px
  background-repeat: no-repeat
  background-position: 0 0

.kf-keep-footer
  background-color: #f9f9f9
  font-size: 12px
  font-weight: 200
  color: #5983bd
  padding: 0 20px
  line-height: 37px
  border-bottom-left-radius: inherit
  border-bottom-right-radius: inherit

  a:active
    color: #92add3

.kf-keep-footer-buttons-wrapper
  padding: 7px 5px

  .kf-button
    float: right
    height: 30px
    line-height: 30px
    padding: 0 10px 0 12px
    margin-right: 10px

  .kf-button-icon
    width: 16px

.kf-keep-tag-button
  .kf-button-icon
    width: 14px
    margin-right: 4px

.kf-keep-master-btn
  &.state-kept-public
    color: #73c885

  &.state-kept-private
    color: libraryRed

  .kf-button-icon
    margin-right: 3px

  .svg-small-lock
    width: 10px
    margin-top: -1px
    margin-left: -2px

.kf-keep-footer-link a
  color: linkBlueColor
  cursor: pointer

  &:hover
    text-decoration: underline

  &:active
    text-decoration: underline

.kf-keep-footer-link + .kf-keep-footer-link:before
    content: "Â·"
    color: textGreyColor
    padding: 0 6px 0 5px

.kf-keep-edit-tools
  display: none
  position: absolute
  top: -1px
  left: -(keepEditToolsWidth)
  width: keepEditToolsWidth
  background-color: #fff
  border: defaultBorder
  border-right: none
  border-radius: keepBorderRadius 0 0 keepBorderRadius
  box-sizing: border-box

.kf-keep-checkbox-icon
  float: left
  margin: 20px 0 20px 5px

.kf-keep-big-image-container
  width: 100%

.kf-keep-content-line
  width: 100%
  position: relative

.kf-keep-big-image
  margin: 4px 0 11px

.kf-keep-big-image
  display: block
  max-width: 100%
  max-height: 400px
  margin: 0 auto

.kf-keep-small-image
  width: 150px
  vertical-align: top
  float: right
  padding-top: 5px
  padding-left: 20px
  min-width: 90px

  @media screen and (min-width: 1150px) and (max-width: 1250px)
    width: 150px

  @media screen and (min-width: 1024px) and (max-width: 1149px)
    width: 100px

  @media screen and (min-width: 800px) and (max-width: 950px)
    width: 150px

  @media screen and (max-width: 319px)
    display: none

.kf-keep-image
  width: 100%

.kf-keep-small-image + .kf-keep-info
  padding-left: 20px

.kf-keep-info-wrap
  position: relative
  display: block
  overflow: hidden

.kf-keep-title
  margin-bottom: 12px
  font: 900 18px/1.12 Lato,sans-serif
  font-smoothing: antialiased
  word-break: break-word

  @media (min-width: 480px)
    font-size: 21px

  @media (min-width: 560px)
    font-size: 24px

  @media (min-width: 720px)
    font-size: 27px

.kf-keep-title-link[href]
  color: textBlackColor

.kf-keep-youtube-content
  width: 100%

.kf-youtube
  height: 360px
  margin-bottom: 5px
  cursor: pointer
  background-color: #000

.kf-youtube-img
  width: 100%
  height: 100%
  background-position: center center
  background-size: cover

.kf-youtube-play
  height: 50px
  width: 70px
  background: url(/img/youtube-play-red.png)
  background-size: 70px 50px;
  background-repeat: no-repeat;
  position: relative
  top: calc(-50% - 25px)
  left: calc(50% - 35px)
  opacity: 0.8

  &:hover
    opacity: 1.0

.kf-keep-loading
  padding-right: 5px

.kf-keep-subtitle
  margin-bottom: 14px
  line-height: 11px
  color: #909aa8
  vertical-align: middle
  font-smoothing: antialiased
  font-size: 12px

  @media (min-width: 480px)
    font-size: 13px

.kf-keep-url
  display: inline-block
  vertical-align: text-bottom
  height: 13px
  font-weight: 500
  long-text()
  max-width: calc(100% - 60px)
  color: #74C485

  @media (min-width: 480px)
    max-width: calc(100% - 100px)

.kf-keep-twitter-attr
  margin-left: 15px

  @media (max-width: 479px)
    margin-left: 5px

.kf-keep-twitter-logo
  display: inline-block
  width: 16px
  height: 14px
  margin-right: 5px
  background-size: cover
  vertical-align: -3px

  @media (max-width: 479px)
    display: none

.kf-keep-time
  @media (max-width: 479px)
    display: none

.kf-keep-length
  @media (max-width: 479px)
    font-size: 11px

    .sprite-small-clock
      display: none

.kf-keep-time::before
.kf-keep-length::before
  content: '\2022'
  display: inline-block
  vertical-align: 2px
  padding: 0 8px 0 6px
  font-size: 7px

  @media (max-width: 479px)
    padding: 0 4px 0 3px
    font-size: 6px

.kf-keep-description
  font: 12px/1.4 Lato,Helvetica,Arial,sans-serif
  font-smoothing: antialiased
  color: textBlackColor
  word-break: break-word

  @media (min-width: 480px)
    font-size: 13px

  @media (min-width: 560px)
    font-size: 14px

  @media (min-width: 720px)
    font-size: 16px

.kf-keep-description-sizer
  position: absolute
  visibility: hidden
  z-index: -1
  top: -999px
  left: -999px

// tag

tagMaxWidth1 = 120px
tagMaxWidth2 = 150px
tagSidePad1 = 6px
tagSidePad2 = 9px

.kf-keep-tags
  margin-top: 12px
  box-shadow: 0 -1px #e7e7e7
  padding: 16px 0

  @media (max-width: 479px)
    margin-top: 4px
    padding: 12px 0
    box-shadow: 0 -.5px #e7e7e7

.kf-keep-tag
  display: inline-block
  vertical-align: top
  margin-top: 3px
  position: relative  // for kf-keep-tag-x
  white-space: nowrap

  &.removed
    width: 0 !important
    transition: width .12s ease-in-out

.kf-keep-tag-a
  display: block
  long-text()
  max-width: tagMaxWidth1 - 2 * tagSidePad1
  font-smoothing: antialiased
  color: #777

  @media (min-width: 480px)
    max-width: tagMaxWidth2 - 2 * tagSidePad2

  &:active
    color: clearBlueColor

.kf-keep-tag-a
input.kf-keep-tag-input-new
  line-height: 17px
  font-size: 11px

  @media (min-width: 480px)
    line-height: 20px
    font-size: 12px

.kf-keep-tag-x
  position: absolute
  right: 2px
  top: -2px
  cursor: pointer
  color: kifiGreen

  :not(:hover)>&
    display: none

.kf-keep-add-tag-link
  background-size: 20px 20px
  background-repeat: no-repeat
  background-position: 0 2px
  width: 20px
  height: 23px
  display: block
  cursor: pointer

.kf-keep-tag
.kf-keep-tag-add-tag-wrapper
  vertical-align: top
  border-radius: 3px
  padding: 1px tagSidePad2
  margin-right: 6px
  margin-bottom: 3px
  box-shadow: 0 0 0 1px tagOutlineColor

  @media (max-width: 479px)
    padding: 1px tagSidePad1
    box-shadow: 0 0 0 .5px tagOutlineColor

.kf-keep-tag
input.kf-keep-tag-input-new
.kf-keep-tag-opt
.kf-keep-tag-hidden
  max-width: tagMaxWidth1
  font-size: 12px
  font-smoothing: antialiased
  color: linkBlueColor

  @media (min-width: 480px)
    max-width: tagMaxWidth1

input.kf-keep-tag-input-new
.kf-keep-tag-opt
  width: tagMaxWidth1

  @media (min-width: 480px)
    width: tagMaxWidth2

input.kf-keep-tag-input-new
  vertical-align: top

.kf-keep-tag-opt
  padding: 3px tagSidePad2
  long-text()

  @media (max-width: 479px)
    padding: 3px tagSidePad1

.kf-keep-tag-opts-container
  position: absolute

.kf-keep-tag-opts-new
  position: relative
  left: -(tagSidePad2) - 1px
  top: 1px
  border: 1px solid tagOutlineColor
  border-radius: 3px
  background-color: #fff
  z-index: 1
  box-sizing: border-box

  @media (max-width: 479px)
    left: -(tagSidePad1) - 1px

.kf-keep-tag-opt
  cursor: pointer

.kf-keep-tag-opt.current
  background-color: #eee

.kf-keep-tag-opt-new-text
  long-text()

.kf-keep-tag-opt-new-label
  float: right
  font-size: 9px
  padding: 2px 3px 1px 3px
  margin-left: 5px
  background-color: blueColor
  color: #fff

.kf-keep-tag-hidden
  position: absolute
  white-space: nowrap
  visibility: hidden

// preview button
.kf-keep-hover-button-wrapper
  display: none
  position: absolute
  right: 0
  top: 0
  width: 1px
  height: 100%

  .kf-keep:hover &
    display: block

.kf-keep-hover-button-table
  display: table
  width: 100%
  height: 100%

.kf-keep-hover-button-cell
  display: table-cell
  vertical-align: middle

.kf-keep-hover-button
  position: absolute
  right: 16px
  padding: 7px 12px
  border: 1px solid transparent
  border-radius: 9px
  font-size: 11px
  color: #fff
  background: #67829c
  cursor: pointer
  user-select: none

  .kf-keep.detailed &
    background: #67829c

.kf-keep-button-close
  display: none

  .kf-keep.detailed &
    display: block

.kf-keep.detailed .kf-keep-button-preview
  display: none

.kf-keep-tag-add-tag-wrapper
  display: inline-block
  margin-top: 3px

  &:not(.kf-adding)
    padding-left: 2px
    box-shadow: none

.kf-keep-add-tag-button-new
  display: inline-block
  vertical-align: top
  cursor: pointer
  width: 20px
  height: 20px

.kf-keep-loader
  position: relative
  top: 2px
  width: 16px
  height: 16px
  border-radius: 50%
  display: inline-block
  vertical-align: middle
  background-color: #6fa6ef
  margin: 0 8px 5px 0

.kf-keep-loader
.kf-keep-loader:before
.kf-keep-loader:after
    animation: 1s infinite linear

.kf-keep-loader:before
.kf-keep-loader:after
    width: 100%
    height: 100%
    border-radius: 50%
    position: absolute
    top: 0
    left: 0

.kf-keep-loader
  animation-name: kf-keep-loader

@keyframes kf-keep-loader {
  from {
    transform: scale(0)
    opacity: 1
  }
  to {
    transform: scale(1)
    opacity: 0
  }
}
