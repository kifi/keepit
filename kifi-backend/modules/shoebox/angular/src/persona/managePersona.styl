.kf-persona-modal
  height: 470px

.kf-mp
  position: relative

  .kf-mp-close-x
    visibility: hidden

    &.visible
      visibility: visible

  .dialog-header
    padding: 10px 0 20px
    text-align: center
    border-bottom: none
    font-size: 20px

  .dialog-body
    padding: 20px 20px

  .dialog-body-wrap
    margin: 0
    padding: 0

  .kf-mp-table
    text-align: center

  .kf-mp-icon
    position: relative
    display: inline-block
    width: 100px
    height: 90px
    padding-top: 5px
    margin: 8px
    border-radius: 3px
    border: 1px solid libraryGreen
    background-color: #fff
    cursor: pointer
    vertical-align: top
    text-align: center
    color: libraryGreen
    transition: background-color linear 0.1s

    &.active
      background-color: libraryGreen
      color: white

    &.active:hover
      background-color: #81cd91

    &:hover
      background-color: #f1f9f3

  .kf-mp-icon-image-wrapper
    width: calc(100% - 20px)
    height: calc(100% - 20px)
    margin: 0 auto

  .kf-mp-icon-image
    position: relative
    top: 50%
    transform: translateY(-50%)
    max-width: 60%
    max-height: 70%

  .kf-mp-icon-display-name
    position: absolute
    top: calc(100% - 23px)
    width: 100%
    line-height: 13px
    font-size: 10px
    font-weight: 100
    text-transform: uppercase

  .dialog-button
    margin-top: 15px

  .kf-mp-exit-button
    position: relative
    left: 50%
    transform: translateX(-50%)
    background-color: #fff
    color: #ddd
    border: none
    cursor: inherit

    &.active
      color: libraryGreen
      cursor: pointer

  .kf-mp-logo-overlay
    width: 150px
    height: 40px
    margin: 0 auto
    background-color: white
    z-index: 5

  .kf-mp-loading-logo
    position: relative
    top: 10px
    left: 15px
    width: 30px
    height: 30px
    margin: 0 auto
    animation: jump-spin 2s linear infinite

