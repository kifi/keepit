{
  // http://www.jshint.com/docs/options

  // Enforcing options
  "bitwise": true,
  "camelcase": false,
  "curly": true,
  "eqeqeq": true,
  "es3": true,
  "forin": true,
  "immed": true,
  "indent": 2,
  "latedef": "nofunc",
  "newcap": true,
  "noarg": true,
  "noempty": true,
  "nonew": true,
  "plusplus": false,
  "quotmark": "single",
  // This option prohibits the use of unsafe . in regular expressions.
  "regexp": true,
  "undef": true,
  "unused": true,
  "strict": true,
  "trailing": true,

  "maxparams": 5,
  "maxdepth": 3,
  "maxstatements": 25,
  "maxcomplexity": 10,
  "maxlen": 160,

  // Relaxing options
  "asi": false,
  "boss": false,
  "debug": false,
  "eqnull": true,
  // This option tells JSHint that your code uses ECMAScript 5 specific features such as getters and setters. Note that not all browsers implement these features.
  "es5": false,
  "esnext": false,
  "evil": false,
  "expr": false,
  "funcscope": false,
  "globalstrict": true,
  "iterator": false,
  "lastsemic": false,
  "laxbreak": false,
  "laxcomma": false,
  "loopfunc": false,
  "moz": false,
  "multistr": false,
  // This option suppresses warnings about switches with just one case. Most of the time you want to use if instead of switch if there is only one case. However, some code generators prefer to generate switch statements.
  "onecase": false,
  "proto": false,
  // This option suppresses warnings about unescaped - in the end of regular expressions.
  "regexdash": false,
  "scripturl": false,
  "smarttabs": false,
  "shadow": false,
  "sub": false,
  "supernew": false,
  "validthis": true,

  // Environments
  "browser": true,
  "couch": false,
  "devel": false,
  "dojo": false,
  "jquery": false,
  "mootools": false,
  "node": false,
  "nonstandard": false,
  "phantom": false,
  "prototypejs": false,
  "rhino": false,
  "worker": false,
  "wsh": false,
  "yui": false,

  // Legacy
  "nomen": false,
  "onevar": false,
  "passfail": false,
  "white": true,

  // Globals
  "globals": {
    "angular": true,
    "_": true,
    "angulartics": true,
    "Fuse": true
  },

  "-W093": false,
  "-W072": false, // function has too many parameters
  "-W071": false // function has too many statements
}
