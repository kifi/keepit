.kifi-search-intro
  position: absolute
  z-index: 999
  top: 0
  right: -370px
  width: 340px
  border: 2px solid #b8c5d2
  border-radius: 5px
  box-shadow: rgba(0,40,90,.2) 5px 4px 0 2px
  padding: 32px 0 24px
  font-size: 14px
  line-height: 21px
  text-align: center
  color: #444
  -webkit-font-smoothing: antialiased
  opacity: 0
  -webkit-transform-origin: left 33%
  transform-origin: left 33%
  -webkit-transform: scale(.3,.3)
  transform: scale(.3,.3)
  transition: top .2s ease-in-out, opacity .2s linear, -webkit-transform .2s ease-in
  transition: top .2s ease-in-out, opacity .2s linear, transform .2s ease-in
  background: #fff 12px 12px/24px 14px no-repeat
  background-image: url("data:image/png;base64,")

@media (min-resolution: 1.3dppx)
  .kifi-search-intro
    background-image: url("data:image/png;base64,")

.kifi-res-bar.kifi-collapsed~.kifi-search-intro
  top: -36px

.kifi-search-intro.kifi-showing
  opacity: 1
  -webkit-transform: none
  transform: none
  transition-timing-function: ease-in-out, linear, ease-out
  transition-duration: .2s, .3s, .3s

.kifi-search-intro-h
  line-height: 24px
  font-size: 18px
  color: #6fa6ef
  margin-bottom: 12px

.kifi-search-intro-x
  position: absolute
  top: 7px
  right: 7px
  height: 22px
  width: 22px
  border-radius: 50%

.kifi-search-intro-x:before,
.kifi-search-intro-x:after
  content: ' '
  position: absolute
  top: 4px
  bottom: 4px
  left: 50%
  width: 1px
  background: #b1b8c1
  font-size: 0

.kifi-search-intro-x:before
  -webkit-transform: translate(-.5px) rotate(45deg)
  transform: translate(-.5px) rotate(45deg)

.kifi-search-intro-x:after
  -webkit-transform: translate(-.5px) rotate(-45deg)
  transform: translate(-.5px) rotate(-45deg)

.kifi-search-intro-x:hover:before,
.kifi-search-intro-x:hover:after,
.kifi-search-intro-x:focus:before,
.kifi-search-intro-x:focus:after
  background: #8e939a

.kifi-search-intro-x:active:before,
.kifi-search-intro-x:active:after
  background: #fff

.kifi-search-intro-x:active
  background: #d0d4da

.kifi-search-intro-tri-shadow::after,
.kifi-search-intro::after
  content: ' '
  position: absolute
  height: 14px
  width: 14px
  -webkit-transform-origin: left top
  transform-origin: left top
  -webkit-transform: scale(1.2,1) rotate(45deg)
  transform: scale(1.2,1) rotate(45deg)

.kifi-search-intro::after
  left: 0
  top: 36px
  border: inherit
  border-top-color: transparent
  border-right-color: transparent
  background-color: inherit

.kifi-search-intro-tri-shadow::after
  top: -4px
  right: -17px
  left: auto
  border-radius: 3px
  background-color: rgba(0,40,90,.2)

.kifi-search-intro-tri-shadow
  position: absolute
  top: 50px
  left: -12px
  height: 16px
  width: 10px
  overflow: hidden

