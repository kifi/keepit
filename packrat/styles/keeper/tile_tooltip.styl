.kifi-tile-tooltip
  position: fixed
  z-index: 999999999991
  right: 12px
  bottom: 76px
  min-width: 400px
  text-align: center
  border: 2px solid #b8c5d2
  border-radius: 5px !important
  box-shadow: rgba(0,40,90,.2) 5px 4px 0 2px
  font-size: 14px
  line-height: 21px
  color: #444
  -webkit-font-smoothing: antialiased
  opacity: 0
  -webkit-transform-origin: 93% bottom
  transform-origin: 93% bottom
  -webkit-transform: scale(.3,.3)
  transform: scale(.3,.3)
  transition: opacity .2s linear, -webkit-transform .2s ease-in
  transition: opacity .2s linear, transform .2s ease-in
  background: #fff 12px 12px/24px 14px no-repeat
  background-image: url("data:image/png;base64,")

@media (min-resolution: 1.3dppx)
  .kifi-tile-tooltip
    background-image: url("data:image/png;base64,")

.kifi-tile-tooltip.kifi-showing
  opacity: 1
  -webkit-transform: none
  transform: none
  transition-timing-function: linear, ease-out
  transition-duration: .3s

.kifi-tile-tooltip-body
  display: inline-block
  text-align: left
  padding: 16px 24px

.kifi-tile-tooltip-h
  width: 100%
  line-height: 24px
  font-size: 18px
  color: #6fa6ef
  margin-bottom: 18px
  text-align: center

.kifi-tile-tooltip-ul
  margin: 6px 0 12px
  padding-left: 16px

.kifi-tile-tooltip-li
  display: list-item

.kifi-tile-tooltip-tip::before
  content: 'Tip: '
  font-size: 13px
  font-weight: bold
  margin-right: 2px

.kifi-tile-tooltip-x
  position: absolute
  top: 7px
  right: 7px
  height: 22px
  width: 22px
  border-radius: 50% !important

.kifi-tile-tooltip-x:before,
.kifi-tile-tooltip-x:after
  content: ' '
  position: absolute
  top: 4px
  bottom: 4px
  left: 50%
  width: 1px
  background: #b1b8c1
  font-size: 0

.kifi-tile-tooltip-x:before
  -webkit-transform: translate(-.5px) rotate(45deg)
  transform: translate(-.5px) rotate(45deg)

.kifi-tile-tooltip-x:after
  -webkit-transform: translate(-.5px) rotate(-45deg)
  transform: translate(-.5px) rotate(-45deg)

.kifi-tile-tooltip-x:hover:before,
.kifi-tile-tooltip-x:hover:after,
.kifi-tile-tooltip-x:focus:before,
.kifi-tile-tooltip-x:focus:after
  background: #8e939a

.kifi-tile-tooltip-x:active:before,
.kifi-tile-tooltip-x:active:after
  background: #fff

.kifi-tile-tooltip-x:active
  background: #d0d4da

.kifi-tile-tooltip::after,
.kifi-tile-tooltip-tri-shadow::after
  content: ' '
  position: absolute
  -webkit-transform-origin: left bottom
  transform-origin: left bottom
  -webkit-transform: skewX(35deg) scale(.8,1.6) rotate(45deg)
  transform: skewX(35deg) scale(.8,1.6) rotate(45deg)

.kifi-tile-tooltip::after
  height: 16px
  width: 16px
  bottom: 0
  right: 20px
  border: inherit
  border-top-color: transparent
  border-left-color: transparent
  background-color: inherit

.kifi-tile-tooltip-tri-shadow::after
  top: -20px
  left: 5px
  height: 20px
  width: 20px
  background-color: rgba(0,40,90,.2)
  border-bottom-right-radius: 6px

.kifi-tile-tooltip-tri-shadow
  position: absolute
  bottom: -28px
  right: 2px
  height: 20px
  width: 36px
  overflow: hidden

.kifi-tile-tooltip a:link,
.kifi-tile-tooltip a:visited
  color: #6fa6ef

.kifi-tile-tooltip a:hover
  color: #6495d7

.kifi-tile-tooltip a:active
  color: #8cb8f2

